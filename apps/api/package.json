{
  "name": "kikaku-os-api",
  "version": "0.1.0",
  "private": true,
  "module": "esnext",
  "type": "module",
  "scripts": {
    "dev": "wrangler dev --local --config ../../wrangler.toml --port ${PORT:-8787}",
    "build": "tsc --noEmit -p tsconfig.build.json",
    "test": "vitest run",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts'",
    "test:integration": "vitest run --include '**/*.integration.test.ts'",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit -p tsconfig.build.json",
    "smoke": "./scripts/smoke.sh",
    "smoke:ok": "./scripts/smoke-ok.sh"
  },
  "dependencies": {
    "@clerk/backend": "^2.29.3",
    "@cloudflare/playwright": "^1.1.0",
    "@hono/zod-validator": "^0.7.6",
    "@sentry/cloudflare": "^10.38.0",
    "hono": "^4.5.0",
    "resend": "^4.0.0",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20240614.0",
    "@vitest/coverage-v8": "^1.6.1",
    "typescript": "^5.9.3",
    "vitest": "^1.6.1",
    "wrangler": "^4.59.1"
  }
}
