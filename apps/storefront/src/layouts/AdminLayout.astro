---
import AdminLayoutComponent from '../components/admin/AdminLayout';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/inter/900.css';
import '@fontsource/noto-sans-jp/400.css';
import '@fontsource/noto-sans-jp/500.css';
import '@fontsource/noto-sans-jp/600.css';
import '@fontsource/noto-sans-jp/700.css';
import '@fontsource/noto-sans-jp/900.css';
import '../styles/global.css';

const { title = 'Admin - Led Kikaku OS' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<!doctype html>
<html lang="ja" class="h-full bg-white" style="color-scheme: light;">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<meta name="color-scheme" content="light" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<style>
			/* Force light mode - override any dark mode styles */
			html, body {
				background-color: white !important;
				color: #1d1d1f !important;
			}
		</style>
	</head>
	<body class="h-full font-sans antialiased bg-white text-zinc-950">
		<AdminLayoutComponent client:load currentPath={currentPath}>
			<slot />
		</AdminLayoutComponent>
	</body>
</html>
