---
import AdminLayoutComponent from '../components/admin/AdminLayout';
import { getApiBase } from '../lib/api';
import '@fontsource/inter/400.css';
import '@fontsource/inter/500.css';
import '@fontsource/inter/600.css';
import '@fontsource/inter/700.css';
import '@fontsource/inter/900.css';
import '@fontsource/noto-sans-jp/400.css';
import '@fontsource/noto-sans-jp/500.css';
import '@fontsource/noto-sans-jp/600.css';
import '@fontsource/noto-sans-jp/700.css';
import '@fontsource/noto-sans-jp/900.css';
import '../styles/global.css';

const { title = 'Admin - Led Kikaku OS' } = Astro.props;
const currentPath = Astro.url.pathname;
const apiBase = getApiBase();
const apiKey = import.meta.env.ADMIN_API_KEY;

// Fetch low stock count for sidebar badge
let lowStockCount = 0;
if (apiKey) {
	try {
		const res = await fetch(`${apiBase}/inventory/low?limit=200`, {
			headers: { 'x-admin-key': apiKey }
		});
		if (res.ok) {
			const data = await res.json() as { items?: unknown[] };
			lowStockCount = data.items?.length ?? 0;
		}
	} catch {
		// Non-critical: silently fail
	}
}

// Fetch RBAC user info for sidebar permission filtering
type RbacUserInfo = {
	role: string;
	permissions: string[];
};
let rbacUser: RbacUserInfo | null = null;
if (apiKey) {
	try {
		const res = await fetch(`${apiBase}/admin/users/me`, {
			headers: { 'x-admin-key': apiKey }
		});
		if (res.ok) {
			const data = await res.json() as { role?: string; permissions?: string[] };
			if (data.role && data.permissions) {
				rbacUser = { role: data.role, permissions: data.permissions };
			}
		}
	} catch {
		// Non-critical: silently fail, sidebar shows all items as fallback
	}
}
---

<!doctype html>
<html lang="ja" class="h-full">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<meta name="robots" content="noindex, nofollow" />
	</head>
	<body class="h-full font-sans antialiased bg-white text-zinc-950">
		<AdminLayoutComponent client:load currentPath={currentPath} lowStockCount={lowStockCount} rbacUser={rbacUser}>
			<slot />
		</AdminLayoutComponent>
	</body>
</html>
