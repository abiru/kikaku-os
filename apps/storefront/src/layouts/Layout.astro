---
const { title = 'Led Kikaku Store' } = Astro.props;
import '../styles/global.css';
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="min-h-screen">
			<header class="border-b border-zinc-200 bg-white">
				<div class="mx-auto flex h-16 max-w-7xl items-center justify-between px-4 sm:px-6 lg:px-8">
					<a href="/" class="text-lg font-semibold tracking-tight">Led Kikaku</a>
					<nav class="flex items-center gap-6 text-sm font-medium text-zinc-600">
						<a href="/products" class="transition hover:text-zinc-900">Products</a>
					</nav>
				</div>
			</header>

			<main class="flex-1">
				<slot />
			</main>

			<footer class="border-t border-zinc-200 bg-white py-8">
				<div class="mx-auto max-w-7xl px-4 text-sm text-zinc-500 sm:px-6 lg:px-8">
					Minimal storefront for Stripe Checkout flow.
				</div>
			</footer>
		</div>
	</body>
</html>
