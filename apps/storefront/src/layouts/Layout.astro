---
import Container from '../components/Container.astro';
import '../styles/global.css';

const { title = 'Led Kikaku Store' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div class="min-h-screen bg-white text-zinc-900">
			<header class="border-b border-zinc-200 bg-white">
				<Container class="flex h-16 items-center justify-between">
					<a href="/" class="text-lg font-semibold tracking-tight">Led Kikaku</a>
					<nav class="flex items-center gap-6 text-sm font-semibold text-zinc-600">
						<a href="/" class="transition hover:text-zinc-900">Store</a>
						<a href="/products" class="transition hover:text-zinc-900">Products</a>
					</nav>
				</Container>
			</header>

			<main class="flex-1 py-10 sm:py-12">
				<slot />
			</main>

			<footer class="border-t border-zinc-200 bg-white py-8">
				<Container class="flex flex-col gap-2 text-xs text-zinc-500 sm:flex-row sm:items-center sm:justify-between">
					<span>(c) 2024 Led Kikaku. All rights reserved.</span>
					<div class="flex flex-wrap gap-4">
						<a href="/products" class="transition hover:text-zinc-700">Products</a>
						<a href="/" class="transition hover:text-zinc-700">Store</a>
					</div>
				</Container>
			</footer>
		</div>
	</body>
</html>
