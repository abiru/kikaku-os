
---
import { t } from '../i18n';

const h1 = [t('home.heroCopy1'), t('home.heroCopy2')];

---

<section class="bg-white pt-28 pb-32 lg:pt-36 lg:pb-40 text-center" data-reveal>
	<div class="mx-auto max-w-[980px] px-6">
		<h1 class="text-6xl font-bold tracking-tight md:text-8xl leading-[1.4] bg-gradient-to-r from-neutral-900 via-brand to-neutral-600 bg-clip-text text-transparent pb-[0.1em]">
			{h1[0]}
			<span>{h1[1]}</span>
		</h1>
		<p class="mx-auto mt-4 max-w-2xl text-base font-medium text-secondary md:text-lg">
			{t('home.heroTagline')}<br class="hidden md:block" />{t('home.heroSubtagline')}
		</p>
		<div class="mt-10 flex items-center justify-center gap-4">
			<a href="/products" class="inline-flex items-center justify-center rounded-lg bg-brand h-12 px-6 py-3 text-base font-semibold text-white hover:bg-brand-hover transition-colors focus-visible:outline-none focus-visible:ring-3 focus-visible:ring-brand/30 motion-safe:active:scale-[0.98]">
				{t('home.viewProducts')}
			</a>
			<a href="/about" class="text-sm font-semibold text-brand hover:underline">
				{t('home.learnMore')} &gt;
			</a>
		</div>
	</div>
</section>
