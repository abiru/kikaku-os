
---
import { t } from '../i18n';

const h1 = ["Better Light.","Better Grow."];

---


	<div class="bg-subtle">
		<section class="relative w-full pt-20 pb-24 text-center lg:py-10">
			<div class="mx-auto max-w-[980px] px-6">
				<h1 class="text-5xl font-black tracking-tight md:text-7xl gradient-text">
          {h1[0]}
          <span>{h1[1]}</span>
				</h1>
				<p class="mx-auto mt-4 max-w-2xl text-base font-medium text-primary md:text-lg embossed-text">
        {t('home.heroTagline')}<br class="hidden md:block" />{t('home.heroSubtagline')}
				</p>
				<div class="mt-10 flex items-center justify-center gap-4">
					<a href="/products" class="rounded-full bg-brand px-5 py-2 text-sm font-semibold text-white hover:bg-brand-active transition-colors">
						{t('home.viewProducts')}
					</a>
					<a href="/products" class="text-sm font-semibold text-brand hover:underline">
						{t('home.learnMore')} &gt;
					</a>
				</div>
			</div>

		</section>
    </div>

<style>
  .gradient-text {
    background: linear-gradient(
      90deg,
      #dc2626 0%,
      #ef4444 10%,
      #1a1a1a 20%,
      #f59e0b 35%,
      #dc2626 45%,
      #0f172a 55%,
      #8b5cf6 70%,
      #dc2626 80%,
      #3b82f6 90%,
      #dc2626 100%
    );
    background-size: 300% auto;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: gradient-shift 60s ease-in-out infinite;
    line-height: 1.2;
    padding-bottom: 0.1em;
  }

  @keyframes gradient-shift {
    0% {
      background-position: 0% center;
    }
    15% {
      background-position: 80% center;
    }
    30% {
      background-position: 35% center;
    }
    45% {
      background-position: 95% center;
    }
    60% {
      background-position: 20% center;
    }
    75% {
      background-position: 65% center;
    }
    90% {
      background-position: 45% center;
    }
    100% {
      background-position: 0% center;
    }
  }

  .embossed-text {
    text-shadow:
      1px 1px 0 rgba(255, 255, 255, 0.8),
      -1px -1px 0 rgba(0, 0, 0, 0.15);
  }
</style>
