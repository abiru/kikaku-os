
---
import { t } from '../i18n';

const h1 = [t('home.heroCopy1'), t('home.heroCopy2')];

---


	<div class="bg-subtle">
		<section class="relative w-full pt-20 pb-24 text-center lg:py-10">
			<div class="mx-auto max-w-[980px] px-6">
				<h1 class="text-5xl font-bold tracking-tight md:text-7xl gradient-text">
          {h1[0]}
          <span>{h1[1]}</span>
				</h1>
				<p class="mx-auto mt-4 max-w-2xl text-base font-medium text-primary md:text-lg embossed-text">
        {t('home.heroTagline')}<br class="hidden md:block" />{t('home.heroSubtagline')}
				</p>
				<div class="mt-10 flex items-center justify-center gap-4">
					<a href="/products" class="rounded-lg bg-brand h-12 px-6 py-3 text-base font-semibold text-white hover:bg-brand-hover transition-colors focus-visible:outline-none focus-visible:ring-3 focus-visible:ring-brand/30 motion-safe:active:scale-[0.98]">
						{t('home.viewProducts')}
					</a>
					<a href="/products" class="text-sm font-semibold text-brand hover:underline">
						{t('home.learnMore')} &gt;
					</a>
				</div>
			</div>

		</section>
    </div>

<style>
  .gradient-text {
    line-height: 1.2;
    padding-bottom: 0.1em;
  }

  .embossed-text {
    text-shadow:
      1px 1px 0 rgba(255, 255, 255, 0.8),
      -1px -1px 0 rgba(0, 0, 0, 0.15);
  }
</style>
