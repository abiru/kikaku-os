---
import { t } from '../i18n';

interface Policy {
	name: string;
	icon: string;
	description: string;
}

interface Props {
	policies: Policy[];
}

const { policies } = Astro.props;
---

<section aria-labelledby="policies-heading" class="mt-10">
	<h2 id="policies-heading" class="sr-only">{t('product.policies')}</h2>

	<dl class="grid grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-1 xl:grid-cols-2">
		{policies.map((policy) => (
			<div class="rounded-lg border border-neutral-200 bg-neutral-50 p-6 text-center">
				<dt>
					{policy.icon === 'globe' ? (
						<svg class="mx-auto size-6 shrink-0 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" d="M12 21a9.004 9.004 0 008.716-6.747M12 21a9.004 9.004 0 01-8.716-6.747M12 21c2.485 0 4.5-4.03 4.5-9S14.485 3 12 3m0 18c-2.485 0-4.5-4.03-4.5-9S9.515 3 12 3m0 0a8.997 8.997 0 017.843 4.582M12 3a8.997 8.997 0 00-7.843 4.582m15.686 0A11.953 11.953 0 0112 10.5c-2.998 0-5.74-1.1-7.843-2.918m15.686 0A8.959 8.959 0 0121 12c0 .778-.099 1.533-.284 2.253m0 0A17.919 17.919 0 0112 16.5c-3.162 0-6.133-.815-8.716-2.247m0 0A9.015 9.015 0 013 12c0-1.605.42-3.113 1.157-4.418" />
						</svg>
					) : (
						<svg class="mx-auto size-6 shrink-0 text-neutral-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" d="M12 6v12m-3-2.818l.879.659c1.171.879 3.07.879 4.242 0 1.172-.879 1.172-2.303 0-3.182C13.536 12.219 12.768 12 12 12c-.725 0-1.45-.22-2.003-.659-1.106-.879-1.106-2.303 0-3.182s2.9-.879 4.006 0l.415.33M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
						</svg>
					)}
					<span class="mt-4 block text-sm font-medium text-neutral-900">{policy.name}</span>
				</dt>
				<dd class="mt-1 text-sm text-neutral-500">{policy.description}</dd>
			</div>
		))}
	</dl>
</section>
