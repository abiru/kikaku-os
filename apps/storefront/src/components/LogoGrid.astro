---
import { Image } from "astro:assets";
import naro from "../assets/logos/naro.png";
import tsum from "../assets/logos/logo_tsumura.png";
import kirishima from "../assets/logos/kirishima.svg";
import fukuyama from "../assets/logos/fukuyama.png";
import hokkai from "../assets/logos/hokkaido.png";
import ryukoku from "../assets/logos/ryukoku.png";
import { t } from '../i18n';

---
<section class="bg-white" data-reveal>
  <div class="mx-auto max-w-7xl px-6 lg:px-8">
    <div class="text-center mb-8">
      <h2 class="text-2xl font-semibold tracking-tight text-primary md:text-3xl">
        {t('logoGrid.title')}
      </h2>
      <p class="mt-2 text-secondary text-sm">
        {t('logoGrid.subtitle')}
      </p>
    </div>
    <div class="rounded-2xl ring-1 ring-black/5 overflow-hidden">
      <div class="grid grid-cols-2 gap-px bg-neutral-200 md:grid-cols-3">
        {
          [
            { src: naro, alt: "NARO" },
            { src: tsum, alt: "Tsumura" },
            { src: kirishima, alt: "Kirishima" },
            { src: fukuyama, alt: "Fukuyama" },
            { src: hokkai, alt: "Hokkaido" },
            { src: ryukoku, alt: "Ryukoku" },
          ].map((v) => {
            return (
              <div class="bg-white py-10 px-12 flex items-center justify-center">
                <Image
                  class="max-h-12 w-full object-contain filter grayscale opacity-60 hover:opacity-100 hover:grayscale-0 transition-all"
                  src={v.src}
                  alt={v.alt}
                  width="158"
                  height="48"
                />
              </div>
            );
          })
        }
      </div>
    </div>
  </div>
</section>
