---
import { Image } from "astro:assets";
import naro from "../assets/logos/naro.png";
import tsum from "../assets/logos/logo_tsumura.png";
import kirishima from "../assets/logos/kirishima.svg";
import fukuyama from "../assets/logos/fukuyama.png";
import hokkai from "../assets/logos/hokkaido.png";
import ryukoku from "../assets/logos/ryukoku.png";
import { t } from '../i18n';

---
    <div class="bg-white">
      <div class="mx-auto max-w-7xl px-6 lg:px-8">
        <div class="text-center mb-8">
          <h2 class="typo-h2 text-primary">
            {t('logoGrid.title')}
          </h2>
          <p class="mt-2 text-secondary text-sm">
            {t('logoGrid.subtitle')}
          </p>
        </div>
        <div class="-mx-6 grid grid-cols-2 gap-0.5 overflow-hidden sm:mx-0 sm:rounded-2xl md:grid-cols-3">

        {
          [
            { src: naro, alt: "NARO" },
            { src: tsum, alt: "Tsumura" },
            { src: kirishima, alt: "Kirishima" },
            { src: fukuyama, alt: "Fukuyama" },
            { src: hokkai, alt: "Hokkaido" },
            { src: ryukoku, alt: "Ryukoku" },
          ].map((v) => {
            return (
          <div class="bg-gray-200/5 p-8 sm:p-10">
              <Image
              class="max-h-12 w-full object-contain"
                src={v.src}
                alt={v.alt}
                width="158"
                height="48"
              />
          </div>
            );
          })
        }
        </div>
      </div>
    </div>
