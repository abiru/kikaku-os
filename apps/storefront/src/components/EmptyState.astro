---
import Button from './Button.astro';

const {
	title = 'Nothing here yet',
	description = 'Try browsing the catalog to find something new.',
	ctaHref = '/products',
	ctaLabel = 'Back to Products',
	class: className = ''
} = Astro.props;
---

<div class={`rounded-3xl border border-dashed border-zinc-200 bg-white p-8 ${className}`}>
	<div class="mx-auto max-w-md text-center">
		<div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-zinc-100 text-zinc-500">
			<svg
				viewBox="0 0 24 24"
				fill="none"
				stroke="currentColor"
				stroke-width="1.5"
				class="h-6 w-6"
				aria-hidden="true"
			>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M6.75 6.75h10.5m-10.5 4.5h10.5m-10.5 4.5h6"
				/>
				<path
					stroke-linecap="round"
					stroke-linejoin="round"
					d="M19.5 5.25v13.5a1.5 1.5 0 0 1-1.5 1.5h-12a1.5 1.5 0 0 1-1.5-1.5V5.25a1.5 1.5 0 0 1 1.5-1.5h12a1.5 1.5 0 0 1 1.5 1.5z"
				/>
			</svg>
		</div>
		<h2 class="mt-4 text-lg font-semibold text-zinc-900">{title}</h2>
		<p class="mt-2 text-sm text-zinc-500">{description}</p>
		<div class="mt-6 flex justify-center">
			<Button href={ctaHref} variant="secondary">
				{ctaLabel}
			</Button>
		</div>
	</div>
</div>
