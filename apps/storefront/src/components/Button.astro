---
const {
	variant = 'primary',
	size = 'md',
	href,
	type = 'button',
	class: className = '',
	...rest
} = Astro.props;

const base =
	'inline-flex items-center justify-center rounded-full font-semibold transition focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-zinc-900/20 focus-visible:ring-offset-2 disabled:cursor-not-allowed disabled:opacity-60';
const variants = {
	primary: 'bg-zinc-900 text-white hover:bg-zinc-800',
	secondary: 'border border-zinc-200 bg-white text-zinc-800 hover:bg-zinc-50',
	ghost: 'text-zinc-700 hover:bg-zinc-100'
};
const sizes = {
	sm: 'h-8 px-3 text-xs',
	md: 'h-10 px-4 text-sm',
	lg: 'h-12 px-5 text-sm'
};

const classes = `${base} ${variants[variant] ?? variants.primary} ${sizes[size] ?? sizes.md} ${className}`;
---

{href ? (
	<a href={href} class={classes} {...rest}>
		<slot />
	</a>
) : (
	<button type={type} class={classes} {...rest}>
		<slot />
	</button>
)}
