---
export const prerender = false;

import Container from '../components/Container.astro';
import Layout from '../layouts/Layout.astro';
import { t } from '../i18n';
---

<Layout title={t('pages.faq.pageTitle')}>
	<div class="bg-white min-h-screen">
		<section class="pt-24 pb-20 md:pt-32 md:pb-28">
			<Container class="max-w-3xl">
				<h1 class="text-4xl md:text-5xl font-bold tracking-tight text-[#1d1d1f] text-center">
					{t('pages.faq.title')}
				</h1>
				<p class="mt-6 text-center text-[#6e6e73] text-lg">
					{t('pages.faq.description')}
				</p>

				<div class="mt-10 space-y-4">
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-[#1d1d1f]">{t('pages.faq.shippingQuestion')}</summary>
						<p class="mt-3 text-[#6e6e73]">
							{t('pages.faq.shippingAnswer')}
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-[#1d1d1f]">{t('pages.faq.refundQuestion')}</summary>
						<p class="mt-3 text-[#6e6e73]">
							{t('pages.faq.refundAnswer')}
							<a href="/refund" class="ml-1 text-[#0071e3] hover:underline">{t('pages.faq.refundLink')}</a>
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-[#1d1d1f]">{t('pages.faq.orderStatusQuestion')}</summary>
						<p class="mt-3 text-[#6e6e73]">
							{t('pages.faq.orderStatusAnswer')}
							<a href="/order-status" class="ml-1 text-[#0071e3] hover:underline">{t('pages.faq.orderStatusLink')}</a>
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-[#1d1d1f]">{t('pages.faq.contactQuestion')}</summary>
						<p class="mt-3 text-[#6e6e73]">
							{t('pages.faq.contactAnswer')}
							<a href="/contact" class="ml-1 text-[#0071e3] hover:underline">{t('pages.faq.contactLink')}</a>
						</p>
					</details>
				</div>
			</Container>
		</section>
	</div>
</Layout>
