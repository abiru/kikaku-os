---
export const prerender = false;

import Container from '../components/Container.astro';
import Layout from '../layouts/Layout.astro';
import { t } from '../i18n';

const faqItems = [
	{ question: t('pages.faq.shippingQuestion'), answer: t('pages.faq.shippingAnswer') },
	{ question: t('pages.faq.refundQuestion'), answer: `${t('pages.faq.refundAnswer')} ${t('pages.faq.refundLink')}` },
	{ question: t('pages.faq.orderStatusQuestion'), answer: `${t('pages.faq.orderStatusAnswer')} ${t('pages.faq.orderStatusLink')}` },
	{ question: t('pages.faq.contactQuestion'), answer: `${t('pages.faq.contactAnswer')} ${t('pages.faq.contactLink')}` },
];

const jsonLdFaq = {
	'@context': 'https://schema.org',
	'@type': 'FAQPage',
	mainEntity: faqItems.map((item) => ({
		'@type': 'Question',
		name: item.question,
		acceptedAnswer: {
			'@type': 'Answer',
			text: item.answer,
		},
	})),
};
---

<Layout title={t('pages.faq.pageTitle')}>
	<script type="application/ld+json" set:html={JSON.stringify(jsonLdFaq)} />
	<div class="bg-white min-h-screen">
		<section class="pt-24 pb-20 md:pt-32 md:pb-28">
			<Container class="max-w-3xl">
				<h1 class="text-4xl md:text-5xl font-bold tracking-tight text-primary text-center">
					{t('pages.faq.title')}
				</h1>
				<p class="mt-6 text-center text-secondary text-lg">
					{t('pages.faq.description')}
				</p>

				<div class="mt-10 space-y-4">
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-primary">{t('pages.faq.shippingQuestion')}</summary>
						<p class="mt-3 text-secondary">
							{t('pages.faq.shippingAnswer')}
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-primary">{t('pages.faq.refundQuestion')}</summary>
						<p class="mt-3 text-secondary">
							{t('pages.faq.refundAnswer')}
							<a href="/refund" class="ml-1 text-brand hover:underline">{t('pages.faq.refundLink')}</a>
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-primary">{t('pages.faq.orderStatusQuestion')}</summary>
						<p class="mt-3 text-secondary">
							{t('pages.faq.orderStatusAnswer')}
							<a href="/order-status" class="ml-1 text-brand hover:underline">{t('pages.faq.orderStatusLink')}</a>
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-primary">{t('pages.faq.paymentQuestion')}</summary>
						<p class="mt-3 text-secondary">
							{t('pages.faq.paymentAnswer')}
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-primary">{t('pages.faq.warrantyQuestion')}</summary>
						<p class="mt-3 text-secondary">
							{t('pages.faq.warrantyAnswer')}
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-primary">{t('pages.faq.b2bQuestion')}</summary>
						<p class="mt-3 text-secondary">
							{t('pages.faq.b2bAnswer')}
							<a href="/quotations/new" class="ml-1 text-brand hover:underline">{t('pages.faq.b2bLink')}</a>
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-primary">{t('pages.faq.internationalQuestion')}</summary>
						<p class="mt-3 text-secondary">
							{t('pages.faq.internationalAnswer')}
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-primary">{t('pages.faq.installationQuestion')}</summary>
						<p class="mt-3 text-secondary">
							{t('pages.faq.installationAnswer')}
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-primary">{t('pages.faq.specQuestion')}</summary>
						<p class="mt-3 text-secondary">
							{t('pages.faq.specAnswer')}
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-primary">{t('pages.faq.couponQuestion')}</summary>
						<p class="mt-3 text-secondary">
							{t('pages.faq.couponAnswer')}
						</p>
					</details>
					<details class="rounded-xl border border-gray-200 bg-white p-5">
						<summary class="cursor-pointer font-semibold text-primary">{t('pages.faq.contactQuestion')}</summary>
						<p class="mt-3 text-secondary">
							{t('pages.faq.contactAnswer')}
							<a href="/contact" class="ml-1 text-brand hover:underline">{t('pages.faq.contactLink')}</a>
						</p>
					</details>
				</div>
			</Container>
		</section>
	</div>
</Layout>
