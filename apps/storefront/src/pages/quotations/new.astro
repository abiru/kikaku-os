---
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n';

const apiUrl = import.meta.env.PUBLIC_API_BASE || 'http://localhost:8787';
---

<Layout title={t('quotation.createTitle')}>
  <div class="container">
    <h1>{t('quotation.createTitle')}</h1>
    <p class="subtitle">{t('quotation.createSubtitle')}</p>

    <div id="cart-summary" class="card">
      <h2>{t('quotation.cartContents')}</h2>
      <div id="cart-items"></div>
      <div class="summary">
        <div class="summary-row">
          <span>{t('quotation.subtotalExclTax')}</span>
          <span id="subtotal">Â¥0</span>
        </div>
        <div class="summary-row">
          <span>{t('quotation.tax')}</span>
          <span id="tax">Â¥0</span>
        </div>
        <div class="summary-row total">
          <span>{t('quotation.total')}</span>
          <span id="total">Â¥0</span>
        </div>
      </div>
    </div>

    <form id="quotation-form" class="card">
      <h2>{t('quotation.customerInfo')}</h2>

      <div class="form-group">
        <label for="customerCompany">{t('quotation.companyName')} <span class="required">*</span></label>
        <input type="text" id="customerCompany" name="customerCompany" required aria-required="true" />
      </div>

      <div class="form-group">
        <label for="customerName">{t('quotation.contactPerson')} <span class="required">*</span></label>
        <input type="text" id="customerName" name="customerName" required aria-required="true" />
      </div>

      <div class="form-group">
        <label for="customerEmail">{t('quotation.email')}</label>
        <input type="email" id="customerEmail" name="customerEmail" />
        <small>{t('quotation.emailNote')}</small>
      </div>

      <div class="form-group">
        <label for="customerPhone">{t('quotation.phone')}</label>
        <input type="tel" id="customerPhone" name="customerPhone" />
        <small>{t('quotation.phoneExample')}</small>
      </div>

      <div class="form-group">
        <label for="notes">{t('quotation.notes')}</label>
        <textarea id="notes" name="notes" rows="4"></textarea>
      </div>

      <div class="form-actions">
        <a href="/products" class="btn btn-secondary">{t('quotation.back')}</a>
        <button type="submit" class="btn btn-primary" id="submit-btn">{t('quotation.createButton')}</button>
      </div>

      <div id="error-message" role="alert" class="error-message" style="display: none;"></div>
    </form>
  </div>
</Layout>

<style>
  .container {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  h1 {
    font-size: 2rem;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: #666;
    margin-bottom: 2rem;
  }

  .card {
    background: white;
    border: 1px solid #e5e7eb;
    border-radius: 8px;
    padding: 1.5rem;
    margin-bottom: 2rem;
  }

  .card h2 {
    font-size: 1.25rem;
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid #f3f4f6;
  }

  #cart-items {
    margin-bottom: 1rem;
  }

  .cart-item {
    display: flex;
    justify-content: space-between;
    padding: 0.75rem 0;
    border-bottom: 1px solid #f3f4f6;
  }

  .cart-item:last-child {
    border-bottom: none;
  }

  .item-details {
    flex: 1;
  }

  .item-title {
    font-weight: 600;
    margin-bottom: 0.25rem;
  }

  .item-variant {
    color: #666;
    font-size: 0.875rem;
  }

  .item-quantity {
    color: #666;
    margin-right: 1rem;
  }

  .item-price {
    font-weight: 600;
  }

  .summary {
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 2px solid #f3f4f6;
  }

  .summary-row {
    display: flex;
    justify-content: space-between;
    padding: 0.5rem 0;
    font-size: 0.9375rem;
  }

  .summary-row.total {
    font-size: 1.125rem;
    font-weight: 700;
    margin-top: 0.5rem;
    padding-top: 0.75rem;
    border-top: 2px solid #e5e7eb;
  }

  .form-group {
    margin-bottom: 1.5rem;
  }

  .form-group label {
    display: block;
    font-weight: 600;
    margin-bottom: 0.5rem;
  }

  .required {
    color: #dc2626;
  }

  .form-group input,
  .form-group textarea {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #d1d5db;
    border-radius: 6px;
    font-size: 1rem;
    font-family: inherit;
  }

  .form-group input:focus,
  .form-group textarea:focus {
    outline: none;
    border-color: #2563eb;
    box-shadow: 0 0 0 3px rgba(37, 99, 235, 0.1);
  }

  .form-group small {
    display: block;
    color: #6b7280;
    font-size: 0.875rem;
    margin-top: 0.25rem;
  }

  .form-actions {
    display: flex;
    gap: 1rem;
    justify-content: flex-end;
    margin-top: 2rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border-radius: 6px;
    font-weight: 600;
    text-decoration: none;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.15s;
  }

  .btn-primary {
    background: #2563eb;
    color: white;
  }

  .btn-primary:hover:not(:disabled) {
    background: #1d4ed8;
  }

  .btn-primary:disabled {
    background: #9ca3af;
    cursor: not-allowed;
  }

  .btn-secondary {
    background: white;
    color: #374151;
    border: 1px solid #d1d5db;
  }

  .btn-secondary:hover {
    background: #f9fafb;
  }

  .error-message {
    margin-top: 1rem;
    padding: 1rem;
    background: #fef2f2;
    border: 1px solid #fecaca;
    border-radius: 6px;
    color: #dc2626;
  }

  .empty-cart {
    text-align: center;
    padding: 3rem 1rem;
    color: #6b7280;
  }

  .empty-cart-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }
</style>

<script define:vars={{ apiUrl, i18nEmptyCart: t('quotation.emptyCart'), i18nViewProducts: t('quotation.viewProducts'), i18nQuantity: t('quotation.quantity'), i18nCreating: t('quotation.creating'), i18nCreateButton: t('quotation.createButton'), i18nCreateError: t('quotation.createError'), i18nTokenError: t('quotation.tokenError') }}>
  window.__QUOTATION_API_URL__ = apiUrl;
  window.__QUOTATION_I18N__ = { emptyCart: i18nEmptyCart, viewProducts: i18nViewProducts, quantity: i18nQuantity, creating: i18nCreating, createButton: i18nCreateButton, createError: i18nCreateError, tokenError: i18nTokenError };
</script>

<script>
  import DOMPurify from 'isomorphic-dompurify';
  import { getCartItems, clearCart } from '../../lib/cart';
  import { createQuotation } from '../../lib/quotationApi';
  import { formatPrice } from '../../lib/format';

  declare global {
    interface Window {
      __QUOTATION_API_URL__: string;
      __QUOTATION_I18N__: {
        emptyCart: string;
        viewProducts: string;
        quantity: string;
        creating: string;
        createButton: string;
        createError: string;
        tokenError: string;
      };
    }
  }

  const apiUrl = window.__QUOTATION_API_URL__;
  const i18n = window.__QUOTATION_I18N__;

  const escapeHtml = (str: string | null | undefined) => {
    if (!str) return '';
    return String(str)
      .replace(/&/g, '&amp;')
      .replace(/</g, '&lt;')
      .replace(/>/g, '&gt;')
      .replace(/"/g, '&quot;')
      .replace(/'/g, '&#x27;');
  };

  const displayCartSummary = () => {
    const items = getCartItems();
    const cartItemsEl = document.getElementById('cart-items');
    const subtotalEl = document.getElementById('subtotal');
    const taxEl = document.getElementById('tax');
    const totalEl = document.getElementById('total');

    if (!cartItemsEl || !subtotalEl || !taxEl || !totalEl) return;

    if (items.length === 0) {
      cartItemsEl.innerHTML = DOMPurify.sanitize(`
        <div class="empty-cart">
          <div class="empty-cart-icon">ðŸ›’</div>
          <p>${escapeHtml(i18n.emptyCart)}</p>
          <p><a href="/products">${escapeHtml(i18n.viewProducts)}</a></p>
        </div>
      `);
      const formEl = document.getElementById('quotation-form');
      if (formEl) formEl.style.display = 'none';
      return;
    }

    // Display items
    cartItemsEl.innerHTML = DOMPurify.sanitize(items.map(item => `
      <div class="cart-item">
        <div class="item-details">
          <div class="item-title">${escapeHtml(item.title)}</div>
          <div class="item-variant">${escapeHtml(item.variantTitle)}</div>
        </div>
        <div style="display: flex; align-items: center;">
          <span class="item-quantity">${escapeHtml(i18n.quantity)}: ${item.quantity}</span>
          <span class="item-price">${formatPrice(item.price * item.quantity, item.currency)}</span>
        </div>
      </div>
    `).join(''));

    // Calculate totals
    const subtotal = items.reduce((sum, item) => sum + (item.price * item.quantity), 0);
    const tax = Math.floor(subtotal * 0.1);
    const total = subtotal + tax;

    subtotalEl.textContent = formatPrice(subtotal);
    taxEl.textContent = formatPrice(tax);
    totalEl.textContent = formatPrice(total);
  };

  const handleSubmit = async (e: Event) => {
    e.preventDefault();

    const items = getCartItems();
    if (items.length === 0) {
      alert(i18n.emptyCart);
      return;
    }

    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement | null;
    const errorMessageEl = document.getElementById('error-message');

    if (!submitBtn || !errorMessageEl) return;

    submitBtn.disabled = true;
    submitBtn.textContent = i18n.creating;
    errorMessageEl.style.display = 'none';

    const formData = new FormData(e.target as HTMLFormElement);
    const customerCompany = formData.get('customerCompany');
    const customerName = formData.get('customerName');
    const customerEmail = formData.get('customerEmail') || null;
    const customerPhone = formData.get('customerPhone') || null;
    const notes = formData.get('notes') || null;

    const quotationItems = items.map(item => ({
      variantId: item.variantId,
      quantity: item.quantity
    }));

    try {
      const data = await createQuotation(apiUrl, {
        customerCompany,
        customerName,
        customerEmail,
        customerPhone,
        items: quotationItems,
        notes
      });

      if (!data.publicToken || typeof data.publicToken !== 'string') {
        throw new Error(i18n.tokenError);
      }

      // Clear cart and redirect to quotation page
      clearCart();
      window.location.href = `/quotations/${data.publicToken}`;
    } catch (error) {
      console.error('Error creating quotation:', error);
      const errorMessage = error instanceof Error ? error.message : i18n.createError;
      errorMessageEl.textContent = errorMessage;
      errorMessageEl.style.display = 'block';
      submitBtn.disabled = false;
      submitBtn.textContent = i18n.createButton;
    }
  };

  // Initialize
  displayCartSummary();

  const form = document.getElementById('quotation-form');
  if (form) {
    form.addEventListener('submit', handleSubmit);
  }
</script>
