---
import Container from '../../components/Container.astro';
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n';

const apiUrl = import.meta.env.PUBLIC_API_BASE || 'http://localhost:8787';
---

<Layout title={t('quotation.createTitle')}>
  <Container class="max-w-[800px] py-8">
    <h1 class="text-3xl mb-2">{t('quotation.createTitle')}</h1>
    <p class="text-secondary mb-8">{t('quotation.createSubtitle')}</p>

    <div id="cart-summary" class="bg-white border border-gray-200 rounded-lg p-6 mb-8">
      <h2 class="text-xl mb-4 pb-2 border-b-2 border-gray-100">{t('quotation.cartContents')}</h2>
      <div id="cart-items" class="mb-4"></div>
      <div class="mt-4 pt-4 border-t-2 border-gray-100">
        <div class="flex justify-between py-2 text-[15px]">
          <span>{t('quotation.subtotalExclTax')}</span>
          <span id="subtotal">Â¥0</span>
        </div>
        <div class="flex justify-between py-2 text-[15px]">
          <span>{t('quotation.tax')}</span>
          <span id="tax">Â¥0</span>
        </div>
        <div class="flex justify-between py-2 text-lg font-bold mt-2 pt-3 border-t-2 border-gray-200">
          <span>{t('quotation.total')}</span>
          <span id="total">Â¥0</span>
        </div>
      </div>
    </div>

    <form id="quotation-form" class="bg-white border border-gray-200 rounded-lg p-6 mb-8">
      <h2 class="text-xl mb-4 pb-2 border-b-2 border-gray-100">{t('quotation.customerInfo')}</h2>

      <div class="mb-6">
        <label for="customerCompany" class="block font-semibold mb-2">{t('quotation.companyName')} <span class="text-red-600">*</span></label>
        <input type="text" id="customerCompany" name="customerCompany" required aria-required="true" class="w-full px-3 py-3 border border-gray-300 rounded-md text-base font-[inherit] focus:outline-none focus:border-brand focus:ring-[3px] focus:ring-brand/10" />
      </div>

      <div class="mb-6">
        <label for="customerName" class="block font-semibold mb-2">{t('quotation.contactPerson')} <span class="text-red-600">*</span></label>
        <input type="text" id="customerName" name="customerName" required aria-required="true" class="w-full px-3 py-3 border border-gray-300 rounded-md text-base font-[inherit] focus:outline-none focus:border-brand focus:ring-[3px] focus:ring-brand/10" />
      </div>

      <div class="mb-6">
        <label for="customerEmail" class="block font-semibold mb-2">{t('quotation.email')}</label>
        <input type="email" id="customerEmail" name="customerEmail" class="w-full px-3 py-3 border border-gray-300 rounded-md text-base font-[inherit] focus:outline-none focus:border-brand focus:ring-[3px] focus:ring-brand/10" />
        <small class="block text-gray-500 text-sm mt-1">{t('quotation.emailNote')}</small>
      </div>

      <div class="mb-6">
        <label for="customerPhone" class="block font-semibold mb-2">{t('quotation.phone')}</label>
        <input type="tel" id="customerPhone" name="customerPhone" class="w-full px-3 py-3 border border-gray-300 rounded-md text-base font-[inherit] focus:outline-none focus:border-brand focus:ring-[3px] focus:ring-brand/10" />
        <small class="block text-gray-500 text-sm mt-1">{t('quotation.phoneExample')}</small>
      </div>

      <div class="mb-6">
        <label for="notes" class="block font-semibold mb-2">{t('quotation.notes')}</label>
        <textarea id="notes" name="notes" rows="4" class="w-full px-3 py-3 border border-gray-300 rounded-md text-base font-[inherit] focus:outline-none focus:border-brand focus:ring-[3px] focus:ring-brand/10"></textarea>
      </div>

      <div class="flex gap-4 justify-end mt-8">
        <a href="/products" class="px-6 py-3 rounded-md font-semibold no-underline text-base transition-all duration-150 bg-white text-gray-700 border border-gray-300 hover:bg-gray-50">{t('quotation.back')}</a>
        <button type="submit" id="submit-btn" class="px-6 py-3 rounded-md font-semibold text-base transition-all duration-150 bg-brand text-white hover:bg-brand-hover disabled:bg-gray-400 disabled:cursor-not-allowed">{t('quotation.createButton')}</button>
      </div>

      <div id="error-message" role="alert" class="hidden mt-4 p-4 bg-red-50 border border-red-200 rounded-md text-red-600"></div>
    </form>
  </Container>
</Layout>

<script define:vars={{ apiUrl, i18nEmptyCart: t('quotation.emptyCart'), i18nViewProducts: t('quotation.viewProducts'), i18nQuantity: t('quotation.quantity'), i18nCreating: t('quotation.creating'), i18nCreateButton: t('quotation.createButton'), i18nCreateError: t('quotation.createError'), i18nTokenError: t('quotation.tokenError') }}>
  window.__QUOTATION_API_URL__ = apiUrl;
  window.__QUOTATION_I18N__ = { emptyCart: i18nEmptyCart, viewProducts: i18nViewProducts, quantity: i18nQuantity, creating: i18nCreating, createButton: i18nCreateButton, createError: i18nCreateError, tokenError: i18nTokenError };
</script>

<script>
  import DOMPurify from 'isomorphic-dompurify';
  import { getCartItems, clearCart } from '../../lib/cart';
  import { createQuotation } from '../../lib/quotationApi';
  import { formatPrice } from '../../lib/format';

  declare global {
    interface Window {
      __QUOTATION_API_URL__: string;
      __QUOTATION_I18N__: {
        emptyCart: string;
        viewProducts: string;
        quantity: string;
        creating: string;
        createButton: string;
        createError: string;
        tokenError: string;
      };
    }
  }

  const apiUrl = window.__QUOTATION_API_URL__;
  const i18n = window.__QUOTATION_I18N__;

  const escapeHtml = (str: string | null | undefined) => {
    if (!str) return '';
    return String(str)
      .replace(/&/g, '&amp;')
      .replace(/</g, '&lt;')
      .replace(/>/g, '&gt;')
      .replace(/"/g, '&quot;')
      .replace(/'/g, '&#x27;');
  };

  const displayCartSummary = () => {
    const items = getCartItems();
    const cartItemsEl = document.getElementById('cart-items');
    const subtotalEl = document.getElementById('subtotal');
    const taxEl = document.getElementById('tax');
    const totalEl = document.getElementById('total');

    if (!cartItemsEl || !subtotalEl || !taxEl || !totalEl) return;

    if (items.length === 0) {
      cartItemsEl.innerHTML = DOMPurify.sanitize(`
        <div class="text-center py-12 px-4 text-gray-500">
          <div class="text-5xl mb-4">ðŸ›’</div>
          <p>${escapeHtml(i18n.emptyCart)}</p>
          <p><a href="/products" class="text-brand hover:underline">${escapeHtml(i18n.viewProducts)}</a></p>
        </div>
      `);
      const formEl = document.getElementById('quotation-form');
      if (formEl) formEl.style.display = 'none';
      return;
    }

    // Display items
    cartItemsEl.innerHTML = DOMPurify.sanitize(items.map(item => `
      <div class="flex justify-between py-3 border-b border-gray-100 last:border-b-0">
        <div class="flex-1">
          <div class="font-semibold mb-1">${escapeHtml(item.title)}</div>
          <div class="text-secondary text-sm">${escapeHtml(item.variantTitle)}</div>
        </div>
        <div class="flex items-center">
          <span class="text-secondary mr-4">${escapeHtml(i18n.quantity)}: ${item.quantity}</span>
          <span class="font-semibold">${formatPrice(item.price * item.quantity, item.currency)}</span>
        </div>
      </div>
    `).join(''));

    // Calculate totals
    const subtotal = items.reduce((sum, item) => sum + (item.price * item.quantity), 0);
    const tax = Math.floor(subtotal * 0.1);
    const total = subtotal + tax;

    subtotalEl.textContent = formatPrice(subtotal);
    taxEl.textContent = formatPrice(tax);
    totalEl.textContent = formatPrice(total);
  };

  const handleSubmit = async (e: Event) => {
    e.preventDefault();

    const items = getCartItems();
    if (items.length === 0) {
      alert(i18n.emptyCart);
      return;
    }

    const submitBtn = document.getElementById('submit-btn') as HTMLButtonElement | null;
    const errorMessageEl = document.getElementById('error-message');

    if (!submitBtn || !errorMessageEl) return;

    submitBtn.disabled = true;
    submitBtn.textContent = i18n.creating;
    errorMessageEl.classList.add('hidden');

    const formData = new FormData(e.target as HTMLFormElement);
    const customerCompany = formData.get('customerCompany');
    const customerName = formData.get('customerName');
    const customerEmail = formData.get('customerEmail') || null;
    const customerPhone = formData.get('customerPhone') || null;
    const notes = formData.get('notes') || null;

    const quotationItems = items.map(item => ({
      variantId: item.variantId,
      quantity: item.quantity
    }));

    try {
      const data = await createQuotation(apiUrl, {
        customerCompany,
        customerName,
        customerEmail,
        customerPhone,
        items: quotationItems,
        notes
      });

      if (!data.publicToken || typeof data.publicToken !== 'string') {
        throw new Error(i18n.tokenError);
      }

      // Clear cart and redirect to quotation page
      clearCart();
      window.location.href = `/quotations/${data.publicToken}`;
    } catch (error) {
      const errorMessage = error instanceof Error ? error.message : i18n.createError;
      errorMessageEl.textContent = errorMessage;
      errorMessageEl.classList.remove('hidden');
      submitBtn.disabled = false;
      submitBtn.textContent = i18n.createButton;
    }
  };

  // Initialize
  displayCartSummary();

  const form = document.getElementById('quotation-form');
  if (form) {
    form.addEventListener('submit', handleSubmit);
  }
</script>
