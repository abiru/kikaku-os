---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
import ContactForm from '../components/ContactForm';
---

<Layout title="お問い合わせ - Led Kikaku">
	<section class="py-16">
		<Container>
			<div class="mx-auto max-w-xl">
				<div class="mb-8 text-center">
					<h1 class="text-3xl font-bold tracking-tight text-gray-900">お問い合わせ</h1>
					<p class="mt-3 text-sm text-gray-500">
						ご質問やご要望がございましたら、以下のフォームよりお気軽にお問い合わせください。
					</p>
				</div>

				<div class="rounded-2xl bg-white p-8 shadow-sm border border-gray-200">
					<ContactForm client:load />
				</div>
			</div>
		</Container>
	</section>
</Layout>
