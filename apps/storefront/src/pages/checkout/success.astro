---
import { Button } from '../../components/catalyst/button';
import Container from '../../components/Container.astro';
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n';
import { buildStoreOrderUrl, resolveCheckoutOrderToken } from '../../lib/checkoutSuccess';
import { formatPrice } from '../../lib/format';

const apiBase = import.meta.env.PUBLIC_API_BASE || 'http://localhost:8787';
const orderToken = resolveCheckoutOrderToken(Astro.url.searchParams.get('order_id'));
let order = null;

if (orderToken) {
	try {
		const response = await fetch(buildStoreOrderUrl(apiBase, orderToken));
		if (response.ok) {
			const data = await response.json();
			order = data.order || null;
		}
	} catch (e) {
		console.error('Failed to fetch order:', e);
	}
}

---

<Layout title={t('checkout.successPageTitle')}>
	<div class="min-h-screen bg-subtle flex items-center">
		<Container class="py-16">
			<div class="mx-auto w-full max-w-xl text-center">
				{/* Success Icon with Animation */}
				<div class="mx-auto flex h-20 w-20 items-center justify-center rounded-full bg-green-100 animate-scale-in">
					<svg class="h-10 w-10 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
					</svg>
				</div>

				<h1 class="mt-8 text-4xl font-semibold tracking-tight text-primary md:text-5xl">
					{t('checkout.thankYou')}
				</h1>
				<p class="mt-4 text-xl text-secondary">
					{t('checkout.orderConfirmed')}
				</p>

				{/* Order Details Card */}
				{order ? (
					<div class="mt-10 rounded-3xl bg-white p-8 text-left shadow-sm" data-order-container data-order-status={order.status}>
						<div class="flex items-center justify-between mb-6">
							<p class="text-sm text-secondary">{t('admin.order')} #{order.id}</p>
							<span class={`inline-flex items-center rounded-full px-3 py-1 text-sm font-medium ${
								order.status === 'paid' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'
							}`}>
								{order.status === 'paid' ? t('checkout.confirmed') : order.status}
							</span>
						</div>

						{/* Order Items */}
						<div class="space-y-4 border-t border-gray-100 pt-6">
							{order.items.map((item: { title: string; quantity: number; unit_price: number }) => (
								<div class="flex justify-between">
									<div>
										<p class="font-medium text-primary">{item.title}</p>
										<p class="text-sm text-secondary">{t('checkout.quantity')}: {item.quantity}</p>
									</div>
									<p class="font-medium text-primary">
										{formatPrice(item.unit_price * item.quantity, order.currency)}
									</p>
								</div>
							))}
						</div>

						{/* Total */}
						<div class="mt-6 border-t border-gray-100 pt-6">
							<div class="flex justify-between text-lg font-semibold">
								<span>{t('checkout.total')}</span>
								<span>{formatPrice(order.total_amount, order.currency)}</span>
							</div>
						</div>

						{/* Email */}
						{order.customer_email && (
							<div class="mt-6 border-t border-gray-100 pt-6">
								<p class="text-sm text-secondary">
									{t('checkout.confirmationSentTo')}: <span class="text-primary">{order.customer_email}</span>
								</p>
							</div>
						)}

						{/* Shipping Address */}
						{order.shipping && (
							<div class="mt-6 border-t border-gray-100 pt-6">
								<p class="text-sm font-medium text-primary mb-2">{t('checkout.shippingAddress')}</p>
								<div class="text-sm text-secondary">
									{order.shipping.name && <p>{order.shipping.name}</p>}
									{order.shipping.address && (
										<>
											{order.shipping.address.postal_code && <p>〒{order.shipping.address.postal_code}</p>}
											{order.shipping.address.state && order.shipping.address.city && (
												<p>{order.shipping.address.state}{order.shipping.address.city}</p>
											)}
											{order.shipping.address.line1 && <p>{order.shipping.address.line1}</p>}
											{order.shipping.address.line2 && <p>{order.shipping.address.line2}</p>}
										</>
									)}
									{order.shipping.phone && <p>{t('checkout.phone')}: {order.shipping.phone}</p>}
								</div>
							</div>
						)}
					</div>
				) : (
					<div class="mt-10 rounded-3xl bg-white p-8 text-left shadow-sm">
						<p class="mb-2 text-sm text-secondary">{t('checkout.orderConfirmation')}</p>
						<p class="text-lg text-primary">
							{t('checkout.confirmationEmailSent')}
						</p>
					</div>
				)}

				{/* Next Actions */}
				<div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
					{orderToken && (
						<Button href={`/orders/${orderToken}`} color="indigo" client:load>
							{t('orderTracking.viewOrder')}
						</Button>
					)}
					<Button href="/products" outline client:load>
						{t('cart.continueShopping')}
					</Button>
					<Button href="/" plain client:load>
						{t('checkout.returnToHome')}
					</Button>
				</div>
			</div>
		</Container>
	</div>
</Layout>

<script define:vars={{ apiBase, order, paymentProcessingLabel: t('checkout.paymentProcessing'), paymentProcessingDesc: t('checkout.paymentProcessingDescription') }}>
	window.__CHECKOUT_SUCCESS_API_BASE__ = apiBase;
	window.__CHECKOUT_ORDER__ = order;
	window.__I18N_PAYMENT_PROCESSING__ = paymentProcessingLabel;
	window.__I18N_PAYMENT_PROCESSING_DESC__ = paymentProcessingDesc;
</script>

<script>
	import DOMPurify from 'isomorphic-dompurify';

	declare global {
		interface Window {
			__CHECKOUT_SUCCESS_API_BASE__?: string;
			__CHECKOUT_ORDER__?: { id: number; total_amount: number; currency: string; items: Array<{ title: string; quantity: number; unit_price: number; product_id?: number; variant_title?: string }> } | null;
			__I18N_PAYMENT_PROCESSING__?: string;
			__I18N_PAYMENT_PROCESSING_DESC__?: string;
			dataLayer: Record<string, unknown>[];
		}
	}

	// GTM: purchase event
	const orderData = window.__CHECKOUT_ORDER__;
	if (orderData) {
		window.dataLayer = window.dataLayer || [];
		window.dataLayer.push({
			event: 'purchase',
			ecommerce: {
				transaction_id: String(orderData.id),
				value: orderData.total_amount,
				currency: orderData.currency || 'JPY',
				items: orderData.items.map((item, index) => ({
					item_id: String(item.product_id || index),
					item_name: item.title,
					item_variant: item.variant_title || '',
					price: item.unit_price,
					quantity: item.quantity,
				})),
			},
		});
	}

	// Clear cart after successful payment
	if (typeof localStorage !== 'undefined') {
		localStorage.removeItem('led-kikaku-cart');
	}

	// Clear sessionStorage backup
	if (typeof sessionStorage !== 'undefined') {
		sessionStorage.removeItem('led-kikaku-cart-backup');
	}

	// Polling logic for payment intent flow
	const orderToken = new URLSearchParams(window.location.search).get('order_id');

	if (orderToken) {
		const orderStatusElement = document.querySelector('[data-order-status]');
		const orderStatus = orderStatusElement?.getAttribute('data-order-status');

		if (orderStatus === 'pending') {
			let attempts = 0;
			const maxAttempts = 6; // 1s, 2s, 4s, 8s, 16s, 32s ≈ 63s total

			const pollOrder = async () => {
				if (attempts >= maxAttempts) {
					// Show processing message
					const container = document.querySelector('[data-order-container]');
					if (container) {
						container.innerHTML = DOMPurify.sanitize(`
							<div class="mt-10 rounded-3xl bg-white p-8 text-center shadow-sm">
								<div class="mx-auto h-12 w-12 text-yellow-500 mb-4">
									<svg class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
									</svg>
								</div>
								<p class="text-lg text-gray-900 font-medium mb-2">${window.__I18N_PAYMENT_PROCESSING__ || 'Payment processing'}</p>
								<p class="text-sm text-gray-600">${window.__I18N_PAYMENT_PROCESSING_DESC__ || 'Your payment is being processed.'}</p>
							</div>
						`, { ADD_TAGS: ['svg', 'path'], ADD_ATTR: ['viewBox', 'fill', 'stroke', 'stroke-width', 'stroke-linecap', 'stroke-linejoin', 'd'] });
					}
					return;
				}

				const delay = Math.min(1000 * Math.pow(2, attempts), 32000);
				await new Promise(resolve => setTimeout(resolve, delay));

				try {
					const base = window.__CHECKOUT_SUCCESS_API_BASE__ || window.location.origin;
					const encoded = encodeURIComponent(orderToken);
					const res = await fetch(`${base}/store/orders/${encoded}?poll=true`);

					if (res.status === 202) {
						// Order still pending, continue polling
						attempts++;
						pollOrder();
					} else if (res.ok) {
						// Order updated, reload page to show updated status
						window.location.reload();
					} else {
						console.error('Failed to fetch order status');
					}
				} catch (err) {
					console.error('Polling error:', err);
					attempts++;
					if (attempts < maxAttempts) {
						pollOrder();
					}
				}
			};

			pollOrder();
		}
	}
</script>
