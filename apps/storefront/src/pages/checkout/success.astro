---
import { Button } from '../../components/catalyst/button';
import Container from '../../components/Container.astro';
import Layout from '../../layouts/Layout.astro';
import { t } from '../../i18n';
import { buildStoreOrderUrl, resolveCheckoutOrderToken } from '../../lib/checkoutSuccess';
import { formatPrice } from '../../lib/format';
import { logError } from '../../lib/logger';

const apiBase = import.meta.env.PUBLIC_API_BASE || 'http://localhost:8787';
const orderToken = resolveCheckoutOrderToken(Astro.url.searchParams.get('order_id'));
let order = null;

if (orderToken) {
	try {
		const response = await fetch(buildStoreOrderUrl(apiBase, orderToken));
		if (response.ok) {
			const data = await response.json();
			order = data.order || null;
		}
	} catch (e) {
		logError('Failed to fetch order', e, { page: 'checkout/success', action: 'fetchOrder' });
	}
}

---

<Layout title={t('checkout.successPageTitle')}>
	<meta slot="head" name="robots" content="noindex, nofollow" />
	<div class="min-h-screen bg-subtle flex items-center">
		<Container class="py-16">
			<div class="mx-auto w-full max-w-xl text-center">
				{/* Success Icon with Animation */}
				<div class="mx-auto flex h-20 w-20 items-center justify-center rounded-full bg-green-100 animate-scale-in">
					<svg class="h-10 w-10 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
						<path stroke-linecap="round" stroke-linejoin="round" d="M5 13l4 4L19 7" />
					</svg>
				</div>

				<h1 class="mt-8 typo-h1 text-primary">
					{t('checkout.thankYou')}
				</h1>
				<p class="mt-4 text-xl text-secondary">
					{t('checkout.orderConfirmed')}
				</p>

				{/* Order Details Card */}
				{order ? (
					<div class="mt-10 rounded-3xl bg-white p-8 text-left shadow-sm" data-order-container data-order-status={order.status}>
						<div class="flex items-center justify-between mb-6">
							<p class="text-sm text-secondary">{t('admin.order')} #{order.id}</p>
							<span class={`inline-flex items-center rounded-full px-3 py-1 text-sm font-medium ${
								order.status === 'paid' ? 'bg-green-100 text-green-800' : 'bg-yellow-100 text-yellow-800'
							}`}>
								{order.status === 'paid' ? t('checkout.confirmed') : order.status}
							</span>
						</div>

						{/* Order Items */}
						<div class="space-y-4 border-t border-gray-100 pt-6">
							{order.items.map((item: { title: string; quantity: number; unit_price: number }) => (
								<div class="flex justify-between">
									<div>
										<p class="font-medium text-primary">{item.title}</p>
										<p class="text-sm text-secondary">{t('checkout.quantity')}: {item.quantity}</p>
									</div>
									<p class="font-medium text-primary">
										{formatPrice(item.unit_price * item.quantity, order.currency)}
									</p>
								</div>
							))}
						</div>

						{/* Total */}
						<div class="mt-6 border-t border-gray-100 pt-6">
							<div class="flex justify-between text-lg font-semibold">
								<span>{t('checkout.total')}</span>
								<span>{formatPrice(order.total_amount, order.currency)}</span>
							</div>
						</div>

						{/* Email */}
						{order.customer_email && (
							<div class="mt-6 border-t border-gray-100 pt-6">
								<p class="text-sm text-secondary">
									{t('checkout.confirmationSentTo')}: <span class="text-primary">{order.customer_email}</span>
								</p>
							</div>
						)}

						{/* Shipping Address */}
						{order.shipping && (
							<div class="mt-6 border-t border-gray-100 pt-6">
								<p class="text-sm font-medium text-primary mb-2">{t('checkout.shippingAddress')}</p>
								<div class="text-sm text-secondary">
									{order.shipping.name && <p>{order.shipping.name}</p>}
									{order.shipping.address && (
										<>
											{order.shipping.address.postal_code && <p>ã€’{order.shipping.address.postal_code}</p>}
											{order.shipping.address.state && order.shipping.address.city && (
												<p>{order.shipping.address.state}{order.shipping.address.city}</p>
											)}
											{order.shipping.address.line1 && <p>{order.shipping.address.line1}</p>}
											{order.shipping.address.line2 && <p>{order.shipping.address.line2}</p>}
										</>
									)}
									{order.shipping.phone && <p>{t('checkout.phone')}: {order.shipping.phone}</p>}
								</div>
							</div>
						)}
					</div>
				) : (
					<div class="mt-10 rounded-3xl bg-white p-8 text-left shadow-sm">
						<div class="mx-auto flex h-12 w-12 items-center justify-center rounded-full bg-yellow-100 mb-4">
							<svg class="h-6 w-6 text-yellow-600" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
								<path stroke-linecap="round" stroke-linejoin="round" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4.5c-.77-.833-2.694-.833-3.464 0L3.34 16.5c-.77.833.192 2.5 1.732 2.5z" />
							</svg>
						</div>
						<p class="text-lg text-primary font-medium mb-2">
							{t('checkout.orderNotFoundGuidance')}
						</p>
						<a href="/contact" class="inline-flex items-center text-sm text-brand hover:underline mt-2">
							{t('checkout.contactSupport')} &rarr;
						</a>
					</div>
				)}

				{/* Next Actions */}
				<div class="mt-10 flex flex-col items-center justify-center gap-4 sm:flex-row">
					{orderToken && (
						<Button href={`/orders/${orderToken}`} color="indigo" client:load>
							{t('orderTracking.viewOrder')}
						</Button>
					)}
					<Button href="/products" outline client:load>
						{t('cart.continueShopping')}
					</Button>
					<Button href="/" plain client:load>
						{t('checkout.returnToHome')}
					</Button>
				</div>
			</div>
		</Container>
	</div>
</Layout>

<script define:vars={{ apiBase, order, paymentProcessingLabel: t('checkout.paymentProcessing'), paymentProcessingDesc: t('checkout.paymentProcessingDescription'), confirmedLabel: t('checkout.confirmed'), pollingMaxRetriesLabel: t('checkout.pollingMaxRetriesExceeded'), contactSupportLabel: t('checkout.contactSupport'), pollingCheckingLabel: t('checkout.pollingChecking'), pollingErrorLabel: t('checkout.pollingError'), pollingRetryLabel: t('checkout.pollingRetry') }}>
	window.__CHECKOUT_SUCCESS_API_BASE__ = apiBase;
	window.__CHECKOUT_ORDER__ = order;
	window.__I18N_PAYMENT_PROCESSING__ = paymentProcessingLabel;
	window.__I18N_PAYMENT_PROCESSING_DESC__ = paymentProcessingDesc;
	window.__I18N_CONFIRMED__ = confirmedLabel;
	window.__I18N_POLLING_MAX_RETRIES__ = pollingMaxRetriesLabel;
	window.__I18N_CONTACT_SUPPORT__ = contactSupportLabel;
	window.__I18N_POLLING_CHECKING__ = pollingCheckingLabel;
	window.__I18N_POLLING_ERROR__ = pollingErrorLabel;
	window.__I18N_POLLING_RETRY__ = pollingRetryLabel;
</script>

<script>
	import DOMPurify from 'isomorphic-dompurify';

	declare global {
		interface Window {
			__CHECKOUT_SUCCESS_API_BASE__?: string;
			__CHECKOUT_ORDER__?: { id: number; total_amount: number; currency: string; items: Array<{ title: string; quantity: number; unit_price: number; product_id?: number; variant_title?: string }> } | null;
			__I18N_PAYMENT_PROCESSING__?: string;
			__I18N_PAYMENT_PROCESSING_DESC__?: string;
			__I18N_CONFIRMED__?: string;
			__I18N_POLLING_MAX_RETRIES__?: string;
			__I18N_CONTACT_SUPPORT__?: string;
			__I18N_POLLING_CHECKING__?: string;
			__I18N_POLLING_ERROR__?: string;
			__I18N_POLLING_RETRY__?: string;
			dataLayer: Record<string, unknown>[];
		}
	}

	// GTM: purchase event
	const orderData = window.__CHECKOUT_ORDER__;
	if (orderData) {
		window.dataLayer = window.dataLayer || [];
		window.dataLayer.push({
			event: 'purchase',
			ecommerce: {
				transaction_id: String(orderData.id),
				value: orderData.total_amount,
				currency: orderData.currency || 'JPY',
				items: orderData.items.map((item, index) => ({
					item_id: String(item.product_id || index),
					item_name: item.title,
					item_variant: item.variant_title || '',
					price: item.unit_price,
					quantity: item.quantity,
				})),
			},
		});
	}

	function clearCartStorage() {
		if (typeof localStorage !== 'undefined') {
			localStorage.removeItem('led-kikaku-cart');
		}
		if (typeof sessionStorage !== 'undefined') {
			sessionStorage.removeItem('led-kikaku-cart-backup');
		}
	}

	// Clear cart unconditionally on success page arrival
	// User has completed checkout flow, so cart should be emptied regardless of order fetch status
	clearCartStorage();

	// Polling logic for payment intent flow
	const orderToken = new URLSearchParams(window.location.search).get('order_id');

	if (orderToken) {
		const orderStatusElement = document.querySelector('[data-order-status]');
		const orderStatus = orderStatusElement?.getAttribute('data-order-status');

		if (orderStatus === 'pending') {
			let attempts = 0;
			const MAX_ATTEMPTS = 10;
			const MAX_POLL_TIME_MS = 5 * 60 * 1000; // 5 minutes
			const MAX_DELAY_MS = 30_000; // Max 30s between polls
			const pollStartTime = Date.now();

			const SANITIZE_OPTS = {
				ADD_TAGS: ['svg', 'path', 'circle', 'button'],
				ADD_ATTR: ['viewBox', 'fill', 'stroke', 'stroke-width', 'stroke-linecap', 'stroke-linejoin', 'd', 'href', 'class', 'cx', 'cy', 'r', 'data-poll-retry', 'type'],
			};

			const showPollingProgress = () => {
				const container = document.querySelector('[data-order-container]');
				if (container) {
					container.innerHTML = DOMPurify.sanitize(`
						<div class="text-center py-6" role="status" aria-live="polite">
							<div class="mx-auto h-10 w-10 mb-4">
								<svg class="w-full h-full animate-spin text-brand" viewBox="0 0 24 24" fill="none">
									<circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
									<path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4z"></path>
								</svg>
							</div>
							<p class="text-lg text-gray-900 font-medium mb-1">${window.__I18N_POLLING_CHECKING__ || 'Checking order status...'}</p>
							<p class="text-sm text-gray-500">${window.__I18N_PAYMENT_PROCESSING_DESC__ || ''}</p>
						</div>
					`, SANITIZE_OPTS);
				}
			};

			const showPollingError = () => {
				const container = document.querySelector('[data-order-container]');
				if (container) {
					container.innerHTML = DOMPurify.sanitize(`
						<div class="text-center py-6" role="alert">
							<div class="mx-auto h-12 w-12 text-red-400 mb-4">
								<svg class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
								</svg>
							</div>
							<p class="text-lg text-gray-900 font-medium mb-2">${window.__I18N_POLLING_ERROR__ || 'Failed to check order status'}</p>
							<button type="button" data-poll-retry class="inline-flex items-center rounded-lg bg-brand px-4 py-2 text-sm font-medium text-white hover:bg-brand-hover transition-colors mt-2">${window.__I18N_POLLING_RETRY__ || 'Retry'}</button>
							<div class="mt-3">
								<a href="/contact" class="inline-flex items-center text-sm text-gray-500 hover:underline">${window.__I18N_CONTACT_SUPPORT__ || 'Contact support'} &rarr;</a>
							</div>
						</div>
					`, SANITIZE_OPTS);

					const retryBtn = container.querySelector('[data-poll-retry]');
					if (retryBtn) {
						retryBtn.addEventListener('click', () => {
							attempts = 0;
							pollOrder();
						});
					}
				}
			};

			const showPollingExhausted = () => {
				const container = document.querySelector('[data-order-container]');
				if (container) {
					container.innerHTML = DOMPurify.sanitize(`
						<div class="text-center py-6" role="alert">
							<div class="mx-auto h-12 w-12 text-yellow-500 mb-4">
								<svg class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
								</svg>
							</div>
							<p class="text-lg text-gray-900 font-medium mb-2">${window.__I18N_POLLING_MAX_RETRIES__ || window.__I18N_PAYMENT_PROCESSING__ || 'Payment processing'}</p>
							<button type="button" data-poll-retry class="inline-flex items-center rounded-lg bg-brand px-4 py-2 text-sm font-medium text-white hover:bg-brand-hover transition-colors mt-2">${window.__I18N_POLLING_RETRY__ || 'Retry'}</button>
							<div class="mt-3">
								<a href="/contact" class="inline-flex items-center text-sm text-gray-500 hover:underline">${window.__I18N_CONTACT_SUPPORT__ || 'Contact support'} &rarr;</a>
							</div>
						</div>
					`, SANITIZE_OPTS);

					const retryBtn = container.querySelector('[data-poll-retry]');
					if (retryBtn) {
						retryBtn.addEventListener('click', () => {
							attempts = 0;
							pollOrder();
						});
					}
				}
			};

			const pollOrder = async () => {
				showPollingProgress();

				if (attempts >= MAX_ATTEMPTS) {
					showPollingExhausted();
					return;
				}

				const elapsed = Date.now() - pollStartTime;
				if (elapsed >= MAX_POLL_TIME_MS) {
					showPollingExhausted();
					return;
				}

				const delay = Math.min(1000 * Math.pow(2, attempts), MAX_DELAY_MS);
				await new Promise(resolve => setTimeout(resolve, delay));

				try {
					const base = window.__CHECKOUT_SUCCESS_API_BASE__ || window.location.origin;
					const encoded = encodeURIComponent(orderToken);
					const res = await fetch(`${base}/store/orders/${encoded}?poll=true`);

					if (res.status === 202) {
						// Order still pending, continue polling
						attempts++;
						pollOrder();
					} else if (res.ok) {
						// Payment confirmed - clear cart and update DOM
						clearCartStorage();
						const container = document.querySelector('[data-order-container]');
						if (container) {
							container.setAttribute('data-order-status', 'paid');
							const badge = container.querySelector('span[class*="rounded-full"]');
							if (badge) {
								badge.className = 'inline-flex items-center rounded-full px-3 py-1 text-sm font-medium bg-green-100 text-green-800';
								badge.textContent = window.__I18N_CONFIRMED__ || 'Confirmed';
							}
						}
					} else {
						// Server error - show error with retry
						showPollingError();
					}
				} catch {
					// Network error - show error with retry
					showPollingError();
				}
			};

			pollOrder();
		}
	}
</script>
