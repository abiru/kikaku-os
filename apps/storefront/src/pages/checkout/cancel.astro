---
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Checkout Canceled">
	<section class="bg-white py-12">
		<div class="mx-auto flex max-w-3xl flex-col items-center px-4 sm:px-6 lg:px-8">
			<div class="w-full rounded-2xl border border-zinc-200 bg-white p-8 text-center shadow-sm">
				<p class="text-sm font-semibold uppercase tracking-[0.2em] text-zinc-500">Checkout</p>
				<h1 class="mt-4 text-3xl font-semibold tracking-tight text-zinc-900">Checkout canceled</h1>
				<p class="mt-3 text-base text-zinc-600">
					You can return to the product list and try again anytime.
				</p>
				<div class="mt-6 flex justify-center">
					<a
						href="/products"
						class="rounded-xl border border-zinc-200 px-5 py-3 text-sm font-semibold text-zinc-700 transition hover:bg-zinc-50"
					>
						Back to products
					</a>
				</div>
			</div>
		</div>
	</section>
</Layout>
