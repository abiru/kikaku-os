---
import Button from '../../components/Button.astro';
import Container from '../../components/Container.astro';
import Layout from '../../layouts/Layout.astro';
---

<Layout title="Checkout Canceled">
	<div class="bg-white">
		<Container class="flex flex-col items-center py-16 sm:py-24">
			<div class="mx-auto w-full max-w-2xl text-center">
				<p class="text-sm font-semibold text-red-600">Checkout Canceled</p>
				<h1 class="mt-2 text-4xl font-bold tracking-tight text-zinc-900 sm:text-5xl">Payment was not processed</h1>
				<p class="mt-4 text-base text-zinc-500">
					Your order was not confirmed. No charges were made to your account. You can retry the checkout whenever you are ready.
				</p>
				<div class="mt-10 flex items-center justify-center gap-x-6">
					<Button href="/products" size="lg">
						Return to products
					</Button>
					<Button href="/" variant="link" size="lg">
						Go home <span aria-hidden="true"> &rarr;</span>
					</Button>
				</div>
			</div>
		</Container>
	</div>
</Layout>
