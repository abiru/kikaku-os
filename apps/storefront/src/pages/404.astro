---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
import { t } from '../i18n';
---

<Layout title={`${t('errors.notFoundCode')} - ${t('errors.notFound')}`}>
	<div class="min-h-[60vh] flex items-center justify-center py-20">
		<Container>
			<div class="text-center max-w-lg mx-auto">
				<p class="text-[80px] md:text-[120px] font-bold text-[#d2d2d7] leading-none select-none">
					{t('errors.notFoundCode')}
				</p>
				<h1 class="mt-4 text-[28px] md:text-[32px] font-semibold text-primary tracking-tight">
					{t('errors.notFound')}
				</h1>
				<p class="mt-3 text-[17px] text-secondary leading-relaxed">
					{t('errors.notFoundMessage')}
				</p>
				<div class="mt-8">
					<a
						href="/"
						class="inline-flex items-center gap-2 h-12 px-6 py-3 bg-brand text-white text-base font-semibold rounded-lg hover:bg-brand-hover transition-colors focus-visible:outline-none focus-visible:ring-3 focus-visible:ring-brand/30 motion-safe:active:scale-[0.98]"
					>
						{t('errors.backToHome')}
					</a>
				</div>
			</div>
		</Container>
	</div>
</Layout>
