---
import Button from '../components/Button.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Led Kikaku - Pro Growth">
	<div class="bg-[#f5f5f7]">
		{/* Hero Section - Apple Style Jumbotron */}
		<section class="relative w-full pt-16 pb-20 text-center lg:pt-32 lg:pb-32">
			<div class="mx-auto max-w-[980px] px-6">
				<h1 class="text-5xl font-semibold tracking-tight text-[#1d1d1f] md:text-7xl">
					Plant cultivation,<br />
					<span class="text-[#6e6e73]">more freely.</span>
				</h1>
				<p class="mt-6 text-xl font-medium text-[#1d1d1f] md:text-2xl">
					Beyond the limits of natural light. Next-generation LED lights.
				</p>
				<div class="mt-10 flex items-center justify-center gap-4">
					<Button href="/products" size="lg">Buy</Button>
					<Button href="/products" variant="link" size="lg">Learn more ></Button>
				</div>
			</div>
			
			{/* Hero Image Placeholder - Mimicking a high-res product shot */}
			<div class="mt-14 w-full px-4 md:px-0">
				<div class="mx-auto aspect-[16/9] max-w-[1200px] rounded-3xl bg-white shadow-2xl shadow-black/5 ring-1 ring-black/5 flex items-center justify-center overflow-hidden">
					<div class="text-center">
						<div class="text-9xl font-bold text-gray-100 select-none">SF1000</div>
					</div>
				</div>
			</div>
		</section>

		{/* Secondary Feature Section */}
		<section class="py-24 bg-white">
			<div class="mx-auto max-w-[980px] px-6 text-center">
				<h2 class="text-4xl font-semibold tracking-tight text-[#1d1d1f] md:text-5xl">
					Pro-grade spectrum.
				</h2>
				<p class="mt-4 text-lg font-medium text-[#86868b] md:text-xl">
					Optimized for every stage of plant growth.
				</p>
			</div>
		</section>
	</div>
</Layout>
