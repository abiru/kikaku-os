---
export const prerender = false;

import Container from '../components/Container.astro';
import Layout from '../layouts/Layout.astro';
import { t } from '../i18n';
---

<Layout title={t('pages.legalNotice.pageTitle')}>
	<div class="bg-white min-h-screen">
		<section class="pt-24 pb-20 md:pt-32 md:pb-28">
			<Container class="max-w-4xl">
				<h1 class="text-4xl md:text-5xl font-bold tracking-tight text-primary text-center">
					{t('pages.legalNotice.title')}
				</h1>

				<div class="mt-10 overflow-hidden rounded-2xl border border-gray-200 bg-white shadow-sm">
					<dl class="divide-y divide-gray-200">
						<div class="grid gap-2 p-5 md:grid-cols-[220px_1fr]">
							<dt class="font-semibold text-primary">{t('pages.legalNotice.seller')}</dt>
							<dd class="text-secondary">{t('pages.legalNotice.sellerValue')}</dd>
						</div>
						<div class="grid gap-2 p-5 md:grid-cols-[220px_1fr]">
							<dt class="font-semibold text-primary">{t('pages.legalNotice.representative')}</dt>
							<dd class="text-secondary">{t('pages.legalNotice.representativeValue')}</dd>
						</div>
						<div class="grid gap-2 p-5 md:grid-cols-[220px_1fr]">
							<dt class="font-semibold text-primary">{t('pages.legalNotice.addressPhone')}</dt>
							<dd class="text-secondary">{t('pages.legalNotice.addressPhoneValue')}</dd>
						</div>
						<div class="grid gap-2 p-5 md:grid-cols-[220px_1fr]">
							<dt class="font-semibold text-primary">{t('pages.legalNotice.email')}</dt>
							<dd class="text-secondary"><a href="/contact" class="text-brand hover:underline">{t('pages.legalNotice.emailValue')}</a></dd>
						</div>
						<div class="grid gap-2 p-5 md:grid-cols-[220px_1fr]">
							<dt class="font-semibold text-primary">{t('pages.legalNotice.price')}</dt>
							<dd class="text-secondary">{t('pages.legalNotice.priceValue')}</dd>
						</div>
						<div class="grid gap-2 p-5 md:grid-cols-[220px_1fr]">
							<dt class="font-semibold text-primary">{t('pages.legalNotice.additionalFees')}</dt>
							<dd class="text-secondary">{t('pages.legalNotice.additionalFeesValue')}</dd>
						</div>
						<div class="grid gap-2 p-5 md:grid-cols-[220px_1fr]">
							<dt class="font-semibold text-primary">{t('pages.legalNotice.paymentMethod')}</dt>
							<dd class="text-secondary">{t('pages.legalNotice.paymentMethodValue')}</dd>
						</div>
						<div class="grid gap-2 p-5 md:grid-cols-[220px_1fr]">
							<dt class="font-semibold text-primary">{t('pages.legalNotice.deliveryTime')}</dt>
							<dd class="text-secondary">{t('pages.legalNotice.deliveryTimeValue')}</dd>
						</div>
						<div class="grid gap-2 p-5 md:grid-cols-[220px_1fr]">
							<dt class="font-semibold text-primary">{t('pages.legalNotice.returnPolicy')}</dt>
							<dd class="text-secondary">
								{t('pages.legalNotice.returnPolicyValue').split('{link}')[0]}<a href="/refund" class="text-brand hover:underline">{t('pages.legalNotice.returnPolicyLink')}</a>{t('pages.legalNotice.returnPolicyValue').split('{link}')[1]}
							</dd>
						</div>
					</dl>
				</div>
			</Container>
		</section>
	</div>
</Layout>
