---
import AccountLayout from '../../layouts/AccountLayout.astro';
import Container from '../../components/Container.astro';
import { t } from '../../i18n';

const API_BASE = import.meta.env.PUBLIC_API_BASE || 'http://localhost:8787';

// Get auth token from request
const authHeader = Astro.request.headers.get('authorization');

let account = null;
let stats = null;
let recentOrders: Array<{
  id: number;
  status: string;
  total_amount: number;
  currency: string;
  created_at: string;
}> = [];
let error = null;

try {
  const response = await fetch(`${API_BASE}/store/account`, {
    headers: {
      'Authorization': authHeader || '',
    },
  });

  if (response.ok) {
    const data = await response.json();
    if (data.ok) {
      account = data.account;
      stats = data.stats;
    }
  }

  // Get recent orders
  const ordersResponse = await fetch(`${API_BASE}/store/account/orders?perPage=5`, {
    headers: {
      'Authorization': authHeader || '',
    },
  });

  if (ordersResponse.ok) {
    const ordersData = await ordersResponse.json();
    if (ordersData.ok) {
      recentOrders = ordersData.orders || [];
    }
  }
} catch (e) {
  error = 'Failed to load account data';
}

const formatCurrency = (amount: number, currency = 'JPY') => {
  return new Intl.NumberFormat('ja-JP', {
    style: 'currency',
    currency,
  }).format(amount);
};

const formatDate = (dateString: string) => {
  return new Date(dateString).toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: 'long',
    day: 'numeric',
  });
};

const statusLabels: Record<string, string> = {
  completed: t('account.completed'),
  paid: t('account.paid'),
  pending: t('account.pending'),
};
---

<AccountLayout title="マイアカウント - Led Kikaku Store" activeTab="dashboard">
  <Container class="py-8">
    <div class="max-w-4xl mx-auto">
      {/* Welcome Section */}
      <div class="mb-8">
        <h1 class="text-2xl font-semibold text-[#1d1d1f]">
          {t('account.welcome')}、{account?.name || 'お客様'}
        </h1>
        <p class="text-[#86868b] mt-1">
          {account?.email}
        </p>
      </div>

      {/* Stats Cards */}
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mb-8">
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
          <div class="text-[#86868b] text-sm font-medium mb-1">
            {t('account.totalOrders')}
          </div>
          <div class="text-3xl font-semibold text-[#1d1d1f]">
            {stats?.total_orders || 0}
          </div>
        </div>
        <div class="bg-white rounded-xl p-6 shadow-sm border border-gray-200">
          <div class="text-[#86868b] text-sm font-medium mb-1">
            {t('account.totalSpent')}
          </div>
          <div class="text-3xl font-semibold text-[#1d1d1f]">
            {formatCurrency(stats?.total_spent || 0)}
          </div>
        </div>
      </div>

      {/* Recent Orders */}
      <div class="bg-white rounded-xl shadow-sm border border-gray-200">
        <div class="p-6 border-b border-gray-200 flex justify-between items-center">
          <h2 class="text-lg font-semibold text-[#1d1d1f]">
            {t('account.recentOrders')}
          </h2>
          {recentOrders.length > 0 && (
            <a href="/account/orders" class="text-sm text-[#0071e3] hover:underline">
              {t('account.viewAllOrders')}
            </a>
          )}
        </div>

        {recentOrders.length === 0 ? (
          <div class="p-8 text-center">
            <div class="text-[#86868b] mb-4">{t('account.noOrders')}</div>
            <a
              href="/products"
              class="inline-flex items-center justify-center px-6 py-2.5 bg-[#0071e3] text-white rounded-full text-sm font-medium hover:bg-[#0077ed] transition-colors"
            >
              {t('account.startShopping')}
            </a>
          </div>
        ) : (
          <div class="divide-y divide-gray-200">
            {recentOrders.map((order) => (
              <a
                href={`/account/orders/${order.id}`}
                class="flex items-center justify-between p-6 hover:bg-gray-50 transition-colors"
              >
                <div>
                  <div class="font-medium text-[#1d1d1f]">
                    {t('account.orderNumber')} #{order.id}
                  </div>
                  <div class="text-sm text-[#86868b] mt-1">
                    {formatDate(order.created_at)}
                  </div>
                </div>
                <div class="text-right">
                  <div class="font-medium text-[#1d1d1f]">
                    {formatCurrency(order.total_amount, order.currency)}
                  </div>
                  <div class={`text-sm mt-1 ${
                    order.status === 'completed' || order.status === 'paid'
                      ? 'text-green-600'
                      : 'text-yellow-600'
                  }`}>
                    {statusLabels[order.status] || order.status}
                  </div>
                </div>
              </a>
            ))}
          </div>
        )}
      </div>
    </div>
  </Container>
</AccountLayout>
