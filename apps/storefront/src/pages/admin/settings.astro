---
export const prerender = false;

import AdminLayout from '../../layouts/AdminLayout.astro';
import Button from '../../components/Button.astro';
import Badge from '../../components/Badge.astro';
import { getApiBase } from '../../lib/api';

const apiBase = getApiBase();
const apiKey = import.meta.env.ADMIN_API_KEY;

type Setting = {
  id: number;
  key: string;
  value: string;
  category: string;
  data_type: string;
  description: string | null;
  display_order: number;
  is_active: number;
  created_at: string;
  updated_at: string;
};

type GroupedSettings = Record<string, Setting[]>;

let grouped: GroupedSettings = {};
let error: string | null = null;
let success: string | null = null;

// Fetch settings
if (!apiKey) {
  error = 'ADMIN_API_KEY is missing in server environment';
} else {
  try {
    const res = await fetch(`${apiBase}/admin/settings`, {
      headers: { 'x-admin-key': apiKey }
    });

    if (res.ok) {
      const data = await res.json();
      grouped = data.grouped || {};
    } else {
      error = `Failed to load settings: ${res.status}`;
    }
  } catch (e) {
    console.error(e);
    error = 'Failed to load settings';
  }
}

// Handle POST submission
if (Astro.request.method === 'POST') {
  try {
    const formData = await Astro.request.formData();
    const updates: { key: string; value: string }[] = [];

    // Build updates from all settings (including unchecked checkboxes)
    for (const category of Object.values(grouped)) {
      for (const setting of category) {
        const formKey = `setting_${setting.key}`;
        const formValue = formData.get(formKey);

        if (setting.data_type === 'boolean') {
          // Checkbox: true if checked, false otherwise
          updates.push({ key: setting.key, value: formValue === 'true' ? 'true' : 'false' });
        } else if (formValue !== null) {
          // Other types: only add if present in form
          updates.push({ key: setting.key, value: formValue.toString() });
        }
      }
    }

    if (updates.length > 0) {
      const res = await fetch(`${apiBase}/admin/settings/bulk`, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'x-admin-key': apiKey!
        },
        body: JSON.stringify({ settings: updates })
      });

      const data = await res.json();

      if (res.ok) {
        success = `Successfully updated ${data.results?.length || 0} setting(s)`;
        if (data.errors && data.errors.length > 0) {
          error = `Some settings failed: ${data.errors.map((e: any) => e.key).join(', ')}`;
        }

        // Refresh settings
        const refreshRes = await fetch(`${apiBase}/admin/settings`, {
          headers: { 'x-admin-key': apiKey! }
        });
        if (refreshRes.ok) {
          const refreshData = await refreshRes.json();
          grouped = refreshData.grouped || {};
        }
      } else {
        error = data.message || 'Failed to update settings';
      }
    }
  } catch (e) {
    console.error(e);
    error = 'Failed to save settings';
  }
}

const categoryLabels: Record<string, string> = {
  shipping: '配送設定',
  company: '会社情報',
  store: 'ストア設定',
  general: '一般設定'
};

const getInputType = (dataType: string) => {
  switch (dataType) {
    case 'integer': return 'number';
    case 'email': return 'email';
    case 'url': return 'url';
    case 'boolean': return 'checkbox';
    default: return 'text';
  }
};

const formatValue = (value: string, dataType: string) => {
  if (dataType === 'boolean') {
    return ['true', '1'].includes(value.toLowerCase());
  }
  return value;
};
---

<AdminLayout title="Settings - Admin">
  <div class="space-y-6">
    <div class="flex items-center justify-between">
      <div class="flex items-center gap-4">
        <h1 class="text-2xl font-semibold text-gray-900">Application Settings</h1>
        <span class="text-xs text-gray-500 bg-gray-100 px-2 py-1 rounded-full">
          {Object.values(grouped).flat().length} settings
        </span>
      </div>
    </div>

    {error && (
      <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg text-sm">
        {error}
      </div>
    )}

    {success && (
      <div class="bg-green-50 border border-green-200 text-green-600 px-4 py-3 rounded-lg text-sm">
        {success}
      </div>
    )}

    <form method="POST" class="space-y-6">
      {Object.entries(grouped).map(([category, settings]) => (
        <div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
          <div class="px-6 py-4 border-b border-gray-200 bg-gray-50">
            <h2 class="text-lg font-semibold text-gray-900">
              {categoryLabels[category] || category}
            </h2>
          </div>

          <div class="p-6 space-y-6">
            {settings.map((setting) => (
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4 items-start">
                <div class="md:col-span-1">
                  <label for={`setting_${setting.key}`} class="block text-sm font-medium text-gray-900">
                    {setting.description || setting.key}
                  </label>
                  <p class="text-xs text-gray-500 mt-1">
                    {setting.key}
                  </p>
                  <Badge severity="secondary" class="mt-2 text-xs">
                    {setting.data_type}
                  </Badge>
                </div>

                <div class="md:col-span-2">
                  {setting.data_type === 'text' ? (
                    <textarea
                      id={`setting_${setting.key}`}
                      name={`setting_${setting.key}`}
                      rows={3}
                      class="w-full px-4 py-2 border border-gray-200 rounded-lg text-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all"
                    >{setting.value}</textarea>
                  ) : setting.data_type === 'boolean' ? (
                    <label class="flex items-center gap-3 cursor-pointer">
                      <input
                        type="checkbox"
                        id={`setting_${setting.key}`}
                        name={`setting_${setting.key}`}
                        value="true"
                        checked={formatValue(setting.value, setting.data_type)}
                        class="w-5 h-5 text-indigo-600 border-gray-300 rounded focus:ring-indigo-500 focus:ring-2"
                      />
                      <span class="text-sm text-gray-700">Enabled</span>
                    </label>
                  ) : (
                    <input
                      type={getInputType(setting.data_type)}
                      id={`setting_${setting.key}`}
                      name={`setting_${setting.key}`}
                      value={setting.value}
                      step={setting.data_type === 'integer' ? '1' : undefined}
                      class="w-full px-4 py-2 border border-gray-200 rounded-lg text-sm text-gray-900 focus:outline-none focus:ring-2 focus:ring-indigo-500/20 focus:border-indigo-500 transition-all"
                    />
                  )}
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}

      <div class="flex gap-3 sticky bottom-4 bg-white p-4 rounded-xl border border-gray-200 shadow-lg">
        <Button type="submit" variant="primary" size="sm">
          Save All Settings
        </Button>
        <Button href="/admin/" variant="secondary" size="sm">
          Cancel
        </Button>
      </div>
    </form>

    <div class="bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded-lg text-sm">
      <strong>Note:</strong> Settings apply immediately after saving. Secret keys (Stripe, Clerk) must be managed through environment variables.
    </div>
  </div>
</AdminLayout>
