---
export const prerender = false;

import { Alert } from '../../../components/catalyst/alert-banner';
import { Badge } from '../../../components/catalyst/badge';
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getApiBase } from '../../../lib/api';
import { formatDate } from '../../../lib/format';
import { Heading, Subheading } from '../../../components/catalyst/heading';
import { Table, TableHead, TableBody, TableRow, TableHeader, TableCell } from '../../../components/catalyst/table';
import FulfillmentModals from '../../../components/admin/FulfillmentModals.astro';
import RefundModals from '../../../components/admin/RefundModals.astro';
import { t } from '../../../i18n';

const { id } = Astro.params;
const apiBase = getApiBase();

type Fulfillment = {
	id: number;
	status: string;
	tracking_number: string | null;
	created_at: string;
	updated_at: string;
};

type OrderDetail = {
	id: number;
	status: string;
	customer_email: string | null;
	total_amount: number;
	total_net: number;
	currency: string;
	created_at: string;
	paid_at: string | null;
	subtotal?: number;
	tax_amount?: number;
	total_discount: number;
	shipping_fee: number;
	provider_checkout_session_id?: string;
	provider_payment_intent_id?: string;
};

type Payment = {
	id: number;
	status: string;
	amount: number;
	currency: string;
	provider_payment_id: string | null;
	created_at: string;
};

type Refund = {
	id: number;
	status: string;
	amount: number;
	currency: string;
	provider_refund_id: string | null;
	reason: string | null;
	created_at: string;
};

type StripeEvent = {
	event_id: string;
	event_type: string;
	processing_status: string;
	error: string | null;
	received_at: string;
};

let order: OrderDetail | null = null;
let payments: Payment[] = [];
let refunds: Refund[] = [];
let stripeEvents: StripeEvent[] = [];
let fulfillments: Fulfillment[] = [];
let error: string | null = null;

if (import.meta.env.ADMIN_API_KEY) {
	try {
		const res = await fetch(`${apiBase}/admin/orders/${id}`, {
			headers: { 'x-admin-key': import.meta.env.ADMIN_API_KEY }
		});

		if (!res.ok) {
			if (res.status === 404) {
				error = t('errors.orderNotFound');
			} else {
				throw new Error(`API Error: ${res.status}`);
			}
		} else {
			const data = await res.json();
			order = data.order;
			payments = data.payments || [];
			refunds = data.refunds || [];
			stripeEvents = data.stripeEvents || [];
			fulfillments = data.fulfillments || [];
		}
	} catch (e) {
		console.error(e);
		error = t('errors.failedToLoadOrderDetails');
	}
} else {
	error = t('errors.adminKeyMissing');
}

const formatCurrency = (amount: number, currency: string) => {
	return new Intl.NumberFormat('ja-JP', { style: 'currency', currency }).format(amount);
};

const dateTimeOpts: Intl.DateTimeFormatOptions = {
	year: 'numeric',
	month: '2-digit',
	day: '2-digit',
	hour: '2-digit',
	minute: '2-digit'
};

const getStatusColor = (status: string) => {
	switch (status) {
		case 'paid':
		case 'completed':
		case 'succeeded':
			return 'blue';
		case 'pending':
			return 'yellow';
		case 'failed':
		case 'refunded':
			return 'red';
		default:
			return 'zinc';
	}
};

const getFulfillmentStatusColor = (status: string) => {
	switch (status) {
		case 'delivered':
			return 'green';
		case 'shipped':
			return 'blue';
		case 'processing':
			return 'yellow';
		case 'pending':
			return 'amber';
		case 'cancelled':
			return 'red';
		default:
			return 'zinc';
	}
};

const apiKey = import.meta.env.ADMIN_API_KEY;
---

<AdminLayout title={`${t('admin.order')} #${id} - Admin`}>
	<div class="space-y-6" data-order-id={id} data-payments={JSON.stringify(payments)} data-refunds={JSON.stringify(refunds)}>
		<div class="flex items-center gap-4">
			<a href="/admin/orders" class="text-indigo-600 hover:underline text-sm flex items-center gap-1">
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
				</svg>
				{t('admin.orders')}
			</a>
			<Heading>{t('admin.order')} #{id}</Heading>
			{order && <Badge color={getStatusColor(order.status)} client:load>{order.status}</Badge>}
		</div>
			{error && (
				<Alert color="red" client:load>
					{error}
				</Alert>
			)}

			{order && (
				<div class="space-y-6">
					{/* Order Summary */}
					<div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
						<Subheading>{t('admin.orderSummary')}</Subheading>
						<dl class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
							<div>
								<dt class="text-secondary">{t('admin.total')}</dt>
								<dd class="font-semibold text-zinc-950 text-lg">{formatCurrency(order.total_amount || order.total_net, order.currency)}</dd>
							</div>
							<div>
								<dt class="text-secondary">{t('admin.customer')}</dt>
								<dd class="text-zinc-950">{order.customer_email || t('admin.guest')}</dd>
							</div>
							<div>
								<dt class="text-secondary">{t('admin.created')}</dt>
								<dd class="text-zinc-950 tabular-nums">{formatDate(order.created_at, dateTimeOpts)}</dd>
							</div>
							<div>
								<dt class="text-secondary">{t('admin.paidAt')}</dt>
								<dd class="text-zinc-950 tabular-nums">{formatDate(order.paid_at, dateTimeOpts)}</dd>
							</div>
						</dl>

						{/* Tax Breakdown */}
						{(order.subtotal !== undefined || order.tax_amount !== undefined) && (
							<div class="mt-4 pt-4 border-t border-gray-100">
								<h3 class="text-xs font-medium text-secondary uppercase tracking-wider mb-3">{t('admin.priceBreakdown')}</h3>
								<dl class="space-y-2 text-sm">
									{order.subtotal !== undefined && (
										<div class="flex justify-between">
											<dt class="text-secondary">{t('admin.subtotalExTax')}</dt>
											<dd class="font-medium text-zinc-950 tabular-nums">{formatCurrency(order.subtotal, order.currency)}</dd>
										</div>
									)}
									{order.tax_amount !== undefined && (
										<div class="flex justify-between">
											<dt class="text-secondary">{t('admin.taxConsumption')}</dt>
											<dd class="font-medium text-zinc-950 tabular-nums">{formatCurrency(order.tax_amount, order.currency)}</dd>
										</div>
									)}
									{order.total_discount > 0 && (
										<div class="flex justify-between">
											<dt class="text-secondary">{t('admin.discount')}</dt>
											<dd class="font-medium text-red-600 tabular-nums">-{formatCurrency(order.total_discount, order.currency)}</dd>
										</div>
									)}
									{order.shipping_fee > 0 && (
										<div class="flex justify-between">
											<dt class="text-secondary">{t('admin.shippingFee')}</dt>
											<dd class="font-medium text-zinc-950 tabular-nums">{formatCurrency(order.shipping_fee, order.currency)}</dd>
										</div>
									)}
									<div class="flex justify-between pt-2 border-t border-gray-100">
										<dt class="text-zinc-950 font-semibold">{t('admin.totalInclTax')}</dt>
										<dd class="font-bold text-zinc-950 text-lg tabular-nums">{formatCurrency(order.total_amount || order.total_net, order.currency)}</dd>
									</div>
								</dl>
							</div>
						)}

						{(order.provider_checkout_session_id || order.provider_payment_intent_id) && (
							<div class="mt-4 pt-4 border-t border-gray-100">
								<h3 class="text-xs font-medium text-secondary uppercase tracking-wider mb-2">{t('admin.stripeIds')}</h3>
								<div class="text-xs text-zinc-950 font-mono space-y-1">
									{order.provider_checkout_session_id && (
										<div>Checkout: <span class="bg-gray-100 px-1 py-0.5 rounded">{order.provider_checkout_session_id}</span></div>
									)}
									{order.provider_payment_intent_id && (
										<div>PaymentIntent: <span class="bg-gray-100 px-1 py-0.5 rounded">{order.provider_payment_intent_id}</span></div>
									)}
								</div>
							</div>
						)}
					</div>

					{/* Fulfillments */}
					<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
							<div class="flex items-center gap-2">
								<Subheading>{t('admin.fulfillments')}</Subheading>
								<span class="text-xs text-secondary bg-gray-100 px-2 py-1 rounded-full">{fulfillments.length}</span>
							</div>
							{order.status === 'paid' && (
								<button
									type="button"
									id="create-fulfillment-btn"
									class="text-sm text-brand hover:underline flex items-center gap-1"
								>
									<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
									</svg>
									{t('admin.createFulfillment')}
								</button>
							)}
						</div>
						<div class="overflow-x-auto">
							<Table client:only="react">
								<TableHead>
									<TableRow>
										<TableHeader>ID</TableHeader>
										<TableHeader>{t('admin.status')}</TableHeader>
										<TableHeader>{t('admin.trackingNumber')}</TableHeader>
										<TableHeader>{t('admin.created')}</TableHeader>
										<TableHeader>{t('admin.actions')}</TableHeader>
									</TableRow>
								</TableHead>
								<TableBody>
									{fulfillments.length > 0 ? (
										fulfillments.map((f) => (
											<TableRow>
												<TableCell>{f.id}</TableCell>
												<TableCell><Badge color={getFulfillmentStatusColor(f.status)} client:load>{f.status}</Badge></TableCell>
												<TableCell className="font-mono text-xs">{f.tracking_number || '-'}</TableCell>
												<TableCell className="text-secondary tabular-nums">{formatDate(f.created_at, dateTimeOpts)}</TableCell>
												<TableCell>
													<button
														type="button"
														class="edit-fulfillment-btn text-sm text-brand hover:underline"
														data-fulfillment={JSON.stringify(f)}
													>
														{t('common.edit')}
													</button>
												</TableCell>
											</TableRow>
										))
									) : (
										<TableRow><TableCell colSpan={5} className="text-center text-secondary">{t('admin.noFulfillments')}</TableCell></TableRow>
									)}
								</TableBody>
							</Table>
						</div>
					</div>

					{/* Payments */}
					<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
							<Subheading>{t('admin.payments')}</Subheading>
							<span class="text-xs text-secondary bg-gray-100 px-2 py-1 rounded-full">{payments.length}</span>
						</div>
						<div class="overflow-x-auto">
							<Table client:only="react">
								<TableHead>
									<TableRow>
										<TableHeader>ID</TableHeader>
										<TableHeader>{t('admin.status')}</TableHeader>
										<TableHeader>{t('admin.amount')}</TableHeader>
										<TableHeader>{t('admin.providerId')}</TableHeader>
										<TableHeader>{t('admin.date')}</TableHeader>
									</TableRow>
								</TableHead>
								<TableBody>
									{payments.length > 0 ? (
										payments.map((p) => (
											<TableRow>
												<TableCell>{p.id}</TableCell>
												<TableCell><Badge color={getStatusColor(p.status)} client:load>{p.status}</Badge></TableCell>
												<TableCell className="tabular-nums">{formatCurrency(p.amount, p.currency)}</TableCell>
												<TableCell className="font-mono text-xs">{p.provider_payment_id || '-'}</TableCell>
												<TableCell className="text-secondary tabular-nums">{formatDate(p.created_at, dateTimeOpts)}</TableCell>
											</TableRow>
										))
									) : (
										<TableRow><TableCell colSpan={5} className="text-center text-secondary">{t('admin.noPayments')}</TableCell></TableRow>
									)}
								</TableBody>
							</Table>
						</div>
					</div>

					{/* Refunds */}
					<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
							<div class="flex items-center gap-2">
								<Subheading>{t('admin.refunds')}</Subheading>
								<span class="text-xs text-secondary bg-gray-100 px-2 py-1 rounded-full">{refunds.length}</span>
							</div>
							{(order.status === 'paid' || order.status === 'partially_refunded') && (
								<button
									type="button"
									id="create-refund-btn"
									class="text-sm text-red-600 hover:underline flex items-center gap-1"
								>
									<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
									</svg>
									{t('admin.createRefund')}
								</button>
							)}
						</div>
						<div class="overflow-x-auto">
							<Table client:only="react">
								<TableHead>
									<TableRow>
										<TableHeader>ID</TableHeader>
										<TableHeader>{t('admin.status')}</TableHeader>
										<TableHeader>{t('admin.amount')}</TableHeader>
										<TableHeader>{t('admin.providerId')}</TableHeader>
										<TableHeader>{t('admin.reason')}</TableHeader>
										<TableHeader>{t('admin.date')}</TableHeader>
									</TableRow>
								</TableHead>
								<TableBody>
									{refunds.length > 0 ? (
										refunds.map((r) => (
											<TableRow>
												<TableCell>{r.id}</TableCell>
												<TableCell><Badge color={getStatusColor(r.status)} client:load>{r.status}</Badge></TableCell>
												<TableCell className="tabular-nums">{formatCurrency(r.amount, r.currency)}</TableCell>
												<TableCell className="font-mono text-xs">{r.provider_refund_id || '-'}</TableCell>
												<TableCell className="text-secondary">{r.reason || '-'}</TableCell>
												<TableCell className="text-secondary tabular-nums">{formatDate(r.created_at, dateTimeOpts)}</TableCell>
											</TableRow>
										))
									) : (
										<TableRow><TableCell colSpan={6} className="text-center text-secondary">{t('admin.noRefunds')}</TableCell></TableRow>
									)}
								</TableBody>
							</Table>
						</div>
					</div>

					{/* Stripe Events */}
					<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
							<Subheading>{t('admin.stripeEvents')}</Subheading>
							<span class="text-xs text-secondary bg-gray-100 px-2 py-1 rounded-full">{stripeEvents.length}</span>
						</div>
						<div class="overflow-x-auto">
							<Table client:only="react">
								<TableHead>
									<TableRow>
										<TableHeader>{t('admin.eventId')}</TableHeader>
										<TableHeader>{t('admin.type')}</TableHeader>
										<TableHeader>{t('admin.status')}</TableHeader>
										<TableHeader>{t('admin.errorLabel')}</TableHeader>
										<TableHeader>{t('admin.received')}</TableHeader>
									</TableRow>
								</TableHead>
								<TableBody>
									{stripeEvents.length > 0 ? (
										stripeEvents.map((e) => (
											<TableRow>
												<TableCell className="font-mono text-xs">{e.event_id}</TableCell>
												<TableCell className="font-mono text-xs">{e.event_type}</TableCell>
												<TableCell><Badge color={getStatusColor(e.processing_status)} client:load>{e.processing_status}</Badge></TableCell>
												<TableCell className="text-xs text-red-600">{e.error || '-'}</TableCell>
												<TableCell className="text-secondary tabular-nums">{formatDate(e.received_at, dateTimeOpts)}</TableCell>
											</TableRow>
										))
									) : (
										<TableRow><TableCell colSpan={5} className="text-center text-secondary">{t('admin.noRelatedEvents')}</TableCell></TableRow>
									)}
								</TableBody>
							</Table>
						</div>
					</div>
				</div>
			)}

			<FulfillmentModals orderId={id!} orderStatus={order?.status || ''} />
			<RefundModals orderId={id!} />
	</div>
</AdminLayout>

<script>
	import { initOrderDetailPage } from '../../../lib/admin/order-detail';

	const container = document.querySelector('[data-order-id]');
	const orderId = container?.getAttribute('data-order-id') || '';
	const payments = container?.getAttribute('data-payments') || '[]';
	const refundsData = container?.getAttribute('data-refunds') || '[]';

	if (document.readyState === 'loading') {
		document.addEventListener('DOMContentLoaded', () => initOrderDetailPage(orderId, payments, refundsData));
	} else {
		initOrderDetailPage(orderId, payments, refundsData);
	}
</script>
