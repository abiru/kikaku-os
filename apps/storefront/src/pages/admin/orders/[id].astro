---
export const prerender = false;

import Badge from '../../../components/Badge.astro';
import Button from '../../../components/Button.astro';
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getApiBase } from '../../../lib/api';

const { id } = Astro.params;
const apiBase = getApiBase();

type Fulfillment = {
	id: number;
	status: string;
	tracking_number: string | null;
	created_at: string;
	updated_at: string;
};

let order: any = null;
let payments: any[] = [];
let refunds: any[] = [];
let stripeEvents: any[] = [];
let fulfillments: Fulfillment[] = [];
let error: string | null = null;

if (import.meta.env.ADMIN_API_KEY) {
	try {
		const res = await fetch(`${apiBase}/admin/orders/${id}`, {
			headers: { 'x-admin-key': import.meta.env.ADMIN_API_KEY }
		});

		if (!res.ok) {
			if (res.status === 404) {
				error = 'Order not found.';
			} else {
				throw new Error(`API Error: ${res.status}`);
			}
		} else {
			const data = await res.json();
			order = data.order;
			payments = data.payments || [];
			refunds = data.refunds || [];
			stripeEvents = data.stripeEvents || [];
			fulfillments = data.fulfillments || [];
		}
	} catch (e) {
		console.error(e);
		error = 'Failed to load order details.';
	}
} else {
	error = 'ADMIN_API_KEY is missing.';
}

const formatCurrency = (amount: number, currency: string) => {
	return new Intl.NumberFormat('ja-JP', { style: 'currency', currency }).format(amount);
};

const formatDate = (dateStr: string | null) => {
	if (!dateStr) return '-';
	const d = new Date(dateStr);
	return `${d.toLocaleDateString()} ${d.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}`;
};

const getStatusSeverity = (status: string) => {
	switch (status) {
		case 'paid':
		case 'completed':
		case 'succeeded':
			return 'info';
		case 'pending':
			return 'warn';
		case 'failed':
		case 'refunded':
			return 'critical';
		default:
			return 'secondary';
	}
};

const getFulfillmentStatusSeverity = (status: string) => {
	switch (status) {
		case 'delivered':
			return 'info';
		case 'shipped':
			return 'info';
		case 'processing':
			return 'warn';
		case 'pending':
			return 'warn';
		case 'cancelled':
			return 'critical';
		default:
			return 'secondary';
	}
};

const apiKey = import.meta.env.ADMIN_API_KEY;
---

<AdminLayout title={`Order #${id} - Admin`}>
	<div class="space-y-6">
		<div class="flex items-center gap-4">
			<a href="/admin/orders" class="text-emerald-500 hover:underline text-sm flex items-center gap-1">
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
				</svg>
				Orders
			</a>
			<h1 class="text-2xl font-semibold text-zinc-900">Order #{id}</h1>
			{order && <Badge severity={getStatusSeverity(order.status)}>{order.status}</Badge>}
		</div>
			{error && (
				<div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg mb-6 text-sm">
					{error}
				</div>
			)}

			{order && (
				<div class="space-y-6">
					{/* Order Summary */}
					<div class="bg-white rounded-lg ring-1 ring-zinc-900/5 p-6">
						<h2 class="text-base font-semibold text-zinc-900 mb-4">Order Summary</h2>
						<dl class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
							<div>
								<dt class="text-zinc-500">Total</dt>
								<dd class="font-semibold text-zinc-900 text-lg">{formatCurrency(order.total_amount || order.total_net, order.currency)}</dd>
							</div>
							<div>
								<dt class="text-zinc-500">Customer</dt>
								<dd class="text-zinc-900">{order.customer_email || 'Guest'}</dd>
							</div>
							<div>
								<dt class="text-zinc-500">Created</dt>
								<dd class="text-zinc-900 tabular-nums">{formatDate(order.created_at)}</dd>
							</div>
							<div>
								<dt class="text-zinc-500">Paid At</dt>
								<dd class="text-zinc-900 tabular-nums">{formatDate(order.paid_at)}</dd>
							</div>
						</dl>

						{/* Tax Breakdown */}
						{(order.subtotal !== undefined || order.tax_amount !== undefined) && (
							<div class="mt-4 pt-4 border-t border-zinc-100">
								<h3 class="text-xs font-medium text-zinc-500 uppercase tracking-wider mb-3">Price Breakdown</h3>
								<dl class="space-y-2 text-sm">
									{order.subtotal !== undefined && (
										<div class="flex justify-between">
											<dt class="text-zinc-500">Subtotal (税抜)</dt>
											<dd class="font-medium text-zinc-900 tabular-nums">{formatCurrency(order.subtotal, order.currency)}</dd>
										</div>
									)}
									{order.tax_amount !== undefined && (
										<div class="flex justify-between">
											<dt class="text-zinc-500">Tax (消費税)</dt>
											<dd class="font-medium text-zinc-900 tabular-nums">{formatCurrency(order.tax_amount, order.currency)}</dd>
										</div>
									)}
									{order.total_discount > 0 && (
										<div class="flex justify-between">
											<dt class="text-zinc-500">Discount</dt>
											<dd class="font-medium text-red-600 tabular-nums">-{formatCurrency(order.total_discount, order.currency)}</dd>
										</div>
									)}
									{order.shipping_fee > 0 && (
										<div class="flex justify-between">
											<dt class="text-zinc-500">Shipping</dt>
											<dd class="font-medium text-zinc-900 tabular-nums">{formatCurrency(order.shipping_fee, order.currency)}</dd>
										</div>
									)}
									<div class="flex justify-between pt-2 border-t border-zinc-100">
										<dt class="text-zinc-900 font-semibold">Total (税込)</dt>
										<dd class="font-bold text-zinc-900 text-lg tabular-nums">{formatCurrency(order.total_amount || order.total_net, order.currency)}</dd>
									</div>
								</dl>
							</div>
						)}

						{(order.provider_checkout_session_id || order.provider_payment_intent_id) && (
							<div class="mt-4 pt-4 border-t border-zinc-100">
								<h3 class="text-xs font-medium text-zinc-500 uppercase tracking-wider mb-2">Stripe IDs</h3>
								<div class="text-xs text-zinc-900 font-mono space-y-1">
									{order.provider_checkout_session_id && (
										<div>Checkout: <span class="bg-zinc-100 px-1 py-0.5 rounded">{order.provider_checkout_session_id}</span></div>
									)}
									{order.provider_payment_intent_id && (
										<div>PaymentIntent: <span class="bg-zinc-100 px-1 py-0.5 rounded">{order.provider_payment_intent_id}</span></div>
									)}
								</div>
							</div>
						)}
					</div>

					{/* Fulfillments */}
					<div class="bg-white rounded-lg ring-1 ring-zinc-900/5 overflow-hidden">
						<div class="px-6 py-4 border-b border-zinc-200 flex items-center justify-between">
							<div class="flex items-center gap-2">
								<h2 class="text-base font-semibold text-zinc-900">Fulfillments</h2>
								<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{fulfillments.length}</span>
							</div>
							{order.status === 'paid' && (
								<button
									type="button"
									id="create-fulfillment-btn"
									class="text-sm text-emerald-500 hover:underline flex items-center gap-1"
								>
									<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
									</svg>
									Create Fulfillment
								</button>
							)}
						</div>
						<div class="overflow-x-auto">
							<table class="w-full text-left text-sm text-zinc-900">
								<thead class="bg-zinc-50 border-b border-zinc-200">
									<tr>
										<th class="px-6 py-3 font-medium text-zinc-500">ID</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Status</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Tracking Number</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Created</th>
										<th class="px-6 py-3 font-medium text-zinc-500 text-right">Actions</th>
									</tr>
								</thead>
								<tbody class="divide-y divide-zinc-100">
									{fulfillments.length > 0 ? (
										fulfillments.map((f) => (
											<tr class="hover:bg-zinc-50 transition-colors">
												<td class="px-6 py-4 font-medium">{f.id}</td>
												<td class="px-6 py-4"><Badge severity={getFulfillmentStatusSeverity(f.status)}>{f.status}</Badge></td>
												<td class="px-6 py-4 font-mono text-xs">{f.tracking_number || '-'}</td>
												<td class="px-6 py-4 text-zinc-500 tabular-nums">{formatDate(f.created_at)}</td>
												<td class="px-6 py-4 text-right">
													<button
														type="button"
														class="edit-fulfillment-btn text-sm text-emerald-500 hover:underline"
														data-fulfillment={JSON.stringify(f)}
													>
														Edit
													</button>
												</td>
											</tr>
										))
									) : (
										<tr><td colspan="5" class="px-6 py-8 text-center text-zinc-500">No fulfillments</td></tr>
									)}
								</tbody>
							</table>
						</div>
					</div>

					{/* Payments */}
					<div class="bg-white rounded-lg ring-1 ring-zinc-900/5 overflow-hidden">
						<div class="px-6 py-4 border-b border-zinc-200 flex items-center justify-between">
							<h2 class="text-base font-semibold text-zinc-900">Payments</h2>
							<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{payments.length}</span>
						</div>
						<div class="overflow-x-auto">
							<table class="w-full text-left text-sm text-zinc-900">
								<thead class="bg-zinc-50 border-b border-zinc-200">
									<tr>
										<th class="px-6 py-3 font-medium text-zinc-500">ID</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Status</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Amount</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Provider ID</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Date</th>
									</tr>
								</thead>
								<tbody class="divide-y divide-zinc-100">
									{payments.length > 0 ? (
										payments.map((p) => (
											<tr class="hover:bg-zinc-50 transition-colors">
												<td class="px-6 py-4 font-medium">{p.id}</td>
												<td class="px-6 py-4"><Badge severity={getStatusSeverity(p.status)}>{p.status}</Badge></td>
												<td class="px-6 py-4 tabular-nums">{formatCurrency(p.amount, p.currency)}</td>
												<td class="px-6 py-4 font-mono text-xs">{p.provider_payment_id || '-'}</td>
												<td class="px-6 py-4 text-zinc-500 tabular-nums">{formatDate(p.created_at)}</td>
											</tr>
										))
									) : (
										<tr><td colspan="5" class="px-6 py-8 text-center text-zinc-500">No payments</td></tr>
									)}
								</tbody>
							</table>
						</div>
					</div>

					{/* Refunds */}
					<div class="bg-white rounded-lg ring-1 ring-zinc-900/5 overflow-hidden">
						<div class="px-6 py-4 border-b border-zinc-200 flex items-center justify-between">
							<h2 class="text-base font-semibold text-zinc-900">Refunds</h2>
							<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{refunds.length}</span>
						</div>
						<div class="overflow-x-auto">
							<table class="w-full text-left text-sm text-zinc-900">
								<thead class="bg-zinc-50 border-b border-zinc-200">
									<tr>
										<th class="px-6 py-3 font-medium text-zinc-500">ID</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Status</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Amount</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Provider ID</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Reason</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Date</th>
									</tr>
								</thead>
								<tbody class="divide-y divide-zinc-100">
									{refunds.length > 0 ? (
										refunds.map((r) => (
											<tr class="hover:bg-zinc-50 transition-colors">
												<td class="px-6 py-4 font-medium">{r.id}</td>
												<td class="px-6 py-4"><Badge severity={getStatusSeverity(r.status)}>{r.status}</Badge></td>
												<td class="px-6 py-4 tabular-nums">{formatCurrency(r.amount, r.currency)}</td>
												<td class="px-6 py-4 font-mono text-xs">{r.provider_refund_id || '-'}</td>
												<td class="px-6 py-4 text-zinc-500">{r.reason || '-'}</td>
												<td class="px-6 py-4 text-zinc-500 tabular-nums">{formatDate(r.created_at)}</td>
											</tr>
										))
									) : (
										<tr><td colspan="6" class="px-6 py-8 text-center text-zinc-500">No refunds</td></tr>
									)}
								</tbody>
							</table>
						</div>
					</div>

					{/* Stripe Events */}
					<div class="bg-white rounded-lg ring-1 ring-zinc-900/5 overflow-hidden">
						<div class="px-6 py-4 border-b border-zinc-200 flex items-center justify-between">
							<h2 class="text-base font-semibold text-zinc-900">Stripe Events</h2>
							<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{stripeEvents.length}</span>
						</div>
						<div class="overflow-x-auto">
							<table class="w-full text-left text-sm text-zinc-900">
								<thead class="bg-zinc-50 border-b border-zinc-200">
									<tr>
										<th class="px-6 py-3 font-medium text-zinc-500">Event ID</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Type</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Status</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Error</th>
										<th class="px-6 py-3 font-medium text-zinc-500">Received</th>
									</tr>
								</thead>
								<tbody class="divide-y divide-zinc-100">
									{stripeEvents.length > 0 ? (
										stripeEvents.map((e) => (
											<tr class="hover:bg-zinc-50 transition-colors">
												<td class="px-6 py-4 font-mono text-xs">{e.event_id}</td>
												<td class="px-6 py-4 font-mono text-xs">{e.event_type}</td>
												<td class="px-6 py-4"><Badge severity={getStatusSeverity(e.processing_status)}>{e.processing_status}</Badge></td>
												<td class="px-6 py-4 text-xs text-red-600">{e.error || '-'}</td>
												<td class="px-6 py-4 text-zinc-500 tabular-nums">{formatDate(e.received_at)}</td>
											</tr>
										))
									) : (
										<tr><td colspan="5" class="px-6 py-8 text-center text-zinc-500">No related events</td></tr>
									)}
								</tbody>
							</table>
						</div>
					</div>
				</div>
			)}

			{/* Create Fulfillment Modal */}
			<div id="create-fulfillment-modal" class="hidden fixed inset-0 bg-zinc-900/50 z-50 flex items-center justify-center p-4">
				<div class="bg-white rounded-lg shadow-xl ring-1 ring-zinc-900/5 w-full max-w-md">
					<div class="p-6 border-b border-zinc-100">
						<h3 class="text-lg font-semibold text-zinc-900">Create Fulfillment</h3>
						<p class="text-sm text-zinc-500 mt-1">Order #{id}</p>
					</div>
					<form id="create-fulfillment-form" class="p-6 space-y-4">
						<div>
							<label for="create-status" class="block text-sm font-medium text-zinc-900 mb-2">
								Status
							</label>
							<select
								id="create-status"
								name="status"
								class="w-full px-4 py-2 border border-zinc-200 rounded-lg text-sm text-zinc-900 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all bg-white"
							>
								<option value="pending">Pending</option>
								<option value="processing">Processing</option>
								<option value="shipped">Shipped</option>
								<option value="delivered">Delivered</option>
							</select>
						</div>

						<div>
							<label for="create-tracking" class="block text-sm font-medium text-zinc-900 mb-2">
								Tracking Number
							</label>
							<input
								type="text"
								id="create-tracking"
								name="tracking_number"
								class="w-full px-4 py-2 border border-zinc-200 rounded-lg text-sm text-zinc-900 font-mono focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all"
								placeholder="Optional tracking number"
							/>
						</div>

						<div id="create-error" class="hidden bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg text-sm"></div>

						<div class="flex justify-end gap-3 pt-4 border-t border-zinc-100">
							<button
								type="button"
								id="cancel-create-btn"
								class="px-4 py-2 text-sm font-medium text-zinc-900 bg-zinc-100 rounded-lg hover:bg-zinc-200 transition-colors"
							>
								Cancel
							</button>
							<button
								type="submit"
								class="px-4 py-2 text-sm font-medium text-white bg-zinc-900 rounded-lg hover:bg-zinc-700 transition-colors"
							>
								Create
							</button>
						</div>
					</form>
				</div>
			</div>

			{/* Edit Fulfillment Modal */}
			<div id="edit-fulfillment-modal" class="hidden fixed inset-0 bg-zinc-900/50 z-50 flex items-center justify-center p-4">
				<div class="bg-white rounded-lg shadow-xl ring-1 ring-zinc-900/5 w-full max-w-md">
					<div class="p-6 border-b border-zinc-100">
						<h3 class="text-lg font-semibold text-zinc-900">Edit Fulfillment</h3>
						<p id="edit-subtitle" class="text-sm text-zinc-500 mt-1"></p>
					</div>
					<form id="edit-fulfillment-form" class="p-6 space-y-4">
						<input type="hidden" id="edit-fulfillment-id" name="fulfillmentId" />

						<div>
							<label for="edit-status" class="block text-sm font-medium text-zinc-900 mb-2">
								Status
							</label>
							<select
								id="edit-status"
								name="status"
								class="w-full px-4 py-2 border border-zinc-200 rounded-lg text-sm text-zinc-900 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all bg-white"
							>
								<option value="pending">Pending</option>
								<option value="processing">Processing</option>
								<option value="shipped">Shipped</option>
								<option value="delivered">Delivered</option>
								<option value="cancelled">Cancelled</option>
							</select>
						</div>

						<div>
							<label for="edit-tracking" class="block text-sm font-medium text-zinc-900 mb-2">
								Tracking Number
							</label>
							<input
								type="text"
								id="edit-tracking"
								name="tracking_number"
								class="w-full px-4 py-2 border border-zinc-200 rounded-lg text-sm text-zinc-900 font-mono focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all"
								placeholder="Optional tracking number"
							/>
						</div>

						<div id="edit-error" class="hidden bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg text-sm"></div>

						<div class="flex justify-end gap-3 pt-4 border-t border-zinc-100">
							<button
								type="button"
								id="cancel-edit-btn"
								class="px-4 py-2 text-sm font-medium text-zinc-900 bg-zinc-100 rounded-lg hover:bg-zinc-200 transition-colors"
							>
								Cancel
							</button>
							<button
								type="submit"
								class="px-4 py-2 text-sm font-medium text-white bg-zinc-900 rounded-lg hover:bg-zinc-700 transition-colors"
							>
								Save
							</button>
						</div>
					</form>
				</div>
			</div>
	</div>
</AdminLayout>

<script define:vars={{ apiBase, apiKey, orderId: id }}>
	// Create Modal elements
	const createModal = document.getElementById('create-fulfillment-modal');
	const createForm = document.getElementById('create-fulfillment-form');
	const createStatus = document.getElementById('create-status');
	const createTracking = document.getElementById('create-tracking');
	const createError = document.getElementById('create-error');
	const createBtn = document.getElementById('create-fulfillment-btn');
	const cancelCreateBtn = document.getElementById('cancel-create-btn');

	// Edit Modal elements
	const editModal = document.getElementById('edit-fulfillment-modal');
	const editForm = document.getElementById('edit-fulfillment-form');
	const editFulfillmentId = document.getElementById('edit-fulfillment-id');
	const editSubtitle = document.getElementById('edit-subtitle');
	const editStatus = document.getElementById('edit-status');
	const editTracking = document.getElementById('edit-tracking');
	const editError = document.getElementById('edit-error');
	const cancelEditBtn = document.getElementById('cancel-edit-btn');

	function showCreateModal() {
		createStatus.value = 'pending';
		createTracking.value = '';
		createError.classList.add('hidden');
		createModal.classList.remove('hidden');
	}

	function hideCreateModal() {
		createModal.classList.add('hidden');
		createForm.reset();
	}

	function showEditModal(fulfillment) {
		editFulfillmentId.value = fulfillment.id;
		editSubtitle.textContent = `Fulfillment #${fulfillment.id}`;
		editStatus.value = fulfillment.status;
		editTracking.value = fulfillment.tracking_number || '';
		editError.classList.add('hidden');
		editModal.classList.remove('hidden');
	}

	function hideEditModal() {
		editModal.classList.add('hidden');
		editForm.reset();
	}

	function showError(errorEl, message) {
		errorEl.textContent = message;
		errorEl.classList.remove('hidden');
	}

	// Event listeners
	createBtn?.addEventListener('click', showCreateModal);
	cancelCreateBtn?.addEventListener('click', hideCreateModal);
	cancelEditBtn?.addEventListener('click', hideEditModal);

	createModal?.addEventListener('click', (e) => {
		if (e.target === createModal) hideCreateModal();
	});

	editModal?.addEventListener('click', (e) => {
		if (e.target === editModal) hideEditModal();
	});

	document.querySelectorAll('.edit-fulfillment-btn').forEach((btn) => {
		btn.addEventListener('click', () => {
			const fulfillment = JSON.parse(btn.dataset.fulfillment);
			showEditModal(fulfillment);
		});
	});

	// Create fulfillment form submission
	createForm?.addEventListener('submit', async (e) => {
		e.preventDefault();

		const status = createStatus.value;
		const tracking_number = createTracking.value.trim() || null;

		try {
			const res = await fetch(`${apiBase}/admin/orders/${orderId}/fulfillments`, {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json',
					'x-admin-key': apiKey
				},
				body: JSON.stringify({ status, tracking_number })
			});

			if (!res.ok) {
				const data = await res.json();
				showError(createError, data.message || 'Failed to create fulfillment');
				return;
			}

			location.reload();
		} catch (err) {
			showError(createError, 'An error occurred. Please try again.');
		}
	});

	// Edit fulfillment form submission
	editForm?.addEventListener('submit', async (e) => {
		e.preventDefault();

		const fulfillmentId = editFulfillmentId.value;
		const status = editStatus.value;
		const tracking_number = editTracking.value.trim() || null;

		try {
			const res = await fetch(`${apiBase}/admin/fulfillments/${fulfillmentId}`, {
				method: 'PUT',
				headers: {
					'Content-Type': 'application/json',
					'x-admin-key': apiKey
				},
				body: JSON.stringify({ status, tracking_number })
			});

			if (!res.ok) {
				const data = await res.json();
				showError(editError, data.message || 'Failed to update fulfillment');
				return;
			}

			location.reload();
		} catch (err) {
			showError(editError, 'An error occurred. Please try again.');
		}
	});
</script>
