---
export const prerender = false;

import { Alert } from '../../../components/catalyst/alert-banner';
import { Badge } from '../../../components/catalyst/badge';
import { Button } from '../../../components/catalyst/button';
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getApiBase } from '../../../lib/api';
import { Heading, Subheading } from '../../../components/catalyst/heading';
import { Table, TableHead, TableBody, TableRow, TableHeader, TableCell } from '../../../components/catalyst/table';
import { Input } from '../../../components/catalyst/input';
import { Select } from '../../../components/catalyst/select';
import { Fieldset, Field } from '../../../components/catalyst/fieldset';

const { id } = Astro.params;
const apiBase = getApiBase();

type Fulfillment = {
	id: number;
	status: string;
	tracking_number: string | null;
	created_at: string;
	updated_at: string;
};

let order: any = null;
let payments: any[] = [];
let refunds: any[] = [];
let stripeEvents: any[] = [];
let fulfillments: Fulfillment[] = [];
let error: string | null = null;

if (import.meta.env.ADMIN_API_KEY) {
	try {
		const res = await fetch(`${apiBase}/admin/orders/${id}`, {
			headers: { 'x-admin-key': import.meta.env.ADMIN_API_KEY }
		});

		if (!res.ok) {
			if (res.status === 404) {
				error = 'Order not found.';
			} else {
				throw new Error(`API Error: ${res.status}`);
			}
		} else {
			const data = await res.json();
			order = data.order;
			payments = data.payments || [];
			refunds = data.refunds || [];
			stripeEvents = data.stripeEvents || [];
			fulfillments = data.fulfillments || [];
		}
	} catch (e) {
		console.error(e);
		error = 'Failed to load order details.';
	}
} else {
	error = 'ADMIN_API_KEY is missing.';
}

const formatCurrency = (amount: number, currency: string) => {
	return new Intl.NumberFormat('ja-JP', { style: 'currency', currency }).format(amount);
};

const formatDate = (dateStr: string | null) => {
	if (!dateStr) return '-';
	const d = new Date(dateStr);
	return `${d.toLocaleDateString()} ${d.toLocaleTimeString([], {hour: '2-digit', minute:'2-digit'})}`;
};

const getStatusColor = (status: string) => {
	switch (status) {
		case 'paid':
		case 'completed':
		case 'succeeded':
			return 'blue';
		case 'pending':
			return 'yellow';
		case 'failed':
		case 'refunded':
			return 'red';
		default:
			return 'zinc';
	}
};

const getFulfillmentStatusColor = (status: string) => {
	switch (status) {
		case 'delivered':
			return 'green';
		case 'shipped':
			return 'blue';
		case 'processing':
			return 'yellow';
		case 'pending':
			return 'amber';
		case 'cancelled':
			return 'red';
		default:
			return 'zinc';
	}
};

const apiKey = import.meta.env.ADMIN_API_KEY;
---

<AdminLayout title={`Order #${id} - Admin`}>
	<div class="space-y-6">
		<div class="flex items-center gap-4">
			<a href="/admin/orders" class="text-indigo-600 hover:underline text-sm flex items-center gap-1">
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
				</svg>
				Orders
			</a>
			<Heading>Order #{id}</Heading>
			{order && <Badge color={getStatusColor(order.status)} client:load>{order.status}</Badge>}
		</div>
			{error && (
				<Alert color="red" client:load>
					{error}
				</Alert>
			)}

			{order && (
				<div class="space-y-6">
					{/* Order Summary */}
					<div class="bg-white rounded-xl border border-gray-200 shadow-sm p-6">
						<Subheading>Order Summary</Subheading>
						<dl class="grid grid-cols-2 md:grid-cols-4 gap-4 text-sm">
							<div>
								<dt class="text-[#86868b]">Total</dt>
								<dd class="font-semibold text-zinc-950 text-lg">{formatCurrency(order.total_amount || order.total_net, order.currency)}</dd>
							</div>
							<div>
								<dt class="text-[#86868b]">Customer</dt>
								<dd class="text-zinc-950">{order.customer_email || 'Guest'}</dd>
							</div>
							<div>
								<dt class="text-[#86868b]">Created</dt>
								<dd class="text-zinc-950 tabular-nums">{formatDate(order.created_at)}</dd>
							</div>
							<div>
								<dt class="text-[#86868b]">Paid At</dt>
								<dd class="text-zinc-950 tabular-nums">{formatDate(order.paid_at)}</dd>
							</div>
						</dl>

						{/* Tax Breakdown */}
						{(order.subtotal !== undefined || order.tax_amount !== undefined) && (
							<div class="mt-4 pt-4 border-t border-gray-100">
								<h3 class="text-xs font-medium text-[#86868b] uppercase tracking-wider mb-3">Price Breakdown</h3>
								<dl class="space-y-2 text-sm">
									{order.subtotal !== undefined && (
										<div class="flex justify-between">
											<dt class="text-[#86868b]">Subtotal (税抜)</dt>
											<dd class="font-medium text-zinc-950 tabular-nums">{formatCurrency(order.subtotal, order.currency)}</dd>
										</div>
									)}
									{order.tax_amount !== undefined && (
										<div class="flex justify-between">
											<dt class="text-[#86868b]">Tax (消費税)</dt>
											<dd class="font-medium text-zinc-950 tabular-nums">{formatCurrency(order.tax_amount, order.currency)}</dd>
										</div>
									)}
									{order.total_discount > 0 && (
										<div class="flex justify-between">
											<dt class="text-[#86868b]">Discount</dt>
											<dd class="font-medium text-red-600 tabular-nums">-{formatCurrency(order.total_discount, order.currency)}</dd>
										</div>
									)}
									{order.shipping_fee > 0 && (
										<div class="flex justify-between">
											<dt class="text-[#86868b]">Shipping</dt>
											<dd class="font-medium text-zinc-950 tabular-nums">{formatCurrency(order.shipping_fee, order.currency)}</dd>
										</div>
									)}
									<div class="flex justify-between pt-2 border-t border-gray-100">
										<dt class="text-zinc-950 font-semibold">Total (税込)</dt>
										<dd class="font-bold text-zinc-950 text-lg tabular-nums">{formatCurrency(order.total_amount || order.total_net, order.currency)}</dd>
									</div>
								</dl>
							</div>
						)}

						{(order.provider_checkout_session_id || order.provider_payment_intent_id) && (
							<div class="mt-4 pt-4 border-t border-gray-100">
								<h3 class="text-xs font-medium text-[#86868b] uppercase tracking-wider mb-2">Stripe IDs</h3>
								<div class="text-xs text-zinc-950 font-mono space-y-1">
									{order.provider_checkout_session_id && (
										<div>Checkout: <span class="bg-gray-100 px-1 py-0.5 rounded">{order.provider_checkout_session_id}</span></div>
									)}
									{order.provider_payment_intent_id && (
										<div>PaymentIntent: <span class="bg-gray-100 px-1 py-0.5 rounded">{order.provider_payment_intent_id}</span></div>
									)}
								</div>
							</div>
						)}
					</div>

					{/* Fulfillments */}
					<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
							<div class="flex items-center gap-2">
								<Subheading>Fulfillments</Subheading>
								<span class="text-xs text-[#86868b] bg-gray-100 px-2 py-1 rounded-full">{fulfillments.length}</span>
							</div>
							{order.status === 'paid' && (
								<button
									type="button"
									id="create-fulfillment-btn"
									class="text-sm text-[#0071e3] hover:underline flex items-center gap-1"
								>
									<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
									</svg>
									Create Fulfillment
								</button>
							)}
						</div>
						<div class="overflow-x-auto">
							<Table client:only="react">
								<TableHead>
									<TableRow>
										<TableHeader>ID</TableHeader>
										<TableHeader>Status</TableHeader>
										<TableHeader>Tracking Number</TableHeader>
										<TableHeader>Created</TableHeader>
										<TableHeader>Actions</TableHeader>
									</TableRow>
								</TableHead>
								<TableBody>
									{fulfillments.length > 0 ? (
										fulfillments.map((f) => (
											<TableRow>
												<TableCell>{f.id}</TableCell>
												<TableCell><Badge color={getFulfillmentStatusColor(f.status)} client:load>{f.status}</Badge></TableCell>
												<TableCell className="font-mono text-xs">{f.tracking_number || '-'}</TableCell>
												<TableCell className="text-[#86868b] tabular-nums">{formatDate(f.created_at)}</TableCell>
												<TableCell>
													<button
														type="button"
														class="edit-fulfillment-btn text-sm text-[#0071e3] hover:underline"
														data-fulfillment={JSON.stringify(f)}
													>
														Edit
													</button>
												</TableCell>
											</TableRow>
										))
									) : (
										<TableRow><TableCell colSpan={5} className="text-center text-[#86868b]">No fulfillments</TableCell></TableRow>
									)}
								</TableBody>
							</Table>
						</div>
					</div>

					{/* Payments */}
					<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
							<Subheading>Payments</Subheading>
							<span class="text-xs text-[#86868b] bg-gray-100 px-2 py-1 rounded-full">{payments.length}</span>
						</div>
						<div class="overflow-x-auto">
							<Table client:only="react">
								<TableHead>
									<TableRow>
										<TableHeader>ID</TableHeader>
										<TableHeader>Status</TableHeader>
										<TableHeader>Amount</TableHeader>
										<TableHeader>Provider ID</TableHeader>
										<TableHeader>Date</TableHeader>
									</TableRow>
								</TableHead>
								<TableBody>
									{payments.length > 0 ? (
										payments.map((p) => (
											<TableRow>
												<TableCell>{p.id}</TableCell>
												<TableCell><Badge color={getStatusColor(p.status)} client:load>{p.status}</Badge></TableCell>
												<TableCell className="tabular-nums">{formatCurrency(p.amount, p.currency)}</TableCell>
												<TableCell className="font-mono text-xs">{p.provider_payment_id || '-'}</TableCell>
												<TableCell className="text-[#86868b] tabular-nums">{formatDate(p.created_at)}</TableCell>
											</TableRow>
										))
									) : (
										<TableRow><TableCell colSpan={5} className="text-center text-[#86868b]">No payments</TableCell></TableRow>
									)}
								</TableBody>
							</Table>
						</div>
					</div>

					{/* Refunds */}
					<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
							<div class="flex items-center gap-2">
								<Subheading>Refunds</Subheading>
								<span class="text-xs text-[#86868b] bg-gray-100 px-2 py-1 rounded-full">{refunds.length}</span>
							</div>
							{(order.status === 'paid' || order.status === 'partially_refunded') && (
								<button
									type="button"
									id="create-refund-btn"
									class="text-sm text-red-600 hover:underline flex items-center gap-1"
								>
									<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
										<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
									</svg>
									Create Refund
								</button>
							)}
						</div>
						<div class="overflow-x-auto">
							<Table client:only="react">
								<TableHead>
									<TableRow>
										<TableHeader>ID</TableHeader>
										<TableHeader>Status</TableHeader>
										<TableHeader>Amount</TableHeader>
										<TableHeader>Provider ID</TableHeader>
										<TableHeader>Reason</TableHeader>
										<TableHeader>Date</TableHeader>
									</TableRow>
								</TableHead>
								<TableBody>
									{refunds.length > 0 ? (
										refunds.map((r) => (
											<TableRow>
												<TableCell>{r.id}</TableCell>
												<TableCell><Badge color={getStatusColor(r.status)} client:load>{r.status}</Badge></TableCell>
												<TableCell className="tabular-nums">{formatCurrency(r.amount, r.currency)}</TableCell>
												<TableCell className="font-mono text-xs">{r.provider_refund_id || '-'}</TableCell>
												<TableCell className="text-[#86868b]">{r.reason || '-'}</TableCell>
												<TableCell className="text-[#86868b] tabular-nums">{formatDate(r.created_at)}</TableCell>
											</TableRow>
										))
									) : (
										<TableRow><TableCell colSpan={6} className="text-center text-[#86868b]">No refunds</TableCell></TableRow>
									)}
								</TableBody>
							</Table>
						</div>
					</div>

					{/* Stripe Events */}
					<div class="bg-white rounded-xl border border-gray-200 shadow-sm overflow-hidden">
						<div class="px-6 py-4 border-b border-gray-200 flex items-center justify-between">
							<Subheading>Stripe Events</Subheading>
							<span class="text-xs text-[#86868b] bg-gray-100 px-2 py-1 rounded-full">{stripeEvents.length}</span>
						</div>
						<div class="overflow-x-auto">
							<Table client:only="react">
								<TableHead>
									<TableRow>
										<TableHeader>Event ID</TableHeader>
										<TableHeader>Type</TableHeader>
										<TableHeader>Status</TableHeader>
										<TableHeader>Error</TableHeader>
										<TableHeader>Received</TableHeader>
									</TableRow>
								</TableHead>
								<TableBody>
									{stripeEvents.length > 0 ? (
										stripeEvents.map((e) => (
											<TableRow>
												<TableCell className="font-mono text-xs">{e.event_id}</TableCell>
												<TableCell className="font-mono text-xs">{e.event_type}</TableCell>
												<TableCell><Badge color={getStatusColor(e.processing_status)} client:load>{e.processing_status}</Badge></TableCell>
												<TableCell className="text-xs text-red-600">{e.error || '-'}</TableCell>
												<TableCell className="text-[#86868b] tabular-nums">{formatDate(e.received_at)}</TableCell>
											</TableRow>
										))
									) : (
										<TableRow><TableCell colSpan={5} className="text-center text-[#86868b]">No related events</TableCell></TableRow>
									)}
								</TableBody>
							</Table>
						</div>
					</div>
				</div>
			)}

			{/* Create Fulfillment Modal */}
			<div id="create-fulfillment-modal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
				<div class="bg-white rounded-xl shadow-2xl w-full max-w-md">
					<div class="p-6 border-b border-gray-100">
						<h3 class="text-lg font-semibold text-zinc-950">Create Fulfillment</h3>
						<p class="text-sm text-[#86868b] mt-1">Order #{id}</p>
					</div>
					<form id="create-fulfillment-form" class="p-6 space-y-4">
						<Fieldset client:load>
						<Field>
							<label for="create-status" data-slot="label" class="text-base/6 font-medium text-zinc-950 select-none sm:text-sm/6">Status</label>
							<Select client:load id="create-status" name="status">
								<option value="pending">Pending</option>
								<option value="processing">Processing</option>
								<option value="shipped">Shipped</option>
								<option value="delivered">Delivered</option>
							</Select>
						</Field>

						<Field>
							<label for="create-carrier" data-slot="label" class="text-base/6 font-medium text-zinc-950 select-none sm:text-sm/6">配送業者</label>
							<Select client:load id="create-carrier" name="carrier">
								<option value="">選択してください</option>
								<option value="ヤマト運輸">ヤマト運輸</option>
								<option value="佐川急便">佐川急便</option>
								<option value="日本郵便">日本郵便</option>
								<option value="other">その他</option>
							</Select>
						</Field>

						<Field id="create-custom-carrier-field" class="hidden">
							<label for="create-custom-carrier" data-slot="label" class="text-base/6 font-medium text-zinc-950 select-none sm:text-sm/6">配送業者名</label>
							<Input client:load
								type="text"
								id="create-custom-carrier"
								name="custom_carrier"
								placeholder="配送業者名を入力"
							/>
						</Field>

						<Field>
							<label for="create-tracking" data-slot="label" class="text-base/6 font-medium text-zinc-950 select-none sm:text-sm/6">追跡番号</label>
							<Input client:load
								type="text"
								id="create-tracking"
								name="tracking_number"
								placeholder="追跡番号を入力（任意）"
							/>
						</Field>

						</Fieldset>

						<div id="create-error" class="hidden bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg text-sm"></div>

						<div class="flex justify-end gap-3 pt-4 border-t border-gray-100">
							<button
								type="button"
								id="cancel-create-btn"
								class="px-4 py-2 text-sm font-medium text-zinc-950 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors"
							>
								Cancel
							</button>
							<button
								type="submit"
								class="px-4 py-2 text-sm font-medium text-white bg-[#0071e3] rounded-lg hover:bg-[#0077ED] transition-colors"
							>
								Create
							</button>
						</div>
					</form>
				</div>
			</div>

			{/* Edit Fulfillment Modal */}
			<div id="edit-fulfillment-modal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
				<div class="bg-white rounded-xl shadow-2xl w-full max-w-md">
					<div class="p-6 border-b border-gray-100">
						<h3 class="text-lg font-semibold text-zinc-950">Edit Fulfillment</h3>
						<p id="edit-subtitle" class="text-sm text-[#86868b] mt-1"></p>
					</div>
					<form id="edit-fulfillment-form" class="p-6 space-y-4">
						<input type="hidden" id="edit-fulfillment-id" name="fulfillmentId" />

						<Fieldset client:load>
						<Field>
							<label for="edit-status" data-slot="label" class="text-base/6 font-medium text-zinc-950 select-none sm:text-sm/6">Status</label>
							<Select client:load id="edit-status" name="status">
								<option value="pending">Pending</option>
								<option value="processing">Processing</option>
								<option value="shipped">Shipped</option>
								<option value="delivered">Delivered</option>
								<option value="cancelled">Cancelled</option>
							</Select>
						</Field>

						<Field>
							<label for="edit-carrier" data-slot="label" class="text-base/6 font-medium text-zinc-950 select-none sm:text-sm/6">配送業者</label>
							<Select client:load id="edit-carrier" name="carrier">
								<option value="">選択してください</option>
								<option value="ヤマト運輸">ヤマト運輸</option>
								<option value="佐川急便">佐川急便</option>
								<option value="日本郵便">日本郵便</option>
								<option value="other">その他</option>
							</Select>
						</Field>

						<Field id="edit-custom-carrier-field" class="hidden">
							<label for="edit-custom-carrier" data-slot="label" class="text-base/6 font-medium text-zinc-950 select-none sm:text-sm/6">配送業者名</label>
							<Input client:load
								type="text"
								id="edit-custom-carrier"
								name="custom_carrier"
								placeholder="配送業者名を入力"
							/>
						</Field>

						<Field>
							<label for="edit-tracking" data-slot="label" class="text-base/6 font-medium text-zinc-950 select-none sm:text-sm/6">追跡番号</label>
							<Input client:load
								type="text"
								id="edit-tracking"
								name="tracking_number"
								placeholder="追跡番号を入力（任意）"
							/>
						</Field>
						</Fieldset>

						<div id="edit-error" class="hidden bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg text-sm"></div>

						<div class="flex justify-end gap-3 pt-4 border-t border-gray-100">
							<button
								type="button"
								id="cancel-edit-btn"
								class="px-4 py-2 text-sm font-medium text-zinc-950 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors"
							>
								Cancel
							</button>
							<button
								type="submit"
								class="px-4 py-2 text-sm font-medium text-white bg-[#0071e3] rounded-lg hover:bg-[#0077ED] transition-colors"
							>
								Save
							</button>
						</div>
					</form>
				</div>
			</div>
		{/* Create Refund Modal */}
		<div id="create-refund-modal" class="hidden fixed inset-0 bg-black/50 z-50 flex items-center justify-center p-4">
			<div class="bg-white rounded-xl shadow-2xl w-full max-w-md">
				<div class="p-6 border-b border-gray-100">
					<h3 class="text-lg font-semibold text-zinc-950">Create Refund</h3>
					<p class="text-sm text-[#86868b] mt-1">Order #{id}</p>
				</div>
				<form id="create-refund-form" class="p-6 space-y-4">
					<Fieldset client:load>
						<Field>
							<label data-slot="label" class="text-base/6 font-medium text-zinc-950 select-none sm:text-sm/6">Refund Type</label>
							<Select client:load id="refund-type" name="refund_type">
								<option value="full">Full Refund</option>
								<option value="partial">Partial Refund</option>
							</Select>
						</Field>

						<Field>
							<label for="refund-amount" data-slot="label" class="text-base/6 font-medium text-zinc-950 select-none sm:text-sm/6">Amount (JPY)</label>
							<Input client:load
								type="number"
								id="refund-amount"
								name="amount"
								min="1"
								placeholder="Refund amount"
								disabled
							/>
							<p id="refund-max-info" class="text-xs text-[#86868b] mt-1"></p>
						</Field>

						<Field>
							<label for="refund-reason" data-slot="label" class="text-base/6 font-medium text-zinc-950 select-none sm:text-sm/6">Reason</label>
							<Input client:load
								type="text"
								id="refund-reason"
								name="reason"
								placeholder="Reason for refund"
								required
							/>
						</Field>
					</Fieldset>

					<div id="refund-error" class="hidden bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg text-sm"></div>

					<div class="flex justify-end gap-3 pt-4 border-t border-gray-100">
						<button
							type="button"
							id="cancel-refund-btn"
							class="px-4 py-2 text-sm font-medium text-zinc-950 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors"
						>
							Cancel
						</button>
						<button
							type="submit"
							id="submit-refund-btn"
							class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition-colors"
						>
							Create Refund
						</button>
					</div>
				</form>
			</div>
		</div>

		{/* Refund Confirmation Modal */}
		<div id="refund-confirm-modal" class="hidden fixed inset-0 bg-black/50 z-[60] flex items-center justify-center p-4">
			<div class="bg-white rounded-xl shadow-2xl w-full max-w-sm p-6 space-y-4">
				<h3 class="text-lg font-semibold text-zinc-950">Confirm Refund</h3>
				<p id="refund-confirm-text" class="text-sm text-[#86868b]"></p>
				<div class="flex justify-end gap-3 pt-4 border-t border-gray-100">
					<button
						type="button"
						id="refund-confirm-cancel"
						class="px-4 py-2 text-sm font-medium text-zinc-950 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors"
					>
						Cancel
					</button>
					<button
						type="button"
						id="refund-confirm-ok"
						class="px-4 py-2 text-sm font-medium text-white bg-red-600 rounded-lg hover:bg-red-700 transition-colors"
					>
						Confirm Refund
					</button>
				</div>
			</div>
		</div>
	</div>
