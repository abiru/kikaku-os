---
export const prerender = false;

import { Alert } from '../../../components/catalyst/alert-banner';
import { Button } from '../../../components/catalyst/button';
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getApiBase } from '../../../lib/api';
import { Fieldset, Field, Label } from '../../../components/catalyst/fieldset';
import { Input } from '../../../components/catalyst/input';
import { Textarea } from '../../../components/catalyst/textarea';
import { Checkbox, CheckboxField } from '../../../components/catalyst/checkbox';
import { t } from '../../../i18n';

const apiBase = getApiBase();
const apiKey = import.meta.env.ADMIN_API_KEY;

let error: string | null = null;
let formValues = {
	name: '',
	rate: '',
	applicable_from: new Date().toISOString().split('T')[0],
	applicable_to: '',
	description: '',
	is_active: 'true'
};

if (Astro.request.method === 'POST') {
	try {
		const formData = await Astro.request.formData();
		const name = formData.get('name')?.toString().trim() || '';
		const rateStr = formData.get('rate')?.toString() || '';
		const applicable_from = formData.get('applicable_from')?.toString() || '';
		const applicable_to = formData.get('applicable_to')?.toString() || '';
		const description = formData.get('description')?.toString().trim() || '';
		const is_active = formData.get('is_active') === 'true';

		formValues = {
			name,
			rate: rateStr,
			applicable_from,
			applicable_to,
			description,
			is_active: is_active.toString()
		};

		const rate = parseFloat(rateStr);

		if (!name) {
			error = t('errors.nameRequired');
		} else if (isNaN(rate) || rate < 0 || rate > 1) {
			error = t('errors.rateRange');
		} else if (!applicable_from) {
			error = t('errors.applicableFromRequired');
		} else if (!apiKey) {
			error = t('errors.adminKeyMissing');
		} else {
			const res = await fetch(`${apiBase}/admin/tax-rates`, {
				method: 'POST',
				headers: {
					'Content-Type': 'application/json',
					'x-admin-key': apiKey
				},
				body: JSON.stringify({
					name,
					rate,
					applicable_from,
					applicable_to: applicable_to || null,
					description: description || null,
					is_active
				})
			});

			const data = await res.json();

			if (!res.ok) {
				error = data.message || t('errors.failedToCreateTaxRate');
			} else if (data.id) {
				return Astro.redirect(`/admin/tax-rates/${data.id}`);
			} else {
				error = t('errors.failedToCreateTaxRate');
			}
		}
	} catch (e) {
		console.error(e);
		error = t('errors.failedToCreateTaxRate');
	}
}
---

<AdminLayout title={`${t('admin.taxRates')} - Admin`}>
	<div class="space-y-6 max-w-2xl">
		<div class="flex items-center gap-4">
			<a href="/admin/tax-rates" class="text-indigo-600 hover:text-indigo-500 text-sm flex items-center gap-1">
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
				</svg>
				{t('admin.taxRates')}
			</a>
			<h1 class="text-2xl font-semibold text-gray-900">{t('admin.newTaxRate')}</h1>
		</div>

		{error && (
			<Alert color="red" client:load>
				{error}
			</Alert>
		)}

		<form method="POST" class="bg-white rounded-xl border border-gray-200 shadow-sm p-6 space-y-6">
			<div class="grid grid-cols-1 md:grid-cols-2 gap-6">
				<div class="md:col-span-2">
				<Fieldset client:load>
					<Field>
						<Label>
							{t('admin.name')} <span class="text-red-500">*</span>
						</Label>
						<Input
							client:load
							type="text"
							name="name"
							required
							defaultValue={formValues.name}
							placeholder="Standard Rate"
						/>
						<p data-slot="description" class="text-base/6 text-zinc-500 sm:text-sm/6">e.g., "Standard Rate", "Reduced Rate"</p>
					</Field>
				</div>

				<div>
					<Field>
						<Label>
							{t('admin.rateDecimal')} <span class="text-red-500">*</span>
						</Label>
						<Input
							client:load
							type="number"
							name="rate"
							required
							step="0.01"
							min="0"
							max="1"
							defaultValue={formValues.rate}
							placeholder="0.10"
						/>
						<p data-slot="description" class="text-base/6 text-zinc-500 sm:text-sm/6">{t('admin.rateExample')}</p>
					</Field>
				</div>

				<div>
					<Field>
						<Label>
							{t('admin.applicableFrom')} <span class="text-red-500">*</span>
						</Label>
						<Input
							client:load
							type="date"
							name="applicable_from"
							required
							defaultValue={formValues.applicable_from}
						/>
					</Field>
				</div>

				<div>
					<Field>
						<Label>{t('admin.applicableTo')}</Label>
						<Input
							client:load
							type="date"
							name="applicable_to"
							defaultValue={formValues.applicable_to}
						/>
						<p data-slot="description" class="text-base/6 text-zinc-500 sm:text-sm/6">{t('admin.noEndDate')}</p>
					</Field>
				</div>

				<div class="md:col-span-2">
					<Field>
						<Label>{t('admin.description')}</Label>
						<Textarea
							client:load
							name="description"
							rows={3}
							defaultValue={formValues.description}
							placeholder="Standard consumption tax (10%)"
						/>
					</Field>
				</Fieldset>
				</div>

				<div class="md:col-span-2">
					<CheckboxField>
						<Checkbox
							client:load
							name="is_active"
							value="true"
							defaultChecked={formValues.is_active === 'true'}
							color="indigo"
						/>
						<Label>{t('admin.active')}</Label>
						<p data-slot="description" class="text-base/6 text-zinc-500 sm:text-sm/6">{t('admin.onlyActiveAssignable')}</p>
					</CheckboxField>
				</div>
			</div>

			<div class="bg-blue-50 border border-blue-200 text-blue-800 px-4 py-3 rounded-lg text-sm">
				{t('admin.taxRatesNote')}
				<ul class="mt-2 ml-4 list-disc">
					<li>{t('admin.standardRateNote')}</li>
					<li>{t('admin.reducedRateNote')}</li>
				</ul>
			</div>

			<div class="flex gap-3 pt-4 border-t border-gray-200">
				<Button type="submit" color="indigo" client:load >
					{t('admin.createTaxRate')}
				</Button>
				<Button href="/admin/tax-rates" outline client:load >
					{t('common.cancel')}
				</Button>
			</div>
		</form>
	</div>
</AdminLayout>
