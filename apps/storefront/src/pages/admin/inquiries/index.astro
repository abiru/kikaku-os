---
export const prerender = false;

import AdminLayout from '../../../layouts/AdminLayout.astro';
import { Alert } from '../../../components/catalyst/alert-banner';
import InquiriesTable from '../../../components/admin/InquiriesTable';
import { Heading } from '../../../components/catalyst/heading';
import { getApiBase } from '../../../lib/api';

const apiBase = getApiBase();
const apiKey = import.meta.env.ADMIN_API_KEY;
const status = Astro.url.searchParams.get('status') || 'open';
const offset = Number(Astro.url.searchParams.get('offset') || '0');
const limit = 20;

let inquiries: any[] = [];
let meta = { total: 0, limit, offset };
let error = null;

if (apiKey) {
	try {
		const query = new URLSearchParams({ status, limit: limit.toString(), offset: offset.toString() });
		const res = await fetch(`${apiBase}/admin/inquiries?${query}`, {
			headers: { 'x-admin-key': apiKey },
		});
		if (!res.ok) throw new Error(`API Error: ${res.status}`);
		const data = await res.json();
		inquiries = data.inquiries || [];
		meta = data.meta || meta;
	} catch (e) {
		console.error(e);
		error = 'お問い合わせの読み込みに失敗しました。';
	}
} else {
	error = 'ADMIN_API_KEY is missing.';
}
---

<AdminLayout title="お問い合わせ - Admin">
	<div class="space-y-6">
		<div class="flex items-center gap-4">
			<Heading>お問い合わせ</Heading>
			<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{meta.total} 件</span>
		</div>

		{error && (
			<Alert color="red" client:load>
				{error}
			</Alert>
		)}

		<InquiriesTable
			client:load
			inquiries={inquiries}
			currentStatus={status}
			total={meta.total}
			limit={limit}
			offset={offset}
		/>
	</div>
</AdminLayout>
