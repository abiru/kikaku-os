---
export const prerender = false;

import AdminLayout from '../../../layouts/AdminLayout.astro';
import { Alert } from '../../../components/catalyst/alert-banner';
import InquiriesTable from '../../../components/admin/InquiriesTable';
import { ErrorBoundary } from '../../../components/ErrorBoundary';
import { Heading } from '../../../components/catalyst/heading';
import { adminFetchList } from '../../../lib/admin/fetchAdmin';
import type { ContactInquiry } from '../../../lib/types';

const status = Astro.url.searchParams.get('status') || 'open';
const offset = Number(Astro.url.searchParams.get('offset') || '0');
const limit = 20;

const query = new URLSearchParams({ status, limit: limit.toString(), offset: offset.toString() });

const { data, error: fetchError } = await adminFetchList<{ inquiries: ContactInquiry[]; meta: { total: number; limit: number; offset: number } }>('/admin/inquiries', query);
const inquiries = data?.inquiries || [];
const meta = data?.meta || { total: 0, limit, offset };
const error = fetchError ? 'お問い合わせの読み込みに失敗しました。' : null;
---

<AdminLayout title="お問い合わせ - Admin">
	<div class="space-y-6">
		<div class="flex items-center gap-4">
			<Heading>お問い合わせ</Heading>
			<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{meta.total} 件</span>
		</div>

		{error && (
			<Alert color="red" client:load>
				{error}
			</Alert>
		)}

		<ErrorBoundary client:visible>
			<InquiriesTable
				inquiries={inquiries}
				currentStatus={status}
				total={meta.total}
				limit={limit}
				offset={offset}
			/>
		</ErrorBoundary>
	</div>
</AdminLayout>
