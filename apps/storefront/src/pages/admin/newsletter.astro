---
export const prerender = false;

import AdminLayout from '../../layouts/AdminLayout.astro';
import { Alert } from '../../components/catalyst/alert-banner';
import { getApiBase } from '../../lib/api';
import { Heading } from '../../components/catalyst/heading';
import NewsletterTable from '../../components/admin/NewsletterTable';
import { t } from '../../i18n';

const apiBase = getApiBase();
const status = Astro.url.searchParams.get('status') || 'all';
const page = Number(Astro.url.searchParams.get('page') || '1');
const perPage = 50;

type Subscriber = {
	id: number;
	email: string;
	status: string;
	created_at: string;
	updated_at: string;
};

let subscribers: Subscriber[] = [];
let total = 0;
let error: string | null = null;

// SSR Data Fetching
if (import.meta.env.ADMIN_API_KEY) {
	try {
		const query = new URLSearchParams({
			status,
			limit: perPage.toString(),
			offset: ((page - 1) * perPage).toString(),
		});

		const res = await fetch(`${apiBase}/admin/newsletter/subscribers?${query}`, {
			headers: {
				'x-admin-key': import.meta.env.ADMIN_API_KEY,
			},
		});

		if (!res.ok) {
			throw new Error(`API Error: ${res.status}`);
		}

		const data = await res.json();
		subscribers = data.subscribers || [];
		total = data.total || 0;
	} catch (e) {
		console.error(e);
		error = t('errors.failedToLoadNewsletter');
	}
} else {
	error = t('errors.adminKeyMissing');
}

const totalPages = Math.max(1, Math.ceil(total / perPage));
---

<AdminLayout title={`${t('admin.newsletter')} - Admin`}>
	<div class="space-y-6">
		<div class="flex items-center gap-4">
			<Heading>{t('admin.newsletter')}</Heading>
			<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{total} {t('admin.newsletterSubscribers')}</span>
		</div>

		{error && (
			<Alert color="red" client:load>
				{error}
			</Alert>
		)}

		<NewsletterTable
			subscribers={subscribers}
			total={total}
			currentPage={page}
			totalPages={totalPages}
			statusFilter={status}
			client:visible
		/>
	</div>
</AdminLayout>
