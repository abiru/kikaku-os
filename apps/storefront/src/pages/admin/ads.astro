---
export const prerender = false;

import AdminLayout from '../../layouts/AdminLayout.astro';
import Button from '../../components/Button.astro';
import { Badge } from '../../components/catalyst/badge';
import { getApiBase } from '../../lib/api';

const apiKey = import.meta.env.ADMIN_API_KEY;
const apiBase = getApiBase();

const q = Astro.url.searchParams.get('q') || '';
const status = Astro.url.searchParams.get('status') || 'all';
const page = Number(Astro.url.searchParams.get('page') || '1');

let drafts: any[] = [];
let totalCount = 0;
let totalPages = 0;
let error: string | null = null;

if (apiKey) {
  try {
    const params = new URLSearchParams({
      q,
      status,
      page: page.toString(),
      perPage: '20',
    });

    const response = await fetch(`${apiBase}/admin/ads/drafts?${params}`, {
      headers: { 'x-admin-key': apiKey },
    });

    if (response.ok) {
      const data = await response.json();
      drafts = data.drafts || [];
      totalCount = data.meta?.totalCount || 0;
      totalPages = data.meta?.totalPages || 0;
    } else {
      error = 'Failed to load ad drafts';
    }
  } catch (e) {
    error = 'Failed to connect to API';
    console.error(e);
  }
}

const formatDate = (dateStr: string | null) => {
  if (!dateStr) return '-';
  return new Date(dateStr).toLocaleDateString('ja-JP', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit',
    hour: '2-digit',
    minute: '2-digit',
  });
};

const getStatusColor = (status: string) => {
  if (status === 'ready') return 'lime';
  return 'zinc';
};

const hasPrev = page > 1;
const hasNext = page < totalPages;
---

<AdminLayout title="Google Ads Drafts">
  <div class="max-w-7xl mx-auto px-6 py-8">
    {/* Header */}
    <div class="flex items-center justify-between mb-8">
      <div>
        <h1 class="text-3xl font-semibold text-[#1d1d1f]">Google Ads</h1>
        <p class="text-sm text-zinc-500 dark:text-zinc-400 mt-1">Manage ad drafts and AI-generated copy</p>
      </div>
      <Button href="/admin/ads/new" variant="primary">
        + New Ad Draft
      </Button>
    </div>

    {/* Error Message */}
    {error && (
      <div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg mb-6">
        {error}
      </div>
    )}

    {/* Filters */}
    <div class="bg-white rounded-2xl border border-zinc-200 dark:border-zinc-800 shadow-sm p-6 mb-6">
      <form method="GET" class="space-y-4">
        {/* Search */}
        <div>
          <label for="search" class="block text-sm font-medium text-[#1d1d1f] mb-2">
            Search
          </label>
          <input
            type="text"
            id="search"
            name="q"
            value={q}
            placeholder="Search by campaign name or product..."
            class="w-full px-4 py-2 bg-white border border-zinc-200 dark:border-zinc-800 rounded-lg text-sm text-[#1d1d1f] focus:outline-none focus:ring-2 focus:ring-indigo-600/20 focus:border-indigo-600 transition-all shadow-sm"
          />
        </div>

        {/* Status Filter */}
        <div class="flex items-center gap-2 flex-wrap">
          <span class="text-sm font-medium text-[#1d1d1f]">Status:</span>
          <a
            href={`?status=all&q=${q}`}
            class={`px-3 py-1 rounded-lg text-sm transition-colors ${
              status === 'all'
                ? 'bg-indigo-600 text-white'
                : 'bg-zinc-100 dark:bg-zinc-800 text-gray-700 hover:bg-gray-200'
            }`}
          >
            All
          </a>
          <a
            href={`?status=draft&q=${q}`}
            class={`px-3 py-1 rounded-lg text-sm transition-colors ${
              status === 'draft'
                ? 'bg-indigo-600 text-white'
                : 'bg-zinc-100 dark:bg-zinc-800 text-gray-700 hover:bg-gray-200'
            }`}
          >
            Draft
          </a>
          <a
            href={`?status=ready&q=${q}`}
            class={`px-3 py-1 rounded-lg text-sm transition-colors ${
              status === 'ready'
                ? 'bg-indigo-600 text-white'
                : 'bg-zinc-100 dark:bg-zinc-800 text-gray-700 hover:bg-gray-200'
            }`}
          >
            Ready
          </a>
        </div>

        <div class="flex gap-2">
          <button
            type="submit"
            class="px-4 py-2 bg-indigo-600 text-white rounded-lg text-sm font-medium hover:bg-[#0077ed] transition-colors"
          >
            Search
          </button>
          {(q || status !== 'all') && (
            <a
              href="/admin/ads"
              class="px-4 py-2 bg-white text-[#1d1d1f] border border-zinc-200 dark:border-zinc-800 rounded-lg text-sm font-medium hover:bg-zinc-50 dark:bg-zinc-800/50 transition-colors"
            >
              Clear
            </a>
          )}
        </div>
      </form>
    </div>

    {/* Results */}
    <div class="bg-white rounded-2xl border border-zinc-200 dark:border-zinc-800 shadow-sm overflow-hidden">
      {drafts.length === 0 ? (
        <div class="text-center py-16">
          <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
          </svg>
          <h3 class="mt-4 text-lg font-medium text-zinc-950 dark:text-white">No ad drafts found</h3>
          <p class="mt-1 text-sm text-zinc-500 dark:text-zinc-400">
            {q || status !== 'all' ? 'Try adjusting your filters' : 'Get started by creating a new ad draft'}
          </p>
          {!q && status === 'all' && (
            <div class="mt-6">
              <Button href="/admin/ads/new" variant="primary">
                + Create Ad Draft
              </Button>
            </div>
          )}
        </div>
      ) : (
        <>
          <div class="overflow-x-auto">
            <table class="w-full text-left text-sm text-[#1d1d1f]">
              <thead class="bg-zinc-50 dark:bg-zinc-800/50 border-b border-zinc-200 dark:border-zinc-800">
                <tr>
                  <th class="px-6 py-3 font-semibold">Campaign</th>
                  <th class="px-6 py-3 font-semibold">Type</th>
                  <th class="px-6 py-3 font-semibold">Status</th>
                  <th class="px-6 py-3 font-semibold">Product</th>
                  <th class="px-6 py-3 font-semibold">Updated</th>
                  <th class="px-6 py-3 font-semibold">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
                {drafts.map((draft) => (
                  <tr class="hover:bg-zinc-50 dark:bg-zinc-800/50 transition-colors">
                    <td class="px-6 py-4">
                      <div class="font-medium">{draft.campaign_name}</div>
                      <div class="text-xs text-zinc-500 dark:text-zinc-400 mt-1">
                        {draft.final_url}
                      </div>
                    </td>
                    <td class="px-6 py-4">
                      <span class="text-gray-700 capitalize">{draft.ad_type}</span>
                    </td>
                    <td class="px-6 py-4">
                      <Badge color={getStatusColor(draft.status)} client:only="react">
                        {draft.status}
                      </Badge>
                    </td>
                    <td class="px-6 py-4">
                      {draft.product_name ? (
                        <span class="text-gray-700">{draft.product_name}</span>
                      ) : (
                        <span class="text-gray-400">-</span>
                      )}
                    </td>
                    <td class="px-6 py-4 text-zinc-500 dark:text-zinc-400">
                      {formatDate(draft.updated_at)}
                    </td>
                    <td class="px-6 py-4">
                      <div class="flex items-center gap-2">
                        <a
                          href={`/admin/ads/${draft.id}`}
                          class="text-indigo-600 dark:text-indigo-400 hover:underline text-sm font-medium"
                        >
                          Edit
                        </a>
                        <span class="text-gray-300">|</span>
                        <a
                          href={`/admin/ads/${draft.id}/history`}
                          class="text-zinc-500 dark:text-zinc-400 hover:underline text-sm"
                        >
                          History
                        </a>
                      </div>
                    </td>
                  </tr>
                ))}
              </tbody>
            </table>
          </div>

          {/* Pagination */}
          {totalPages > 1 && (
            <div class="px-6 py-4 border-t border-zinc-200 dark:border-zinc-800 flex items-center justify-between">
              <div class="text-sm text-zinc-500 dark:text-zinc-400">
                Showing page {page} of {totalPages} ({totalCount} total)
              </div>
              <div class="flex gap-2">
                <Button
                  href={hasPrev ? `?page=${page - 1}&status=${status}&q=${q}` : '#'}
                  variant={hasPrev ? 'secondary' : 'secondary'}
                  size="sm"
                  disabled={!hasPrev}
                >
                  Previous
                </Button>
                <Button
                  href={hasNext ? `?page=${page + 1}&status=${status}&q=${q}` : '#'}
                  variant={hasNext ? 'secondary' : 'secondary'}
                  size="sm"
                  disabled={!hasNext}
                >
                  Next
                </Button>
              </div>
            </div>
          )}
        </>
      )}
    </div>
  </div>
</AdminLayout>
