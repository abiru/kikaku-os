---
export const prerender = false;

import { Alert } from '../../components/catalyst/alert-banner';
import { Badge } from '../../components/catalyst/badge';
import { Button } from '../../components/catalyst/button';
import { Heading } from '../../components/catalyst/heading';
import { Table, TableHead, TableBody, TableRow, TableHeader, TableCell } from '../../components/catalyst/table';
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getApiBase } from '../../lib/api';

const apiBase = getApiBase();

type TaxRate = {
	id: number;
	name: string;
	rate: number;
	applicable_from: string;
	applicable_to: string | null;
	is_active: number;
	description: string | null;
	created_at: string;
	updated_at: string;
};

let taxRates: TaxRate[] = [];
let error = null;

if (import.meta.env.ADMIN_API_KEY) {
	try {
		const res = await fetch(`${apiBase}/admin/tax-rates`, {
			headers: {
				'x-admin-key': import.meta.env.ADMIN_API_KEY
			}
		});

		if (!res.ok) {
			throw new Error(`API Error: ${res.status}`);
		}

		const data = await res.json();
		taxRates = data || [];
	} catch (e) {
		console.error(e);
		error = 'Failed to load tax rates. Please check your admin key.';
	}
} else {
	error = 'ADMIN_API_KEY is missing in server environment.';
}

const formatRate = (rate: number) => {
	return `${(rate * 100).toFixed(1)}%`;
};

const formatDate = (dateStr: string | null) => {
	if (!dateStr) return '-';
	return new Date(dateStr).toLocaleDateString('ja-JP');
};

const isActive = (taxRate: TaxRate) => {
	if (!taxRate.is_active) return false;
	const now = new Date();
	const from = new Date(taxRate.applicable_from);
	if (from > now) return false;
	if (taxRate.applicable_to) {
		const to = new Date(taxRate.applicable_to);
		if (to < now) return false;
	}
	return true;
};
---

<AdminLayout title="Tax Rates - Admin">
	<div class="space-y-6">
		<div class="flex items-center justify-between">
			<div class="flex items-center gap-4">
				<Heading>Tax Rates</Heading>
				<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{taxRates.length} items</span>
			</div>
			<Button href="/admin/tax-rates/new" color="indigo" client:load>
				+ New Tax Rate
			</Button>
		</div>

		{error && (
			<Alert color="red" client:load>
				{error}
			</Alert>
		)}

		{/* Tax Rates Table */}
		<div class="bg-white rounded-xl border border-zinc-200 shadow-sm overflow-hidden">
			<div class="overflow-x-auto">
				<Table client:load>
					<TableHead>
						<TableRow>
							<TableHeader>Name</TableHeader>
							<TableHeader>Rate</TableHeader>
							<TableHeader>Status</TableHeader>
							<TableHeader>Applicable From</TableHeader>
							<TableHeader>Applicable To</TableHeader>
							<TableHeader>Action</TableHeader>
						</TableRow>
					</TableHead>
					<TableBody>
						{taxRates.length > 0 ? (
							taxRates.map((taxRate) => (
								<TableRow href={`/admin/tax-rates/${taxRate.id}`}>
									<TableCell>
										<div class="font-medium">{taxRate.name}</div>
										{taxRate.description && (
											<div class="text-xs text-zinc-500 mt-1">
												{taxRate.description}
											</div>
										)}
									</TableCell>
									<TableCell className="font-medium tabular-nums text-lg">
										{formatRate(taxRate.rate)}
									</TableCell>
									<TableCell>
										{isActive(taxRate) ? (
											<Badge color="lime" client:only="react">Active</Badge>
										) : taxRate.is_active ? (
											<Badge color="amber" client:only="react">Scheduled</Badge>
										) : (
											<Badge color="zinc" client:only="react">Inactive</Badge>
										)}
									</TableCell>
									<TableCell className="text-zinc-500 tabular-nums">
										{formatDate(taxRate.applicable_from)}
									</TableCell>
									<TableCell className="text-zinc-500 tabular-nums">
										{formatDate(taxRate.applicable_to)}
									</TableCell>
									<TableCell>
										<a href={`/admin/tax-rates/${taxRate.id}`} class="text-indigo-600 hover:underline font-medium">Edit</a>
									</TableCell>
								</TableRow>
							))
						) : (
							<TableRow>
								<TableCell colSpan={6} className="text-center text-zinc-500">
									No tax rates found.
								</TableCell>
							</TableRow>
						)}
					</TableBody>
				</Table>
			</div>
		</div>

		<Alert color="blue" client:load>
			<strong>Note:</strong> Tax rates are applied to products at checkout time. The current Japanese consumption tax rates are:
			<ul class="mt-2 ml-4 list-disc">
				<li>Standard Rate: 10% (since October 1, 2019)</li>
				<li>Reduced Rate: 8% (for food and beverages)</li>
			</ul>
		</Alert>
	</div>
</AdminLayout>
