---
export const prerender = false;

import { Alert } from '../../components/catalyst/alert-banner';
import AdminLayout from '../../layouts/AdminLayout.astro';
import { Heading } from '../../components/catalyst/heading';
import { Input } from '../../components/catalyst/input';
import CategoriesPage from '../../components/admin/CategoriesPage';
import { adminFetchList } from '../../lib/admin/fetchAdmin';
import { t } from '../../i18n';

const q = Astro.url.searchParams.get('q') || '';

type Category = {
	category: string;
	product_count: number;
};

const query = new URLSearchParams({ q });
const { data, error: fetchError } = await adminFetchList<{ categories: Category[] }>('/admin/categories', query);
const categories = data?.categories || [];
const error = fetchError ? t('errors.failedToLoadCategories') : null;

---

<AdminLayout title={`${t('admin.categories')} - Admin`}>
	<div class="space-y-6">
		<div class="flex items-center justify-between">
			<div class="flex items-center gap-4">
				<Heading>{t('admin.categories')}</Heading>
				<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{categories.length} {t('admin.items')}</span>
			</div>
		</div>

		{/* Search Bar */}
		<div class="mb-6">
			<form method="get" class="relative max-w-md">
				<Input
					type="search"
					name="q"
					value={q}
					placeholder={t('admin.searchCategories')}
					className="pl-10"
				/>
				<svg
					class="absolute left-3 top-2.5 h-4 w-4 text-zinc-400"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
				</svg>
			</form>
		</div>

		{error && (
			<Alert color="red" client:load>
				{error}
			</Alert>
		)}

		<CategoriesPage
			client:only="react"
			categories={categories}
		/>
	</div>
</AdminLayout>
