---
export const prerender = false;

import Badge from '../../../components/Badge.astro';
import Button from '../../../components/Button.astro';
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getApiBase } from '../../../lib/api';

const { name } = Astro.params;
const categoryName = decodeURIComponent(name || '');

const apiBase = getApiBase();
const apiKey = import.meta.env.ADMIN_API_KEY;
const q = Astro.url.searchParams.get('q') || '';
const page = Number(Astro.url.searchParams.get('page') || '1');
const perPage = 20;

type Product = {
	id: number;
	title: string;
	description: string | null;
	category: string | null;
	status: string | null;
	created_at: string;
	updated_at: string;
};

let products: Product[] = [];
let meta = { totalCount: 0, totalPages: 1 };
let error: string | null = null;

// SSR Data Fetching
if (apiKey) {
	try {
		const query = new URLSearchParams({
			q,
			page: page.toString(),
			perPage: perPage.toString()
		});

		const res = await fetch(`${apiBase}/admin/categories/${encodeURIComponent(categoryName)}/products?${query}`, {
			headers: {
				'x-admin-key': apiKey
			}
		});

		if (!res.ok) {
			if (res.status === 404) {
				error = 'Category not found';
			} else {
				throw new Error(`API Error: ${res.status}`);
			}
		} else {
			const data = await res.json();
			products = data.products || [];
			meta = data.meta || meta;
		}
	} catch (e) {
		console.error(e);
		error = error || 'Failed to load category products. Please check your connection.';
	}
} else {
	error = 'ADMIN_API_KEY is missing in server environment.';
}

const hasNext = page < meta.totalPages;
const hasPrev = page > 1;

const formatDate = (dateStr: string | null) => {
	if (!dateStr) return '-';
	return new Date(dateStr).toLocaleDateString('ja-JP');
};
---

<AdminLayout title={`${categoryName} - Categories - Admin`}>
	<div class="space-y-6">
		<div class="flex items-center gap-4">
			<a href="/admin/categories" class="text-emerald-500 hover:text-emerald-500 text-sm flex items-center gap-1">
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
				</svg>
				Categories
			</a>
			<h1 class="text-2xl font-semibold text-zinc-900">
				{categoryName}
			</h1>
			<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{meta.totalCount} products</span>
		</div>
			{/* Search Bar */}
			<div class="mb-6">
				<form method="get" class="relative max-w-md">
					<input
						type="search"
						name="q"
						value={q}
						placeholder="Search products in this category..."
						class="w-full pl-10 pr-4 py-2 bg-white border border-zinc-200 rounded-lg text-sm text-zinc-900 focus:outline-none focus:ring-2 focus:ring-emerald-500/20 focus:border-emerald-500 transition-all"
					/>
					<svg
						class="absolute left-3 top-2.5 h-4 w-4 text-zinc-400"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
					</svg>
				</form>
			</div>

			{error && (
				<div class="bg-white rounded-lg ring-1 ring-zinc-900/5 p-8 text-center">
					<div class="text-red-600 mb-4">{error}</div>
					<Button href="/admin/categories" variant="secondary" size="sm">
						Back to Categories
					</Button>
				</div>
			)}

			{!error && (
				<div class="bg-white rounded-lg ring-1 ring-zinc-900/5 overflow-hidden">
					<div class="overflow-x-auto">
						<table class="w-full text-left text-sm text-zinc-900">
							<thead class="bg-zinc-50 border-b border-zinc-200">
								<tr>
									<th class="px-6 py-3 font-medium text-zinc-500">Title</th>
									<th class="px-6 py-3 font-medium text-zinc-500">Status</th>
									<th class="px-6 py-3 font-medium text-zinc-500">Updated</th>
									<th class="px-6 py-3 font-medium text-zinc-500 text-right">Action</th>
								</tr>
							</thead>
							<tbody class="divide-y divide-zinc-100">
								{products.length > 0 ? (
									products.map((product) => (
										<tr class="hover:bg-zinc-50 transition-colors group">
											<td class="px-6 py-4">
												<div class="font-medium">{product.title}</div>
												<div class="text-xs text-zinc-500 truncate max-w-xs">{product.description}</div>
											</td>
											<td class="px-6 py-4">
												{product.status === 'draft' ? (
													<Badge severity="secondary">Draft</Badge>
												) : (
													<Badge severity="info">Active</Badge>
												)}
											</td>
											<td class="px-6 py-4 text-zinc-500 tabular-nums">
												{formatDate(product.updated_at)}
											</td>
											<td class="px-6 py-4 text-right">
												<a href={`/admin/products/${product.id}`} class="text-emerald-500 hover:underline font-medium">Edit</a>
											</td>
										</tr>
									))
								) : (
									<tr>
										<td colspan="4" class="px-6 py-12 text-center text-zinc-500">
											No products found in this category.
										</td>
									</tr>
								)}
							</tbody>
						</table>
					</div>

					{/* Pagination */}
					{meta.totalPages > 1 && (
						<div class="border-t border-zinc-200 px-6 py-4 flex items-center justify-between">
							<div class="text-xs text-zinc-500">
								Page {page} of {meta.totalPages}
							</div>
							<div class="flex gap-2">
								<Button
									href={hasPrev ? `?page=${page - 1}&q=${q}` : '#'}
									disabled={!hasPrev}
									size="sm"
									variant="secondary"
								>
									Previous
								</Button>
								<Button
									href={hasNext ? `?page=${page + 1}&q=${q}` : '#'}
									disabled={!hasNext}
									size="sm"
									variant="secondary"
								>
									Next
								</Button>
							</div>
						</div>
					)}
				</div>
			)}
	</div>
</AdminLayout>
