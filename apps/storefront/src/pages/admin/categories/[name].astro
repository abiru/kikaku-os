---
export const prerender = false;

import { Alert } from '../../../components/catalyst/alert-banner';
import { Badge } from '../../../components/catalyst/badge';
import { Button } from '../../../components/catalyst/button';
import { Heading } from '../../../components/catalyst/heading';
import { Table, TableHead, TableBody, TableRow, TableHeader, TableCell } from '../../../components/catalyst/table';
import AdminLayout from '../../../layouts/AdminLayout.astro';
import { getApiBase } from '../../../lib/api';

const { name } = Astro.params;
const categoryName = decodeURIComponent(name || '');

const apiBase = getApiBase();
const apiKey = import.meta.env.ADMIN_API_KEY;
const q = Astro.url.searchParams.get('q') || '';
const page = Number(Astro.url.searchParams.get('page') || '1');
const perPage = 20;

type Product = {
	id: number;
	title: string;
	description: string | null;
	category: string | null;
	status: string | null;
	created_at: string;
	updated_at: string;
};

let products: Product[] = [];
let meta = { totalCount: 0, totalPages: 1 };
let error: string | null = null;

// SSR Data Fetching
if (apiKey) {
	try {
		const query = new URLSearchParams({
			q,
			page: page.toString(),
			perPage: perPage.toString()
		});

		const res = await fetch(`${apiBase}/admin/categories/${encodeURIComponent(categoryName)}/products?${query}`, {
			headers: {
				'x-admin-key': apiKey
			}
		});

		if (!res.ok) {
			if (res.status === 404) {
				error = 'Category not found';
			} else {
				throw new Error(`API Error: ${res.status}`);
			}
		} else {
			const data = await res.json();
			products = data.products || [];
			meta = data.meta || meta;
		}
	} catch (e) {
		console.error(e);
		error = error || 'Failed to load category products. Please check your connection.';
	}
} else {
	error = 'ADMIN_API_KEY is missing in server environment.';
}

const hasNext = page < meta.totalPages;
const hasPrev = page > 1;

const formatDate = (dateStr: string | null) => {
	if (!dateStr) return '-';
	return new Date(dateStr).toLocaleDateString('ja-JP');
};
---

<AdminLayout title={`${categoryName} - Categories - Admin`}>
	<div class="space-y-6">
		<div class="flex items-center gap-4">
			<a href="/admin/categories" class="text-indigo-600 hover:text-indigo-500 text-sm flex items-center gap-1">
				<svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
				</svg>
				Categories
			</a>
			<Heading>{categoryName}</Heading>
			<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{meta.totalCount} products</span>
		</div>

		{/* Search Bar */}
		<div class="mb-6">
			<form method="get" class="relative max-w-md">
				<input
					type="search"
					name="q"
					value={q}
					placeholder="Search products in this category..."
					class="w-full pl-10 pr-4 py-2 bg-white border border-zinc-200 rounded-lg text-sm text-zinc-950 focus:outline-none focus:ring-2 focus:ring-indigo-600/20 focus:border-indigo-600 transition-all shadow-sm"
				/>
				<svg
					class="absolute left-3 top-2.5 h-4 w-4 text-zinc-400"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
				</svg>
			</form>
		</div>

		{error && (
			<div class="bg-white rounded-xl border border-zinc-200 shadow-sm p-8 text-center">
				<Alert color="red" client:load>{error}</Alert>
				<div class="mt-4">
					<Button href="/admin/categories" outline client:load>
						Back to Categories
					</Button>
				</div>
			</div>
		)}

		{!error && (
			<div class="bg-white rounded-xl border border-zinc-200 shadow-sm overflow-hidden">
				<div class="overflow-x-auto">
					<Table client:only="react">
						<TableHead>
							<TableRow>
								<TableHeader>Title</TableHeader>
								<TableHeader>Status</TableHeader>
								<TableHeader>Updated</TableHeader>
								<TableHeader className="text-right">Action</TableHeader>
							</TableRow>
						</TableHead>
						<TableBody>
							{products.length > 0 ? (
								products.map((product) => (
									<TableRow href={`/admin/products/${product.id}`}>
										<TableCell>
											<div class="font-medium">{product.title}</div>
											<div class="text-xs text-zinc-500 truncate max-w-xs">{product.description}</div>
										</TableCell>
										<TableCell>
											{product.status === 'draft' ? (
												<Badge color="zinc" client:only="react">Draft</Badge>
											) : (
												<Badge color="blue" client:only="react">Active</Badge>
											)}
										</TableCell>
										<TableCell className="text-zinc-500 tabular-nums">
											{formatDate(product.updated_at)}
										</TableCell>
										<TableCell className="text-right">
											<a href={`/admin/products/${product.id}`} class="text-indigo-600 hover:underline font-medium">Edit</a>
										</TableCell>
									</TableRow>
								))
							) : (
								<TableRow>
									<TableCell colSpan={4} className="text-center text-zinc-500">
										No products found in this category.
									</TableCell>
								</TableRow>
							)}
						</TableBody>
					</Table>
				</div>

				{/* Pagination */}
				{meta.totalPages > 1 && (
					<div class="border-t border-zinc-200 px-6 py-4 flex items-center justify-between">
						<div class="text-xs text-zinc-500">
							Page {page} of {meta.totalPages}
						</div>
						<div class="flex gap-2">
							{hasPrev ? (
								<Button
									href={`?page=${page - 1}&q=${q}`}
									outline
									client:load
								>
									Previous
								</Button>
							) : (
								<Button plain disabled client:load>
									Previous
								</Button>
							)}
							{hasNext ? (
								<Button
									href={`?page=${page + 1}&q=${q}`}
									outline
									client:load
								>
									Next
								</Button>
							) : (
								<Button plain disabled client:load>
									Next
								</Button>
							)}
						</div>
					</div>
				)}
			</div>
		)}
	</div>
</AdminLayout>
