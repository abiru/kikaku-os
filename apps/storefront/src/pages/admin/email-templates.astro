---
export const prerender = false;

import { Alert } from'../../components/catalyst/alert-banner';
import { Badge } from'../../components/catalyst/badge';
import { Heading } from'../../components/catalyst/heading';
import AdminLayout from'../../layouts/AdminLayout.astro';
import { getApiBase } from'../../lib/api';
import { formatDate } from '../../lib/format';

const apiBase = getApiBase();

type EmailTemplate = {
	id: number;
	slug: string;
	name: string;
	subject: string;
	body_html: string;
	body_text: string;
	variables: string[];
	created_at: string;
	updated_at: string;
};

let templates: EmailTemplate[] = [];
let error = null;

if (import.meta.env.ADMIN_API_KEY) {
	try {
		const res = await fetch(`${apiBase}/admin/email-templates`, {
			headers: {
				'x-admin-key': import.meta.env.ADMIN_API_KEY
			}
		});

		if (!res.ok) {
			throw new Error(`API Error: ${res.status}`);
		}

		const data = await res.json();
		templates = data.templates || [];
	} catch (e) {
		console.error(e);
		error ='Failed to load email templates. Please check your admin key.';
	}
} else {
	error ='ADMIN_API_KEY is missing in server environment.';
}

const templateLabels: Record<string, string> = {
	'order-confirmation':'Order Confirmation',
	'shipping-notification':'Shipping Notification',
	'payment-failed':'Payment Failed'
};
---

<AdminLayout title="Email Templates - Admin">
	<div class="space-y-6">
		<div class="flex items-center justify-between">
			<div class="flex items-center gap-4">
				<Heading>Email Templates</Heading>
				<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{templates.length} templates</span>
			</div>
		</div>

		<p class="text-sm text-zinc-500">
			Customize the email notifications sent to customers. Click on a template to edit its content.
		</p>

		{error && (
			<Alert color="red" client:load>
				{error}
			</Alert>
		)}

		{/* Templates Grid */}
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{templates.length > 0 ? (
				templates.map((template) => (
					<a
						href={`/admin/email-templates/${template.slug}`}
						class="bg-white rounded-xl border border-zinc-200 shadow-sm p-6 hover:shadow-md hover:border-indigo-600/30 transition-all group"
					>
						<div class="flex items-start justify-between mb-4">
							<div class="w-10 h-10 rounded-lg bg-indigo-600/10 flex items-center justify-center">
								<svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
								</svg>
							</div>
							<svg class="w-5 h-5 text-zinc-500 group-hover:text-indigo-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
							</svg>
						</div>
						<h3 class="font-semibold text-zinc-950 mb-1">{template.name}</h3>
						<p class="text-sm text-zinc-500 mb-4 truncate">{template.subject}</p>
						<div class="flex items-center justify-between text-xs">
							<Badge color="zinc" client:only="react">{templateLabels[template.slug] || template.slug}</Badge>
							<span class="text-zinc-500 tabular-nums">{formatDate(template.updated_at, { year: 'numeric', month: '2-digit', day: '2-digit' })}</span>
						</div>
					</a>
				))
			) : !error && (
				<div class="col-span-full bg-white rounded-xl border border-zinc-200 shadow-sm p-12 text-center">
					<div class="w-16 h-16 rounded-full bg-zinc-100 flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
						</svg>
					</div>
					<h3 class="text-lg font-semibold text-zinc-950 mb-2">No email templates found</h3>
					<p class="text-sm text-zinc-500">Run database migrations to create default templates.</p>
				</div>
			)}
		</div>

		{/* Help Section */}
		<Alert color="blue" client:load>
			<h3 class="font-semibold mb-2">Using Template Variables</h3>
			<p class="text-sm mb-4">
				Templates support dynamic variables that are replaced with actual data when emails are sent.
				Use the format <code class="bg-blue-100 px-1.5 py-0.5 rounded text-xs">{"{{variable_name}}"}</code> in your templates.
			</p>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
				<div>
					<h4 class="font-medium mb-1">Order Confirmation</h4>
					<ul class="space-y-1">
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{customer_name}}"}</code> - Customer name</li>
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{order_number}}"}</code> - Order ID</li>
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{order_date}}"}</code> - Order date</li>
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{total_amount}}"}</code> - Total amount</li>
					</ul>
				</div>
				<div>
					<h4 class="font-medium mb-1">Shipping Notification</h4>
					<ul class="space-y-1">
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{carrier}}"}</code> - Shipping carrier</li>
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{tracking_number}}"}</code> - Tracking number</li>
					</ul>
				</div>
			</div>
		</Alert>
	</div>
</AdminLayout>
