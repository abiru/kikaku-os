---
export const prerender = false;

import { Alert } from'../../components/catalyst/alert-banner';
import { Badge } from'../../components/catalyst/badge';
import { Heading } from'../../components/catalyst/heading';
import AdminLayout from'../../layouts/AdminLayout.astro';
import { adminFetchList } from '../../lib/admin/fetchAdmin';
import { formatDate } from '../../lib/format';
import { t } from '../../i18n';

type EmailTemplate = {
	id: number;
	slug: string;
	name: string;
	subject: string;
	body_html: string;
	body_text: string;
	variables: string[];
	created_at: string;
	updated_at: string;
};

const { data, error: fetchError } = await adminFetchList<{ templates: EmailTemplate[] }>('/admin/email-templates');
const templates = data?.templates || [];
const error = fetchError ? t('errors.failedToLoadEmailTemplates') : null;

const templateLabels: Record<string, string> = {
	'order-confirmation': t('admin.orderConfirmation'),
	'shipping-notification': t('admin.shippingNotification'),
	'payment-failed': t('admin.paymentFailedLabel'),
};
---

<AdminLayout title={`${t('admin.emailTemplates')} - Admin`}>
	<div class="space-y-6">
		<div class="flex items-center justify-between">
			<div class="flex items-center gap-4">
				<Heading>{t('admin.emailTemplates')}</Heading>
				<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{t('admin.templatesCount', { count: templates.length })}</span>
			</div>
		</div>

		<p class="text-sm text-zinc-500">
			{t('admin.emailTemplatesDesc')}
		</p>

		{error && (
			<Alert color="red" client:load>
				{error}
			</Alert>
		)}

		{/* Templates Grid */}
		<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
			{templates.length > 0 ? (
				templates.map((template) => (
					<a
						href={`/admin/email-templates/${template.slug}`}
						class="bg-white rounded-xl border border-zinc-200 shadow-sm p-6 hover:shadow-md hover:border-indigo-600/30 transition-all group"
					>
						<div class="flex items-start justify-between mb-4">
							<div class="w-10 h-10 rounded-lg bg-indigo-600/10 flex items-center justify-center">
								<svg class="w-5 h-5 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
								</svg>
							</div>
							<svg class="w-5 h-5 text-zinc-500 group-hover:text-indigo-600 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
							</svg>
						</div>
						<h3 class="font-semibold text-zinc-950 mb-1">{template.name}</h3>
						<p class="text-sm text-zinc-500 mb-4 truncate">{template.subject}</p>
						<div class="flex items-center justify-between text-xs">
							<Badge color="zinc" client:only="react">{templateLabels[template.slug] || template.slug}</Badge>
							<span class="text-zinc-500 tabular-nums">{formatDate(template.updated_at, 'DATE_SHORT')}</span>
						</div>
					</a>
				))
			) : !error && (
				<div class="col-span-full bg-white rounded-xl border border-zinc-200 shadow-sm p-12 text-center">
					<div class="w-16 h-16 rounded-full bg-zinc-100 flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-zinc-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
						</svg>
					</div>
					<h3 class="typo-h3 text-zinc-950 mb-2">{t('admin.noTemplatesFound')}</h3>
					<p class="text-sm text-zinc-500">{t('admin.runMigrations')}</p>
				</div>
			)}
		</div>

		{/* Help Section */}
		<Alert color="blue" client:load>
			<h3 class="font-semibold mb-2">{t('admin.usingTemplateVariables')}</h3>
			<p class="text-sm mb-4">
				{t('admin.templateVariablesDesc')}
			</p>
			<div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
				<div>
					<h4 class="font-medium mb-1">{t('admin.orderConfirmation')}</h4>
					<ul class="space-y-1">
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{customer_name}}"}</code> - {t('admin.customerNameVar')}</li>
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{order_number}}"}</code> - {t('admin.orderId')}</li>
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{order_date}}"}</code> - {t('admin.orderDateLabel')}</li>
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{total_amount}}"}</code> - {t('admin.totalAmount')}</li>
					</ul>
				</div>
				<div>
					<h4 class="font-medium mb-1">{t('admin.shippingNotification')}</h4>
					<ul class="space-y-1">
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{carrier}}"}</code> - {t('admin.shippingCarrier')}</li>
						<li><code class="bg-blue-100 px-1 rounded text-xs">{"{{tracking_number}}"}</code> - {t('admin.trackingNumber')}</li>
					</ul>
				</div>
			</div>
		</Alert>
	</div>
</AdminLayout>
