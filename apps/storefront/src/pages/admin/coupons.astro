---
export const prerender = false;

import { Badge } from '../../components/catalyst/badge';
import { Button } from '../../components/catalyst/button';
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getApiBase } from '../../lib/api';

const apiBase = getApiBase();
const q = Astro.url.searchParams.get('q') || '';
const status = Astro.url.searchParams.get('status') || 'all';
const page = Number(Astro.url.searchParams.get('page') || '1');
const perPage = 20;

type Coupon = {
	id: number;
	code: string;
	type: string;
	value: number;
	currency: string;
	min_order_amount: number;
	max_uses: number | null;
	uses_per_customer: number;
	current_uses: number;
	status: string;
	starts_at: string | null;
	expires_at: string | null;
	created_at: string;
	updated_at: string;
};

let coupons: Coupon[] = [];
let meta = { totalCount: 0, totalPages: 1 };
let error = null;

if (import.meta.env.ADMIN_API_KEY) {
	try {
		const query = new URLSearchParams({
			q,
			status,
			page: page.toString(),
			perPage: perPage.toString()
		});

		const res = await fetch(`${apiBase}/admin/coupons?${query}`, {
			headers: {
				'x-admin-key': import.meta.env.ADMIN_API_KEY
			}
		});

		if (!res.ok) {
			throw new Error(`API Error: ${res.status}`);
		}

		const data = await res.json();
		coupons = data.coupons || [];
		meta = data.meta || meta;
	} catch (e) {
		console.error(e);
		error = 'Failed to load coupons. Please check your admin key.';
	}
} else {
	error = 'ADMIN_API_KEY is missing in server environment.';
}

const hasNext = page < meta.totalPages;
const hasPrev = page > 1;

const formatValue = (coupon: Coupon) => {
	if (coupon.type === 'percentage') {
		return `${coupon.value}%`;
	}
	return new Intl.NumberFormat('ja-JP', {
		style: 'currency',
		currency: coupon.currency,
		minimumFractionDigits: 0
	}).format(coupon.value);
};

const formatDate = (dateStr: string | null) => {
	if (!dateStr) return '-';
	return new Date(dateStr).toLocaleDateString('ja-JP');
};

const isExpired = (coupon: Coupon) => {
	if (!coupon.expires_at) return false;
	return new Date(coupon.expires_at) < new Date();
};
---

<AdminLayout title="Coupons - Admin">
	<div class="space-y-6">
		<div class="flex items-center justify-between">
			<div class="flex items-center gap-4">
				<h1 class="text-2xl font-semibold text-zinc-950 dark:text-white">Coupons</h1>
				<span class="text-xs text-zinc-500 dark:text-zinc-400 bg-zinc-100 dark:bg-zinc-800 px-2 py-1 rounded-full">{meta.totalCount} items</span>
			</div>
			<Button href="/admin/coupons/new" size="sm" variant="primary">
				+ New Coupon
			</Button>
		</div>
			{/* Search & Filter */}
			<div class="mb-6 flex flex-col sm:flex-row gap-4">
				<form method="get" class="relative flex-1 max-w-md">
					<input
						type="search"
						name="q"
						value={q}
						placeholder="Search by code..."
						class="w-full pl-10 pr-4 py-2 bg-white border border-zinc-200 dark:border-zinc-800 rounded-lg text-sm text-[#1d1d1f] focus:outline-none focus:ring-2 focus:ring-indigo-600/20 focus:border-indigo-600 transition-all shadow-sm"
					/>
					<input type="hidden" name="status" value={status} />
					<svg
						class="absolute left-3 top-2.5 h-4 w-4 text-gray-400"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
					</svg>
				</form>
				<div class="flex gap-2">
					<a
						href={`?q=${q}&status=all`}
						class={`px-4 py-2 text-sm font-medium rounded-lg transition-colors ${status === 'all' ? 'bg-indigo-600 dark:bg-indigo-500 text-white' : 'bg-white text-[#1d1d1f] border border-zinc-200 dark:border-zinc-800 hover:bg-zinc-50 dark:bg-zinc-800/50'}`}
					>
						All
					</a>
					<a
						href={`?q=${q}&status=active`}
						class={`px-4 py-2 text-sm font-medium rounded-lg transition-colors ${status === 'active' ? 'bg-indigo-600 dark:bg-indigo-500 text-white' : 'bg-white text-[#1d1d1f] border border-zinc-200 dark:border-zinc-800 hover:bg-zinc-50 dark:bg-zinc-800/50'}`}
					>
						Active
					</a>
					<a
						href={`?q=${q}&status=inactive`}
						class={`px-4 py-2 text-sm font-medium rounded-lg transition-colors ${status === 'inactive' ? 'bg-indigo-600 dark:bg-indigo-500 text-white' : 'bg-white text-[#1d1d1f] border border-zinc-200 dark:border-zinc-800 hover:bg-zinc-50 dark:bg-zinc-800/50'}`}
					>
						Inactive
					</a>
				</div>
			</div>

			{error && (
				<div class="bg-red-50 border border-red-200 text-red-600 px-4 py-3 rounded-lg mb-6 text-sm">
					{error}
				</div>
			)}

			{/* Coupon Table */}
			<div class="bg-white rounded-xl border border-zinc-200 dark:border-zinc-800 shadow-sm overflow-hidden">
				<div class="overflow-x-auto">
					<table class="w-full text-left text-sm text-[#1d1d1f]">
						<thead class="bg-zinc-50 dark:bg-zinc-800/50 border-b border-zinc-200 dark:border-zinc-800">
							<tr>
								<th class="px-6 py-3 font-medium text-zinc-500 dark:text-zinc-400">Code</th>
								<th class="px-6 py-3 font-medium text-zinc-500 dark:text-zinc-400">Type</th>
								<th class="px-6 py-3 font-medium text-zinc-500 dark:text-zinc-400">Value</th>
								<th class="px-6 py-3 font-medium text-zinc-500 dark:text-zinc-400">Status</th>
								<th class="px-6 py-3 font-medium text-zinc-500 dark:text-zinc-400">Usage</th>
								<th class="px-6 py-3 font-medium text-zinc-500 dark:text-zinc-400">Expires</th>
								<th class="px-6 py-3 font-medium text-zinc-500 dark:text-zinc-400 text-right">Action</th>
							</tr>
						</thead>
						<tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
							{coupons.length > 0 ? (
								coupons.map((coupon) => (
									<tr class="hover:bg-zinc-50 dark:bg-zinc-800/50 transition-colors group">
										<td class="px-6 py-4">
											<div class="font-mono font-medium">{coupon.code}</div>
											{coupon.min_order_amount > 0 && (
												<div class="text-xs text-zinc-500 dark:text-zinc-400">
													Min: {new Intl.NumberFormat('ja-JP', { style: 'currency', currency: coupon.currency, minimumFractionDigits: 0 }).format(coupon.min_order_amount)}
												</div>
											)}
										</td>
										<td class="px-6 py-4">
											<Badge color="zinc" client:only="react">
												{coupon.type === 'percentage' ? 'Percentage' : 'Fixed'}
											</Badge>
										</td>
										<td class="px-6 py-4 font-medium tabular-nums">
											{formatValue(coupon)}
										</td>
										<td class="px-6 py-4">
											{isExpired(coupon) ? (
												<Badge color="amber" client:only="react">Expired</Badge>
											) : coupon.status === 'active' ? (
												<Badge color="lime" client:only="react">Active</Badge>
											) : (
												<Badge color="zinc" client:only="react">Inactive</Badge>
											)}
										</td>
										<td class="px-6 py-4 text-zinc-500 dark:text-zinc-400 tabular-nums">
											{coupon.current_uses}{coupon.max_uses ? ` / ${coupon.max_uses}` : ''}
										</td>
										<td class="px-6 py-4 text-zinc-500 dark:text-zinc-400 tabular-nums">
											{formatDate(coupon.expires_at)}
										</td>
										<td class="px-6 py-4 text-right">
											<a href={`/admin/coupons/${coupon.id}`} class="text-indigo-600 dark:text-indigo-400 hover:underline font-medium">Edit</a>
										</td>
									</tr>
								))
							) : (
								<tr>
									<td colspan="7" class="px-6 py-12 text-center text-zinc-500 dark:text-zinc-400">
										No coupons found.
									</td>
								</tr>
							)}
						</tbody>
					</table>
				</div>

				{/* Pagination */}
				<div class="border-t border-zinc-200 dark:border-zinc-800 px-6 py-4 flex items-center justify-between">
					<div class="text-xs text-zinc-500 dark:text-zinc-400">
						Page {page} of {meta.totalPages}
					</div>
					<div class="flex gap-2">
						<Button
							href={hasPrev ? `?page=${page - 1}&q=${q}&status=${status}` : '#'}
							disabled={!hasPrev}
							size="sm"
							variant="secondary"
						>
							Previous
						</Button>
						<Button
							href={hasNext ? `?page=${page + 1}&q=${q}&status=${status}` : '#'}
							disabled={!hasNext}
							size="sm"
							variant="secondary"
						>
							Next
						</Button>
					</div>
				</div>
			</div>
	</div>
</AdminLayout>
