---
export const prerender = false;

import { Alert } from '../../components/catalyst/alert-banner';
import { Button } from '../../components/catalyst/button';
import { Heading } from '../../components/catalyst/heading';
import AdminLayout from '../../layouts/AdminLayout.astro';
import { getApiBase } from '../../lib/api';
import PagesTable from '../../components/admin/PagesTable';

const apiBase = getApiBase();
const q = Astro.url.searchParams.get('q') || '';
const status = Astro.url.searchParams.get('status') || 'all';
const page = Number(Astro.url.searchParams.get('page') || '1');
const perPage = 20;

type Page = {
	id: number;
	slug: string;
	title: string;
	meta_title: string | null;
	meta_description: string | null;
	body: string;
	status: string;
	created_at: string;
	updated_at: string;
};

let pages: Page[] = [];
let meta = { totalCount: 0, totalPages: 1 };
let error = null;

if (import.meta.env.ADMIN_API_KEY) {
	try {
		const query = new URLSearchParams({
			q,
			status,
			page: page.toString(),
			perPage: perPage.toString()
		});

		const res = await fetch(`${apiBase}/admin/pages?${query}`, {
			headers: {
				'x-admin-key': import.meta.env.ADMIN_API_KEY
			}
		});

		if (!res.ok) {
			throw new Error(`API Error: ${res.status}`);
		}

		const data = await res.json();
		pages = data.pages || [];
		meta = data.meta || meta;
	} catch (e) {
		console.error(e);
		error = 'Failed to load pages. Please check your admin key.';
	}
} else {
	error = 'ADMIN_API_KEY is missing in server environment.';
}

const hasNext = page < meta.totalPages;
const hasPrev = page > 1;

const CORE_SLUGS = ['terms', 'privacy', 'refund'];
---

<AdminLayout title="Pages - Admin">
	<div class="space-y-6">
		<div class="flex items-center justify-between">
			<div class="flex items-center gap-4">
				<Heading>Pages</Heading>
				<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{meta.totalCount} items</span>
			</div>
			<Button href="/admin/pages/new" color="indigo" client:load>
				+ New Page
			</Button>
		</div>

		{/* Search & Filter */}
		<div class="mb-6 flex flex-col sm:flex-row gap-4">
			<form method="get" class="relative flex-1 max-w-md">
				<input
					type="search"
					name="q"
					value={q}
					placeholder="Search by title or slug..."
					class="w-full pl-10 pr-4 py-2 bg-white border border-zinc-200 rounded-lg text-sm text-zinc-950 focus:outline-none focus:ring-2 focus:ring-indigo-600/20 focus:border-indigo-600 transition-all shadow-sm"
				/>
				<input type="hidden" name="status" value={status} />
				<svg
					class="absolute left-3 top-2.5 h-4 w-4 text-zinc-400"
					fill="none"
					stroke="currentColor"
					viewBox="0 0 24 24"
				>
					<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
				</svg>
			</form>
			<div class="flex gap-2">
				<a
					href={`?q=${q}&status=all`}
					class={`px-4 py-2 text-sm font-medium rounded-lg transition-colors ${status === 'all' ? 'bg-indigo-600 text-white' : 'bg-white text-zinc-950 border border-zinc-200 hover:bg-zinc-50'}`}
				>
					All
				</a>
				<a
					href={`?q=${q}&status=published`}
					class={`px-4 py-2 text-sm font-medium rounded-lg transition-colors ${status === 'published' ? 'bg-indigo-600 text-white' : 'bg-white text-zinc-950 border border-zinc-200 hover:bg-zinc-50'}`}
				>
					Published
				</a>
				<a
					href={`?q=${q}&status=draft`}
					class={`px-4 py-2 text-sm font-medium rounded-lg transition-colors ${status === 'draft' ? 'bg-indigo-600 text-white' : 'bg-white text-zinc-950 border border-zinc-200 hover:bg-zinc-50'}`}
				>
					Draft
				</a>
			</div>
		</div>

		{error && (
			<Alert color="red" client:load>
				{error}
			</Alert>
		)}

		{/* Pages Table */}
		<PagesTable client:only="react" pages={pages} coreSlugs={CORE_SLUGS} />

		{/* Pagination */}
		<div class="flex items-center justify-between">
			<div class="text-xs text-zinc-500">
				Page {page} of {meta.totalPages}
			</div>
			<div class="flex gap-2">
				{hasPrev ? (
					<Button
						href={`?page=${page - 1}&q=${q}&status=${status}`}
						outline
						client:load
					>
						Previous
					</Button>
				) : (
					<Button
						plain
						disabled
						client:load
					>
						Previous
					</Button>
				)}
				{hasNext ? (
					<Button
						href={`?page=${page + 1}&q=${q}&status=${status}`}
						outline
						client:load
					>
						Next
					</Button>
				) : (
					<Button
						plain
						disabled
						client:load
					>
						Next
					</Button>
				)}
			</div>
		</div>
	</div>
</AdminLayout>
