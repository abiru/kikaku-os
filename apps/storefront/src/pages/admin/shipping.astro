---
export const prerender = false;

import { Alert } from '../../components/catalyst/alert-banner';
import AdminLayout from '../../layouts/AdminLayout.astro';
import { adminFetchList } from '../../lib/admin/fetchAdmin';
import { Heading } from '../../components/catalyst/heading';
import ShippingPage from '../../components/admin/ShippingPage';
import { t } from '../../i18n';

type ReadyToShipOrder = {
	order_id: number;
	customer_email: string | null;
	total: number;
	paid_at: string | null;
	fulfillment_id: number | null;
	fulfillment_status: string | null;
};

const { data, error: fetchError } = await adminFetchList<{ orders: ReadyToShipOrder[] }>('/admin/orders/ready-to-ship');
const orders = data?.orders || [];
const error: string | null = fetchError ? t('errors.failedToLoadShipping') : null;

---

<AdminLayout title={`${t('admin.shipping')} - Admin`}>
	<div class="space-y-6">
		<div class="flex items-center gap-4">
			<Heading>{t('admin.shipping')}</Heading>
			<span class="text-xs text-white bg-indigo-600 px-2 py-1 rounded-full font-medium">{t('admin.readyCount', { count: orders.length })}</span>
		</div>
		{error && (
			<Alert color="red" client:load>
				{error}
			</Alert>
		)}

		<ShippingPage
			client:only="react"
			orders={orders}
		/>
	</div>
</AdminLayout>
