---
export const prerender = false;

import AdminLayout from '../../layouts/AdminLayout.astro';
import { getApiBase } from '../../lib/api';
import CustomersTable from '../../components/admin/CustomersTable';

const apiBase = getApiBase();
const q = Astro.url.searchParams.get('q') || '';
const page = Number(Astro.url.searchParams.get('page') || '1');
const perPage = 20;

type Customer = {
	id: number;
	name: string;
	email: string | null;
	metadata: string | null;
	created_at: string;
	updated_at: string;
	order_count: number;
	total_spent: number;
	last_order_date: string | null;
};

let customers: Customer[] = [];
let meta = { totalCount: 0, totalPages: 1 };
let error: string | null = null;

// SSR Data Fetching
if (import.meta.env.ADMIN_API_KEY) {
	try {
		const query = new URLSearchParams({
			q,
			page: page.toString(),
			perPage: perPage.toString()
		});

		const res = await fetch(`${apiBase}/admin/customers?${query}`, {
			headers: {
				'x-admin-key': import.meta.env.ADMIN_API_KEY
			}
		});

		if (!res.ok) {
			throw new Error(`API Error: ${res.status}`);
		}

		const data = await res.json();
		customers = data.customers || [];
		meta = data.meta || meta;
	} catch (e) {
		console.error(e);
		error = 'Failed to load customers. Please check your admin key.';
	}
} else {
	error = 'ADMIN_API_KEY is missing in server environment.';
}

---

<AdminLayout title="Customers - Admin">
	<div class="space-y-6">
		<div class="flex items-center gap-4">
			<h1 class="text-2xl font-semibold text-zinc-950 dark:text-white">Customers</h1>
			<span class="text-xs text-zinc-500 dark:text-zinc-400 bg-zinc-100 dark:bg-zinc-800 px-2 py-1 rounded-full">{meta.totalCount} customers</span>
		</div>
			{/* Search Bar */}
			<div class="mb-6">
				<form method="get" class="relative max-w-md">
					<input
						type="search"
						name="q"
						value={q}
						placeholder="Search by name or email..."
						class="w-full pl-10 pr-4 py-2 bg-white dark:bg-zinc-900 border border-zinc-200 dark:border-zinc-700 rounded-lg text-sm text-zinc-950 dark:text-white placeholder:text-zinc-500 dark:placeholder:text-zinc-400 focus:outline-none focus:ring-2 focus:ring-indigo-600/20 focus:border-indigo-600 transition-all shadow-sm"
					/>
					<svg
						class="absolute left-3 top-2.5 h-4 w-4 text-zinc-400 dark:text-zinc-500"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
					>
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
					</svg>
				</form>
			</div>

			{error && (
				<div class="bg-red-50 dark:bg-red-950/50 border border-red-200 dark:border-red-800 text-red-600 dark:text-red-400 px-4 py-3 rounded-lg mb-6 text-sm">
					{error}
				</div>
			)}

			<CustomersTable
				customers={customers}
				currentPage={page}
				totalPages={meta.totalPages}
				searchQuery={q}
				client:load
			/>
	</div>
</AdminLayout>
