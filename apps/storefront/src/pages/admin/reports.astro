---
export const prerender = false;

import { Alert } from '../../components/catalyst/alert-banner';
import AdminLayout from '../../layouts/AdminLayout.astro';
import { Heading } from '../../components/catalyst/heading';
import { Pagination, PaginationPrevious, PaginationNext } from '../../components/catalyst/pagination';
import { getApiBase } from '../../lib/api';
import ReportsTable from '../../components/admin/ReportsTable';

const apiBase = getApiBase();
const page = Number(Astro.url.searchParams.get('page') || '1');
const perPage = 20;

let reports: any[] = [];
let meta = { totalCount: 0, totalPages: 1 };
let error = null;

if (import.meta.env.ADMIN_API_KEY) {
	try {
		const query = new URLSearchParams({
			page: page.toString(),
			perPage: perPage.toString()
		});

		const res = await fetch(`${apiBase}/admin/reports?${query}`, {
			headers: { 'x-admin-key': import.meta.env.ADMIN_API_KEY }
		});

		if (!res.ok) throw new Error(`API Error: ${res.status}`);

		const data = await res.json();
		reports = data.reports || [];
		meta = data.meta || meta;
	} catch (e) {
		console.error(e);
		error = 'Failed to load reports.';
	}
} else {
	error = 'ADMIN_API_KEY is missing.';
}

const hasNext = page < meta.totalPages;
const hasPrev = page > 1;

// Helper to construct secure download link (via document ID)
const apiKey = import.meta.env.ADMIN_API_KEY;
const getReportLink = (id: number) => {
	return `${apiBase}/admin/documents/${id}/download?x-admin-key=${encodeURIComponent(apiKey || '')}`;
};

// Add downloadUrl to each report
const reportsWithUrls = reports.map(r => ({
	...r,
	downloadUrl: getReportLink(r.id)
}));
---

<AdminLayout title="Daily Reports - Admin">
	<div class="space-y-6">
		<div class="flex items-center gap-4">
			<Heading>Reports</Heading>
			<span class="text-xs text-zinc-500 bg-zinc-100 px-2 py-1 rounded-full">{meta.totalCount} reports</span>
		</div>

		{error && (
			<Alert color="red" client:load>
				{error}
			</Alert>
		)}

		<ReportsTable client:only="react" reports={reportsWithUrls} />

		{/* Pagination */}
		<div class="flex items-center justify-between">
			<div class="text-xs text-zinc-500">
				Page {page} of {meta.totalPages}
			</div>
			<Pagination client:load>
				<PaginationPrevious href={hasPrev ? `?page=${page - 1}` : null} />
				<PaginationNext href={hasNext ? `?page=${page + 1}` : null} />
			</Pagination>
		</div>
	</div>
</AdminLayout>
