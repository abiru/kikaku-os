---
export const prerender = false;

import AdminLayout from '../../layouts/AdminLayout.astro';
import Button from '../../components/Button.astro';
import { getApiBase } from '../../lib/api';

const apiBase = getApiBase();
const page = Number(Astro.url.searchParams.get('page') || '1');
const perPage = 20;

let reports: any[] = [];
let meta = { totalCount: 0, totalPages: 1 };
let error = null;

if (import.meta.env.ADMIN_API_KEY) {
	try {
		const query = new URLSearchParams({
			page: page.toString(),
			perPage: perPage.toString()
		});
		
		const res = await fetch(`${apiBase}/admin/reports?${query}`, {
			headers: { 'x-admin-key': import.meta.env.ADMIN_API_KEY }
		});

		if (!res.ok) throw new Error(`API Error: ${res.status}`);

		const data = await res.json();
		reports = data.reports || [];
		meta = data.meta || meta;
	} catch (e) {
		console.error(e);
		error = 'Failed to load reports.';
	}
} else {
	error = 'ADMIN_API_KEY is missing.';
}

const hasNext = page < meta.totalPages;
const hasPrev = page > 1;

// Helper to construct secure download link (via document ID)
const apiKey = import.meta.env.ADMIN_API_KEY;
const getReportLink = (id: number) => {
	return `${apiBase}/admin/documents/${id}/download?x-admin-key=${encodeURIComponent(apiKey || '')}`;
};
---

<AdminLayout title="Daily Reports - Admin">
	<div class="space-y-6">
		<div class="flex items-center gap-4">
			<h1 class="text-2xl font-semibold text-zinc-950 dark:text-white">Reports</h1>
			<span class="text-xs text-zinc-500 dark:text-zinc-400 bg-zinc-100 dark:bg-zinc-800 px-2 py-1 rounded-full">{meta.totalCount} reports</span>
		</div>
			{error && (
				<div class="bg-red-50 dark:bg-red-950/50 border border-red-200 dark:border-red-800 text-red-600 dark:text-red-400 px-4 py-3 rounded-lg mb-6 text-sm">
					{error}
				</div>
			)}

			<div class="bg-white dark:bg-zinc-900 rounded-xl border border-zinc-200 dark:border-zinc-800 shadow-sm overflow-hidden">
				<div class="overflow-x-auto">
					<table class="w-full text-left text-sm text-zinc-950 dark:text-white">
						<thead class="bg-zinc-50 dark:bg-zinc-800/50 border-b border-zinc-200 dark:border-zinc-800">
							<tr>
								<th class="px-6 py-3 font-medium text-zinc-500 dark:text-zinc-400">Date</th>
								<th class="px-6 py-3 font-medium text-zinc-500 dark:text-zinc-400">Type</th>
								<th class="px-6 py-3 font-medium text-zinc-500 dark:text-zinc-400">Generated At</th>
								<th class="px-6 py-3 font-medium text-zinc-500 dark:text-zinc-400 text-right">Action</th>
							</tr>
						</thead>
						<tbody class="divide-y divide-zinc-100 dark:divide-zinc-800">
							{reports.length > 0 ? (
								reports.map((report) => (
									<tr class="hover:bg-zinc-50 dark:hover:bg-zinc-800/50 transition-colors">
										<td class="px-6 py-4 font-medium">
											{new Date(report.date).toLocaleDateString()}
										</td>
										<td class="px-6 py-4 text-zinc-500 dark:text-zinc-400">
											Daily Close
										</td>
										<td class="px-6 py-4 text-zinc-500 dark:text-zinc-400 tabular-nums">
											{new Date(report.created_at).toLocaleString()}
										</td>
										<td class="px-6 py-4 text-right">
											<a
												href={getReportLink(report.id)}
												target="_blank"
												rel="noopener noreferrer"
												class="text-indigo-600 dark:text-indigo-400 hover:underline font-medium"
											>
												View Report
											</a>
										</td>
									</tr>
								))
							) : (
								<tr>
									<td colspan="4" class="px-6 py-12 text-center text-zinc-500 dark:text-zinc-400">
										No reports found.
									</td>
								</tr>
							)}
						</tbody>
					</table>
				</div>

				{/* Pagination */}
				<div class="border-t border-zinc-200 dark:border-zinc-800 px-6 py-4 flex items-center justify-between">
					<div class="text-xs text-zinc-500 dark:text-zinc-400">
						Page {page} of {meta.totalPages}
					</div>
					<div class="flex gap-2">
						<Button
							href={hasPrev ? `?page=${page - 1}` : '#'}
							disabled={!hasPrev}
							size="sm"
							variant="secondary"
						>
							Previous
						</Button>
						<Button
							href={hasNext ? `?page=${page + 1}` : '#'}
							disabled={!hasNext}
							size="sm"
							variant="secondary"
						>
							Next
						</Button>
					</div>
				</div>
			</div>
	</div>
</AdminLayout>
