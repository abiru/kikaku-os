---
import Layout from '../layouts/Layout.astro';
import Container from '../components/Container.astro';
import { t } from '../i18n';
---

<Layout title={`${t('errors.serverErrorCode')} - ${t('errors.serverError')}`}>
	<div class="min-h-[60vh] flex items-center justify-center py-20">
		<Container>
			<div class="text-center max-w-lg mx-auto">
				<p class="text-[80px] md:text-[120px] font-bold text-[#d2d2d7] leading-none select-none">
					{t('errors.serverErrorCode')}
				</p>
				<h1 class="mt-4 text-[28px] md:text-[32px] font-semibold text-[#1d1d1f] tracking-tight">
					{t('errors.serverError')}
				</h1>
				<p class="mt-3 text-[17px] text-[#6e6e73] leading-relaxed">
					{t('errors.serverErrorMessage')}
				</p>
				<div class="mt-8 flex flex-col sm:flex-row items-center justify-center gap-3">
					<a
						href="/"
						class="inline-flex items-center gap-2 px-6 py-3 bg-[#0071e3] text-white text-[15px] font-medium rounded-full hover:bg-[#0077ED] transition-colors"
					>
						{t('errors.backToHome')}
					</a>
					<button
						onclick="window.location.reload()"
						class="inline-flex items-center gap-2 px-6 py-3 border border-[#d2d2d7] text-[#1d1d1f] text-[15px] font-medium rounded-full hover:bg-[#f5f5f7] transition-colors"
					>
						{t('errors.reload')}
					</button>
				</div>
			</div>
		</Container>
	</div>
</Layout>
