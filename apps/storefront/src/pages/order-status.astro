---
export const prerender = false;

import Container from '../components/Container.astro';
import Layout from '../layouts/Layout.astro';
import { t } from '../i18n';
---

<Layout title={t('pages.orderStatus.pageTitle')}>
	<div class="bg-white min-h-screen">
		<section class="pt-24 pb-20 md:pt-32 md:pb-28">
			<Container class="max-w-3xl">
				<h1 class="text-4xl md:text-5xl font-bold tracking-tight text-primary text-center">
					{t('pages.orderStatus.title')}
				</h1>
				<p class="mt-6 text-center text-secondary text-lg">
					{t('pages.orderStatus.description')}
				</p>

				<div class="mt-10 rounded-2xl border border-gray-200 bg-white p-8 shadow-sm space-y-6">
					<div class="space-y-3">
						<h2 class="text-xl font-semibold text-primary">{t('pages.orderStatus.searchByToken')}</h2>
						<p class="text-secondary">
							{t('pages.orderStatus.searchByTokenDescription')}
						</p>
						<form id="order-search-form" class="space-y-4">
							<div>
								<label for="order-token" class="block text-sm font-medium text-primary mb-1">
									{t('pages.orderStatus.orderTokenLabel')}
								</label>
								<input
									type="text"
									id="order-token"
									name="token"
									required
									placeholder={t('pages.orderStatus.orderTokenPlaceholder')}
									class="w-full rounded-lg border border-gray-300 px-4 py-2.5 text-sm text-primary placeholder:text-gray-400 focus:border-brand focus:ring-2 focus:ring-brand/20 focus:outline-none"
								/>
							</div>
							<button
								type="submit"
								class="inline-flex items-center rounded-full bg-brand px-6 py-2.5 text-sm font-medium text-white hover:bg-brand-hover transition-colors"
							>
								{t('pages.orderStatus.searchButton')}
							</button>
						</form>
					</div>

					<div class="space-y-3 pt-2 border-t border-gray-100">
						<h2 class="text-xl font-semibold text-primary">{t('pages.orderStatus.checkViaAccount')}</h2>
						<p class="text-secondary">
							{t('pages.orderStatus.checkViaAccountDescription')}
						</p>
						<div class="flex flex-wrap gap-3">
							<a href="/account/orders" class="inline-flex items-center rounded-full bg-brand px-5 py-2.5 text-sm font-medium text-white hover:bg-brand-hover">
								{t('pages.orderStatus.viewOrderHistory')}
							</a>
							<a href="/sign-in" class="inline-flex items-center rounded-full border border-gray-300 px-5 py-2.5 text-sm font-medium text-primary hover:bg-gray-50">
								{t('pages.orderStatus.login')}
							</a>
						</div>
					</div>

					<div class="space-y-2 pt-2 border-t border-gray-100">
						<h3 class="text-lg font-semibold text-primary">{t('pages.orderStatus.needHelp')}</h3>
						<p class="text-secondary">
							{t('pages.orderStatus.needHelpDescription')}
						</p>
						<a href="/contact" class="inline-flex items-center text-sm font-medium text-brand hover:underline">
							{t('pages.orderStatus.contactLink')}
						</a>
					</div>
				</div>
			</Container>
		</section>
	</div>
<script>
	const form = document.getElementById('order-search-form');
	form?.addEventListener('submit', (e) => {
		e.preventDefault();
		const input = document.getElementById('order-token') as HTMLInputElement;
		const token = input?.value.trim();
		if (token) {
			window.location.href = `/orders/${encodeURIComponent(token)}`;
		}
	});
</script>
</Layout>
